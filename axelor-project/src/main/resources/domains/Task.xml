<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.0.xsd">

	<module name="project" package="com.axelor.apps.project.db"/>

	
	<entity name="Task" strategy="JOINED" extends="com.axelor.team.db.TeamTask">
	
		
  		<integer name="importId"/>
		<many-to-one name="project" ref="com.axelor.apps.project.db.Project" title="Project"/>
	  	
	  	<many-to-one name="parentTask" ref="com.axelor.apps.project.db.Task" title="Parent task"/>
	 	<many-to-one name="category" ref="com.axelor.apps.project.db.ProjectCategory" title="Category"/>
    	<integer name="progressSelect" title="Progress" selection="project.task.progress.select" help="true"/>
	  
		<many-to-many name="membersUserSet" ref="com.axelor.auth.db.User" title="Membres"/>
		<string name="description" title="Description" large="true"/>
	  
	 <track>
	 	<field name="name"/>
	 	<field name="project"/>
	 	<field name="parentTask"/>
	 	<field name="category"/>
	 	<field name="progressSelect"/>
	 	<field name="membersUserSet"/>
	 	<field name="description"/>
	 	<message if="true" on="CREATE">Task created</message>
	 	<message if="true" on ="UPDATE">Task updated</message>
	 </track>
	  
	</entity>
  </domain-models>
<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_3.0.xsd">

  <module name="project" package="com.axelor.apps.project.db"/>

  <entity name="ProjectTask" cachable="true">
      
      <integer name="importId"/>
      <many-to-one name="project" ref="com.axelor.apps.project.db.ProjectTask" title="Project"/>
	  <string name="name" title="Name" required="true"/>
	  <many-to-one name="assignedTo" ref="com.axelor.auth.db.User" title="Assigned to"/>
	  <string name="taskTypeSelect" selection="project.task.type.select" title="Type" />
	  <integer name="statusSelect" selection="project.task.status.select" title="Status" default="1"/>
	  <integer name="invoiceStatusSelect" selection="project.task.invoice.status.select" title="Invoicing Status" default="1"/>
	  
	  <string name="code" title="Code" />
	  <boolean name="businessProject" title="Business Project"/>
	  <many-to-many name="membersSet" ref="com.axelor.auth.db.User" title="Membres"/>
	  <many-to-one name="customer" ref="com.axelor.apps.base.db.Partner" title="Customer"/>
	  <one-to-many name="taskList" ref="com.axelor.apps.project.db.ProjectTask" title="Tasks" mappedBy="project"/>
	  
	  <string name="description" title="Description" large="true"/>
	  
	  <date name="fromDate" title="From Date"/>
	  <date name="toDate" title="To Date"/>
	  <date name="dueDate" title="Due Date"/>
	  
	  <decimal name="duration" title="Duration"/>
	  <decimal name="timeSpent" title="Time Spent"/>
	  <decimal name="leadDelay" title="Lead/Delay"/>
	  
	  <integer name="progress" title="Progress (%)" selection="grade.0.up.to.100.select"/>
	  
	  <many-to-one name="company" ref="com.axelor.apps.base.db.Company" required="true" title="Company"/>
	  <boolean name="invoiceable"/>
	  <boolean name="invoiced" readonly="true"/>
	  
	  <string name="fullName" namecolumn="true" search="name,code" title="Name">
	       <![CDATA[
	       		if(code != null && !code.isEmpty()) { return code + " " + name; }
	       		return name;
	       ]]>
	  </string>
	          
  </entity>
  
</domain-models>

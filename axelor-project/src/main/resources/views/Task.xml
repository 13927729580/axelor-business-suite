<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	
	<grid name="tasks-grid" title="Tasks" model="com.axelor.apps.project.db.Task">
		<field name="name"/>
		<field name="description"/>
		<field name="sequence"/>
		<field name="membersUserSet"/>
		<field name="fromDate"/>
		<field name="toDate"/>
		<field name="status"/>
		<field name="priority"/>
	</grid>
	
	<form title="Tasks" name="tasks-form"  model="com.axelor.apps.project.db.Task">
		<panel>
			<field name="sequence" readonly="true"/>
			<spacer/>
			<field name="name"/>
			<spacer/>
			<field name="description" colSpan="12"/>
			<field name="membersUserSet"/>
			<field name="parentTask"/>
			<field name="fromDate"/>
			<field name="toDate"/>
			<field name="dueDate"/>
			<field name="status"/>
			<field name="priority"/>
		</panel>
		
	</form>
	
</object-views>
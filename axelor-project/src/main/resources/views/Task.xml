<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	
	<grid name="tasks-grid" title="Tasks" model="com.axelor.apps.project.db.Task">
		<field name="name"/>
		<field name="description"/>
		<field name="sequence"/>
		<field name="membersUserSet"/>
		<field name="fromDate"/>
		<field name="toDate"/>
		<field name="status"/>
		<field name="priority"/>
		<field name="category"/>
	</grid>
	
	<form title="Tasks" name="tasks-form"  model="com.axelor.apps.project.db.Task" onLoad="action-task-attrs-project-configurations">
		<toolbar>
			<button name="grabEvent" help="Assign to me" icon="fa-suitcase" />
			<button name="start" help="Start" icon="fa-play"/>
			<button name="accept" help="Validate" icon="fa-check"/>
			<button name="stop" help="Finish" icon="fa-power-off"/>
		</toolbar>
		
		<panel name="main" colSpan="12">
			<field name="sequence" title="Ticket NÂ°" colSpan="3" readonly="true"/>
			<field name="name" colSpan="9" placeholder="Subject"/>
			<field name="parentTask" colSpan="6"/>
			<field name="project" colSpan="6" onChange="action-task-attrs-project-configurations" required="true"/>
		</panel>
		
		
		<panel>
			<panel name="context" title="Context" colSpan="12">
				<field name="assignedTo" form-view="user-form" grid-view="user-grid" colSpan="6" readonlyIf="project == null"/>
				<spacer/>
				<field name="createdBy" readonly="true" title="Created By" colSpan="6"/>
				<field name="createdOn" title="Created on" colSpan="6"/>
			</panel>
			<panel title=" " colSpan="12">
				<field name="taskDate" colSpan="3"/>
				<field name="taskDuration" colSpan="3" widget="duration" x-big="true"/>
				<field name="taskDeadline" colSpan="3"/>
			</panel>
			<panel title=" " colSpan="12">
				<field name="description" showTitle="false" colSpan="12" widget="html"/>
			</panel>
		</panel>
		<panel-dashlet action="action-view-show-task-tree" colSpan="12" title="Task Tree"/>
		
		<panel sidebar="true" name="attributes" title="Attributes">
			<field name="status" colSpan="6"/>
			<spacer/>
			<field name="priority" colSpan="6"/>
			<field name="category" colSpan="6"/>
			<field name="progressSelect" colSpan="12" widget="SelectProgress" />
	    </panel>
		<panel-mail>
			<mail-messages/>
		</panel-mail>
	</form>

	
	<action-view name="action-view-show-task-tree" title="Task Tree" model="com.axelor.apps.project.db.Task">	
		<view type="tree" name="task-tree"/>
    	<view type="form" name="tasks-form"/>
    	<domain>self.task.id = :id</domain>
     	<context name="id" expr="eval: id"/>
	</action-view>
	
	<tree name="task-tree" title="Tasks">
    	
    	<column name="name" type="string"/>
    	<column name="assignedTo" type="reference"/>
    	<column name="progress" type="decimal"/>
		
		<node model="com.axelor.apps.project.db.Task" domain="self.task.id = :id" onClick="action-task-view">
			<field name="name" as="name"/>
			<field name="assignedTo" as="assignedTo"/>
			<field name="progress" as="progress"/>
		</node>    	
		
		<node model="com.axelor.apps.project.db.Task" parent="parentTask" draggable="true" onClick="action-task-view">
			<field name="name" as="name"/>
			<field name="assignedTo" as="assignedTo"/>
			<field name="progress" as="progress"/>
		</node>
    
	</tree>
	
	<action-view name="action-task-view" title="Tasks" model="com.axelor.apps.project.db.Task">
    	<view type="form" name="tasks-form"/>
        <view-param name="popup" value="reload"/>
        <view-param name="show-toolbar" value="false"/>
  		<view-param name="show-confirm" value="false" />
	  	<view-param name="popup-save" value="false"/>
    	<context name="_showRecord" expr="eval: id"/>
    </action-view>
	
	
	<action-attrs name="action-task-attrs-project-configurations" model="com.axelor.apps.project.db.Task">
		<attribute name="domain" for="category" expr="eval: &quot;self.id IN (${project?.categories?.collect{it.id}?.join(',')})&quot;"/>
		<attribute name="domain" for="assignedTo" expr="eval: &quot;self.id IN(${project?.team?.members?.collect{it.id}?.join(',')})&quot;"/>
	</action-attrs>
	
	
</object-views>
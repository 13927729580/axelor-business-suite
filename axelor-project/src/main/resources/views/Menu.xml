<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<menuitem name="menu-project-root" order="-103" title="Project" icon="fa-tasks"  if="__config__.app.isApp('project')"
	    groups="admins,ERP" icon-background="#3f6bb9"/> 	
	    
	<menuitem name="project-all" parent="menu-project-root"
    	title="Projects"
    	action="project.all"/>

	<action-view name="project.all" title="Projects" model="com.axelor.apps.project.db.Project">
    	<view type="grid" name="project-grid"/>
	    <view type="form" name="project-form"/>
	    <view type="calendar" name="project-calendar"/>
	    <view type="kanban" name="project-kanban"/>
	    <domain>self.typeSelect = 'project'</domain>
	</action-view>
	
	
	<!--  Team Apps -->
	<menuitem name="project-folder" parent="menu-project-root" title="Project Folder" action="project.folder"/>
	<action-view name="project.folder" title="Project Folder" model="com.axelor.apps.project.db.ProjectFolder">
		<view type="grid" name="project-folder-grid"/>
		<view type="form" name="project-folder-form"/>
	</action-view>
	
	<menuitem name="project-tasks" parent="menu-project-root" title="Tasks" action="all.tasks"/>
	<action-view name="all.tasks" title="Project Tasks" model="com.axelor.apps.project.db.Task">
		<view type="grid" name="tasks-grid"/>
		<view type="form" name="tasks-form"/>
	</action-view>
	
	<menuitem name="project-status" parent="menu-project-root" title="Status" action="project-status"/>
	<action-view name="project-status" title="Project Status" model="com.axelor.apps.project.db.ProjectStatus">
		<view type="grid" name="project-status-grid"/>
		<view type="form" name="project-status-form"/>
	</action-view>
	
	<menuitem name="project-priority" parent="menu-project-root" title="Priority" action="project-priority"/>
	<action-view name="project-priority" title="Project Priority" model="com.axelor.apps.project.db.ProjectPriority">
		<view type="grid" name="priority-grid"/>
		<view type="form" name="priority-form"/>
	</action-view>
	
	
	
	<menuitem name="project-gantt" parent="menu-project-root"
    	title="Project gantt"
    	action="project.gantt"/>
    	
   	<action-view name="project.gantt" title="Project gantt" model="com.axelor.apps.project.db.Project">
   		<view type="gantt" name="project-gantt"/>
   		<view type="form" name="task-form"/>
	</action-view>
	
	<menuitem name="task-all" parent="menu-project-root"
    	title="Tasks"
    	action="task.all"/>

	<action-view name="task.all" title="Tasks" model="com.axelor.apps.project.db.Project">
    	<view type="kanban" name="task-kanban"/>
    	<view type="grid" name="task-grid"/>
	    <view type="form" name="task-form"/>
	    <domain>self.typeSelect = 'task'</domain>
	</action-view>
	
	<menuitem name="menu-project-planning" parent="menu-project-root" title="Project Planning" /> 
	
	<menuitem name="my-planning" parent="menu-project-planning"
    	title="My Planning"
    	action="my.planning"/>

	<action-method name="my.planning">
		<call class="com.axelor.apps.project.web.ProjectPlanningController" method="myPlanning"/>
	</action-method>
	
	<menuitem name="my-team-planning" parent="menu-project-planning"
    	title="My Team Planning"
    	action="my.team.planning"/>

	<action-method name="my.team.planning">
		<call class="com.axelor.apps.project.web.ProjectPlanningController" method="myTeamPlanning"/>
	</action-method>

</object-views>

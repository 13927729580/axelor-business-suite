<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">
	
	<grid name="ebics-user-grid" title="Ebics user" model="com.axelor.apps.account.db.EbicsUser" >
		<field name="name" />
		<field name="userId" />
		<field name="securityMedium" />
		<field name="dn" />
		<field name="isInitializedHIA" />
		<field name="isInitialized" />
	</grid>
	
	<form name="ebics-user-form" title="Ebics user" model="com.axelor.apps.account.db.EbicsUser" onSave="save,action-ebics-user-method-generate-dn">
		<panel title="General informations" colSpan="12">
			<field name="name" />
			<field name="password" />
			<field name="userId" help="Name of the user or service" />
			<field name="securityMedium" />
			<field name="dn" readonly="true" help="Defines a unique identifier for the certificate" />
			<field name="ebicsPartner" help="Subscription or contract to which the user is associated" />
			<field name="isInitializedHIA" />
			<field name="isInitialized" />
		</panel>
		<panel title="Public key" colSpan="12" itemSpan="12">
			<field name="a005PrivateKey"/>
			<field name="x002PrivateKey"/>
			<field name="e002PrivateKey"/>
		</panel>
		<panel title="Certificate" colSpan="12" itemSpan="12">
			<field name="a005Certificate"/>
			<field name="x002Certificate"/>
			<field name="e002Certificate"/>
		</panel>
		
		<panel sidebar="true">
			<button name="generateDn" title="Generate DN" onClick="save,action-ebics-user-method-generate-dn"/>
			<button name="generateCertificates" title="Generate certificates" onClick="save,action-ebics-user-method-generate-certificates"/>
			<button name="sendINI" title="Send INI" onClick="save,action-ebics-user-method-send-ini"/>
			<button name="sendHIA" title="Send HIA" onClick="save,action-ebics-user-method-send-hia"/>
			<button name="sendHPB" title="Send HPB" onClick="save,action-ebics-user-method-send-hpb"/>
			<button name="sendSPR" title="Send SPR" onClick="save,action-ebics-user-method-send-spr"/>
			<button name="sendFile" title="Send File" onClick="save,action-ebics-user-method-send-file"/>
			<button name="fetchFile" title="Fetch file" onClick="save,action-ebics-user-method-fetch-file"/>
		</panel>
	
	</form>
	
	<action-method name="action-ebics-user-method-generate-certificates">
		<call class="com.axelor.apps.account.ebics.web.EbicsController" method="generateCertificate"/>
	</action-method>
	
	<action-method name="action-ebics-user-method-generate-dn">
		<call class="com.axelor.apps.account.ebics.web.EbicsController" method="generateDn"/>
	</action-method>
	
	<action-method name="action-ebics-user-method-send-ini">
		<call class="com.axelor.apps.account.ebics.web.EbicsController" method="sendINIRequest"/>
	</action-method>
	
	<action-method name="action-ebics-user-method-send-hia">
		<call class="com.axelor.apps.account.ebics.web.EbicsController" method="sendHIARequest"/>
	</action-method>
	
	<action-method name="action-ebics-user-method-send-spr">
		<call class="com.axelor.apps.account.ebics.web.EbicsController" method="sendSPRRequest"/>
	</action-method>
	
	<action-method name="action-ebics-user-method-send-file">
		<call class="com.axelor.apps.account.ebics.web.EbicsController" method="sendFile"/>
	</action-method>
	
	<action-method name="action-ebics-user-method-fetch-file">
		<call class="com.axelor.apps.account.ebics.web.EbicsController" method="fetchFile"/>
	</action-method>
    
  
</object-views>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">
    
    <grid name="bank-order-file-format-grid" orderBy="orderFileFormatSelect" title="Bank Orders file formats" model="com.axelor.apps.account.db.BankOrderFileFormat" canDelete="false">
        <field name="name"/>
        <field name="orderTypeSelect"/>
        <field name="orderFileFormatSelect"/>
    </grid>
    
	<form name="bank-order-file-format-form" title="Bank Orders file format" model="com.axelor.apps.account.db.BankOrderFileFormat" canDelete="false"> 
  		<panel name="main" colSpan="12">
	        <field name="orderFileFormatSelect" required="true" onChange="action-bank-order-file-format-record-compute-name"/>
	        <field name="name" required="true"/>
  		</panel>
		<panel name="globalAttributes" title="Global attributes">
			<field name="orderTypeSelect" required="true"/>
			<field name="currency" canEdit="false" form-view="currency-form" grid-view="currency-grid"/>
		</panel>
		<panel name="specificAttributes" title="Specific attributes" hidden="true" showIf="orderFileFormatSelect == 'pain.xxx.cfonb320.xct'">
			<field name="qualifyingOfDate"/>
			<field name="isMultiDate"/>
			<field name="isMultiCurrency"/>
			<field name="displayAdditionnalInformations"/>
			<panel title="Default Additionnal informations" colSpan="12" canCollapse="true" hidden="true" showIf="displayAdditionnalInformations">
				<field name="displayBankOrderEconomicReason"/>
				<field name="bankOrderEconomicReason"/>
				<field name="displayReceiverCountry"/>
				<field name="receiverCountry"/>
				<field name="displayPaymentModeSelect"/>
				<field name="paymentModeSelect"/>
				<field name="displayFeesImputationModeSelect"/>
				<field name="feesImputationModeSelect"/>
			</panel>
			<field name="displayFurtherInformations"/>
		</panel>
	</form>
	
	<action-record name="action-bank-order-file-format-record-compute-name" model="com.axelor.apps.account.db.BankOrderFileFormat">
		<field name="name" expr="eval: orderFileFormatSelect" if="!name"/>
	</action-record>
	
    
</object-views>
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">
	
    <grid name="analytic-distribution-template-grid" title="Analytic distribution templates" model="com.axelor.apps.account.db.AnalyticDistributionTemplate">
       <field name="name"/>
    </grid>
    
    <form name="analytic-distribution-template-form" title="Analytic distribution template" model="com.axelor.apps.account.db.AnalyticDistributionTemplate"  
    	onSave="action-analytic-dist-template-validate-tot-percentage">
        <panel >
	        <field name="name"/>
        </panel>      
        <panel-related field="analyticDistributionLineList" grid-view="analytic-distribution-line-model-grid" form-view="analytic-distribution-line-model-form" onChange="action-analytic-dist-template-validate-tot-percentage"/>
    </form>
    
    <action-validate name="action-analytic-dist-template-validate-tot-percentage">
    	<error message="Total percentage is higher than 100%" if="analyticDistributionLineList?.sum{it.percentage} &gt; 100"/>
    </action-validate>
    
</object-views>
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_3.0.xsd">
	
    <grid name="user-grid" title="Users list" model="com.axelor.auth.db.User" id="user-grid-base">
        <field name="name"/>
        <field name="fullName"/>
        <field name="partner"/>
        <field name="activeCompany"/>
        <field name="group" />
    </grid>
    
    
    <form name="user-form" id="user-form-base" title="User" model="com.axelor.auth.db.User" 
    onNew="action-user-default-record,action-user-check-company" onLoad="com.axelor.auth.AuthService:preferences" onSave="com.axelor.auth.AuthService:validate">
    	<panel sidebar="true">
	        <field name="activeCompany" widget="SuggestBox"/>
	        <field name="activeCashRegister"/>
<!-- 	        <field name="timesheetPeriodConfig"/> -->
	        <field name="employee" if-module="axelor-human-resource" />
	        <button name="createEmployee" onClick="action-user-create-employee,save,action-hr-user-show-employee" title="Create employee" if-module="axelor-human-resource" showIf="employee == null"/>
        </panel>
		<panel title="Testing" sidebar="true">
			<field name="today"/>
		</panel>
        <panel-include view="user-form" from="axelor-core"/>
        <panel-tabs>
             <panel title="Contact">
                <field name="partner" domain="self.partnerTypeSelect = 2 OR self.isContact = true" grid-view="partner-grid" form-view="partner-form" colSpan="12" />
                <field name="partner.emailAddress" colSpan="6" />
				<field name="partner.fax" colSpan="6" />
				<field name="partner.fixedPhone" colSpan="6" />
				<field name="partner.mobilePhone" colSpan="6" />
	           	<field name="partner.webSite" colSpan="6" />
	         </panel>
        	 <panel-related title="Internal companies" field="companySet" showTitle="false" canNew="false"/>
        	 <panel title="Teams">
        		<field name="activeTeam"/>
        		<panel-related field="teamSet" canNew="false" colSpan="12"/>
        	 </panel>
        	 <panel-related title="Projects" field="projectSet" showTitle="false" canNew="false" colSpan="4"/>
        	<panel title="Calendars">
        		<panel-related field="followersCalUserSet" colSpan="12"/>
        		<panel-related field="authorizeCalUserSet" colSpan="12"/>
        	</panel>
        </panel-tabs>
    </form>
    
    
    <action-record name="action-user-default-record" model="com.axelor.auth.db.User">
    	<field name="language" expr="fr"/>
    	<field name="activeCompany" if="__repo__.of(Company).all().fetch().size == 1"  expr="eval:__repo__.of(Company).all().fetchOne()" />
    </action-record>
    
    <action-validate name="action-user-check-company">
        <notify message="Please select active company"  if="__repo__.of(Company).all().fetch().size != 1"/>
    </action-validate>
    
    <action-record name="action-user-create-employee" model="com.axelor.auth.db.User">
        <field name="employee" expr="action:action-hr-create-user-employee" />
    </action-record>
        
</object-views>
<?xml version="1.0" ?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_3.0.xsd">

  <module name="human-resource" package="com.axelor.apps.hr.db"/>

  <entity name="Timesheet" cachable="true">
      
      <integer name="importId"/>
      <date name="sentDate" title="Sent Date" readonly="true"/>
      <integer name="statusSelect" title="Status" selection="hrs.timesheet.status.select" default="1"/>
      <many-to-one name="user" ref="com.axelor.auth.db.User" title="User" column="user_id" required="true" readonly="true"/>
      <one-to-many name="timesheetLineList" ref="com.axelor.apps.hr.db.TimesheetLine" title="Timesheet Lines" mappedBy="affectedToTimeSheet"/>
      <date name="fromDate"/>
      <date name="toDate"/>
      <many-to-one name="project" ref="com.axelor.apps.project.db.ProjectTask" title="Project"/>
      <many-to-one name="task" ref="com.axelor.apps.project.db.ProjectTask" title="Task"/>
      <decimal name="logTime" title="Duration(by day)"/>
      <many-to-one name="activity" ref="com.axelor.apps.hr.db.TimeActivity" title="Activity"/>
      <many-to-one name="company" ref="com.axelor.apps.base.db.Company"/>
      <many-to-one name="validatedBy" ref="com.axelor.auth.db.User" title="Validated" readonly="true"/>
      <many-to-one name="refusedBy" ref="com.axelor.auth.db.User" title="Refused By" readonly="true"/>
      <date name="validationDate" title="Validation Date" readonly="true"  />
      <date name="refusalDate" title="Refusal Date" readonly="true"  />
      
      <string name="fullName" namecolumn="true" readonly="true">
      <![CDATA[
	  		return this.getCreatedOn().getDayOfMonth()+"/"+this.getCreatedOn().getMonthOfYear()
	  				+"/"+this.getCreatedOn().getYear()+"  "+this.getCreatedOn().getHourOfDay()+":"+this.getCreatedOn().getMinuteOfHour();
	  ]]>
      </string>
  </entity>
  
</domain-models>

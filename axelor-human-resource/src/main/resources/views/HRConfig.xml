<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_3.0.xsd">
    
    <grid name="hr-config-grid" title="Human Resources configurations" model="com.axelor.apps.hr.db.HRConfig">
        <field name="company"/>
    </grid>

	<form name="hr-config-form" title="Human Resources configuration" model="com.axelor.apps.hr.db.HRConfig" onNew="action-hr-config-record-default">
	  	<panel>
	    	<field name="company" form-view="company-form" colSpan="4"/>
	  	</panel>
	  	<panel title="Leaves Templates">
	    	<field name="sentLeaveTemplate" canNew="true"/>
	    	<field name="validatedLeaveTemplate" canNew="true"/>
	    	<field name="refusedLeaveTemplate" canNew="true"/>
	  	</panel>
	</form>
	
	<action-record name="action-hr-config-record-default" model="com.axelor.apps.sale.db.SaleConfig">
		<field name="company" expr="eval: _company" if="_company != null"/>
		<field name="company"  expr="eval:__user__.activeCompany" if="_company == null &amp;&amp; __user__.activeCompany != null"/>
    	<field name="company"  expr="eval:__repo__.of(Company).all().fetchOne()" if="_company == null &amp;&amp; __user__.activeCompany == null &amp;&amp; __repo__.of(Company).all().fetch().size == 1"/>
	</action-record>
	
</object-views>
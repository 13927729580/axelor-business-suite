<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_3.0.xsd">

	<grid name="timesheet-grid" title="Timesheet" model="com.axelor.apps.human.resource.db.Timesheet">
		<field name="sentDate"/>
		<field name="statusSelect"/>
		<field name="user"/>
	</grid>

	<form name="timesheet-form" title="Timesheet" model="com.axelor.apps.human.resource.db.Timesheet" cols="12" width="large"
	    onNew="action-timesheeet-record-default">
		<panel>
		    <field name="statusSelect" colSpan="12" widget="NavSelect"/>
			<field name="sentDate" colSpan="4"/>
			<field name="user" colSpan="4"/>
			<button name="getTimeFromTask" title="Get time from Tasks" colSpan="4"/>
		</panel>
		<panel-related field="timesheetLineList" />
	</form>
	
	<action-record name="action-timesheeet-record-default" model="com.axelor.apps.human.resource.db.Timesheet">
	    <field name="user" expr="eval:__user__"/>
	</action-record>

</object-views>

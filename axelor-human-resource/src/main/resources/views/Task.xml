<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_3.0.xsd">

	<grid id="hr-task-grid" name="task-grid" title="Tasks" model="com.axelor.apps.project.db.ProjectTask">
		<field name="name"/>
		<field name="assignedTo"/>
	</grid>

	<form id="hr-task-form" name="task-form" title="Task" model="com.axelor.apps.project.db.ProjectTask" onNew="action-project-task-default">
	    <panel>
	        <field name="project" hideIf="$popup()" domain="self.taskTypeSelect == 'project'" form-view="project-form" grid-view="project-grid"/>
		    <field name="name" colSpan="12" />
			<field name="assignedTo" onSelect="action-project-task-attrs-assigned-to-domain"/>
			<field name="taskTypeSelect" hidden="true" />
		</panel>
		<panel-related field="timesheetLineList" grid-view="timesheet-line-project-grid" form-view="timesheet-line-project-form"/>
	</form>

</object-views>
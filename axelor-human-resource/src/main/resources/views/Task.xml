<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_3.0.xsd">

	<grid id="hr-task-grid" name="task-grid" title="Tasks" model="com.axelor.apps.project.db.Task">
		<field name="name"/>
		<field name="assignedTo"/>
	</grid>

	<form id="hr-task-form" name="task-form" title="Task" model="com.axelor.apps.project.db.Task">
	    <panel>
	        <field name="project" hideIf="$popup()" />
		    <field name="name" colSpan="12" />
			<field name="assignedTo" onSelect="action-project-task-attrs-assigned-to-domain"/>
		</panel>
		<panel-related field="logTime" grid-view="logTime-project-grid" form-view="logTime-project-form"/>
	</form>

</object-views>
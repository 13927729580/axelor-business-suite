<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">
    
    <grid name="lunch-voucher-mgt-line-grid" title="Lunch Voucher Lines" model="com.axelor.apps.hr.db.LunchVoucherMgtLine" editable="true" orderBy="isStockLine,employee">
<!--     	<hilite if="isStockLine" background="info" strong="true"/> -->
        <field name="employee"/>
        <field name="canteenEntries" aggregate="sum" readonlyIf="isStockLine" title="Nbr canteen entries"/>
        <field name="daysOverseas" aggregate="sum" readonlyIf="isStockLine" title="Nbr days overseas"/>
        <field name="lunchVoucherNumber" aggregate="sum" title="Nbr lunch vouchers"/>
        <field name="isGivenToEmployee" title="Given?"/>
<!--         <field name="isGivenToEmployee" readonlyIf="isStockLine" title="Given?"/> -->
<!--         <field name="isStockLine"/> -->
    </grid>
    
    <grid name="lunch-voucher-mgt-line-employee-grid" title="Lunch Voucher Lines" model="com.axelor.apps.hr.db.LunchVoucherMgtLine" editable="true" orderBy="isStockLine,employee">
        <field name="canteenEntries" aggregate="sum" readonlyIf="isStockLine" title="Nbr canteen entries"/>
        <field name="daysOverseas" aggregate="sum" readonlyIf="isStockLine" title="Nbr days overseas"/>
        <field name="lunchVoucherNumber" aggregate="sum" title="Nbr lunch vouchers"/>
        <field name="isGivenToEmployee" title="Given?"/>
        <field name="lunchVoucherMgt.statusSelect"/>
    </grid>

	<form name="lunch-voucher-mgt-line-form" title="Lunch Voucher Lines" model="com.axelor.apps.hr.db.LunchVoucherMgtLine" width="large">
		<panel name="overview" title="Overview">
			<field name="employee" colSpan="6" />
<!-- 			<field name="isStockLine" colSpan="6" /> -->
			<field name="lunchVoucherNumber" css="label-bold bold" colSpan="12" />
		</panel>
<!-- 		<panel name="details" title="Details" hideIf="isStockLine"> -->
		<panel name="details" title="Details">
			<field name="canteenEntries" colSpan="6" />
			<field name="daysOverseas" colSpan="6" />
			<field name="isGivenToEmployee" colSpan="12" />
		</panel>
		<panel name="comment" title="Comments">
			<field name="comment" colSpan="12" showTitle="false" widget="Text"/>
		</panel>
	</form>
</object-views>
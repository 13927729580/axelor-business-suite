<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
	
	<grid name="document-generator-grid" title="Document Generator" model="com.axelor.apps.base.db.DocumentGenerator">
		<field name="exportType"/>
		<field name="docInputFile"/>
		<field name="docOutputFile"/>
	</grid>
	
	<form name="document-generator-form" title="Document Generator" model="com.axelor.apps.base.db.DocumentGenerator" width="large">
		<panel>
			<field name="exportType"/>
			<field name="docInputFile" widget="binary-link" canNew="true" form-view="meta-files-form" grid-view="meta-files-grid"/>
			<field name="docOutputFile" widget="binary-link" readonly="true" form-view="meta-files-form" grid-view="meta-files-grid"/>
			<button name="generateDocument" title="Generate Document" colSpan="4" onClick="save,action-generate-output-file-method,save"/>
		</panel>
	</form> 
	
	<action-method name="action-generate-output-file-method">
		<call class="com.axelor.apps.base.web.DocumentGeneratorController" method="generateDocOutputFile"/>
	</action-method>
</object-views>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">
    
    <grid name="work-center-grid" title="Work centers" model="com.axelor.apps.production.db.WorkCenter">
        <field name="name"/>
        <field name="code"/>
        <field name="machine" form-view="machine-form" grid-view="machine-grid"/>
        <field name="workCenterTypeSelect"/>
    </grid>
    
	<form name="work-center-form" title="Work center" model="com.axelor.apps.production.db.WorkCenter" width="large">
	  <panel>
	    <field name="name"/>
	    <field name="code" colSpan="3"/>
	    <field name="workCenterTypeSelect" required="true"/>
		<field name="machine" requiredIf="workCenterTypeSelect == 2 || workCenterTypeSelect == 3" showIf="workCenterTypeSelect == 2 || workCenterTypeSelect == 3" form-view="machine-form" grid-view="machine-grid"/>
	  </panel>  
	  <panel-tabs>
	    <panel title="Default Machine settings" readonlyIf="!machine" showIf="workCenterTypeSelect == 2 || workCenterTypeSelect == 3">
	        <panel title="Capacity settings" colSpan="12">
	          <field name="capacityPerCycle" colSpan="3"/>
	          <field name="maxCapacityPerCycle" colSpan="3"/>
	          <field name="durationPerCycle" colSpan="3" widget="duration" x-big="true" x-seconds="true"/>
	        </panel>
	        <panel title="Costing settings" colSpan="12">
	          <field name="product" form-view="product-form" grid-view="product-grid"/>
	          <field name="costTypeSelect" colSpan="3"/>
	          <field name="costAmount" colSpan="3"/>
	        </panel>
	    </panel>
	    <panel-related field="prodHumanResourceList" title="Human resources" showIf="workCenterTypeSelect == 1 || workCenterTypeSelect == 3" form-view="prod-human-resource-form" grid-view="prod-human-resource-grid"/>
	    <panel-related field="workCenterList" title="Replacement machines" showIf="workCenterTypeSelect == 2 || workCenterTypeSelect == 3" form-view="work-center-machine-form" grid-view="work-center-machine-grid"/>
	  </panel-tabs>
	</form>
    
    <grid name="work-center-machine-grid" title="Machines" model="com.axelor.apps.production.db.WorkCenter">
        <field name="name"/>
        <field name="code"/>
        <field name="machine"/>
    </grid>
    
    <form name="work-center-machine-form" title="Machine" model="com.axelor.apps.production.db.WorkCenter" width="large">
    	<panel>
	        <field name="name"/>
	        <field name="code"/>
	        <field name="machine"/>
        </panel>
        <panel title="Production and cost settings">
	        <panel title="Capacity settings" colSpan="12">
	          <field name="capacityPerCycle" colSpan="3"/>
	          <field name="maxCapacityPerCycle" colSpan="3"/>
	          <field name="durationPerCycle" colSpan="3" widget="duration" x-big="true" x-seconds="true"/>
			  <label title="" colSpan="3"/>
				<field name="startingDuration" colSpan="3" widget="duration" x-big="true" x-seconds="true"/>
				<field name="setupDuration" colSpan="3" widget="duration" x-big="true" x-seconds="true"/>
				<field name="endingDuration" colSpan="3" widget="duration" x-big="true" x-seconds="true"/>
	        </panel>
	        <panel title="Costing settings" colSpan="12">
	          <field name="product"/>
	          <field name="costTypeSelect" colSpan="3"/>
	          <field name="costAmount" colSpan="3"/>
	        </panel>
	    </panel>
    </form>

    
</object-views>


<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_3.0.xsd">
    
    <grid name="sale-order-line-grid" title="SO lines" model="com.axelor.apps.sale.db.SaleOrderLine" orderBy="sequence">
		<field name="sequence"/>
	    <field name="productName"/>
	    <field name="estimatedDelivDate"/>
	    <field name="qty"/>
	    <field name="unit"/>
	    <field name="price"/>
	    <field name="exTaxTotal"/>
	    <field name="inTaxTotal"/>
	</grid>
    
	<form name="sale-order-line-form" title="SO line" model="com.axelor.apps.sale.db.SaleOrderLine" 
	onLoad="action-group-sale-saleorderline-onload" onNew="action-group-sale-saleorderline-onnew">
		<panel>
			<field name="sequence"/>
		   	<field name="isToPrintLineSubTotal"/>
		</panel>
		<panel>
		   	<field name="product" onChange="action-group-sale-saleorderline-product-onchange" onSelect="action-sale-order-line-attrs-domain-product"/>
		   	<field name="productName"/>
		   	<field name="qty" onChange="action-group-sale-saleorderline-qty-onchange"/>
		   	<field name="unit"/>
		   	<field name="taxLine" colSpan="4" onChange="action-sale-order-line-method-convert-tax,action-sale-order-line-method-compute" domain="self.endDate = null or self.endDate &gt; :__date__" grid-view="tax-line-grid" form-view="tax-line-form"/>
		   	<field name="price" onChange="action-sale-order-line-method-compute" colSpan="4"/>
		   	<field name="priceDiscounted" colSpan="4" hidden="true"/>
		   	<field name="exTaxTotal" readonly="true"/>
		   	<field name="inTaxTotal" readonly="true"/>
		   	<field name="toInvoice"/>
			<field name="invoiced" showIf="toInvoice"/>
		</panel>
		<panel name="discount" title="Discount">
		   	<field name="discountTypeSelect" onChange="action-sale-order-line-method-compute,action-sale-order-line-attrs-discountamount-title"/>
		   	<field name="discountAmount" onChange="action-sale-order-line-method-compute" hideIf="discountTypeSelect == 3"/>
		</panel>
		<panel-tabs>
			<panel name="subscription" title="Subscription">
				<panel-include view="subscription-sale-order-line-form" from="axelor-supplychain" if-module="axelor-supplychain"/>
			</panel>
		   	<panel title="Settings">
		      	<field name="saleSupplySelect" onChange="action-group-sale-saleorderline-salesupplyselect-onchange" if-module="axelor-supplychain"/>        
		       	<field name="supplierPartner" showIf="saleSupplySelect == 2" domain="self.isContact = false AND self.isSupplier = true"/>
		       	<field name="task"/>
		       	<field name="billOfMaterial" onSelect="action-sale-order-line-attrs-bill-of-material-domain" if-module="axelor-production"/>
		       	<button name="customizeBOM" title="Customize BOM" onClick="action-production-method-customize-bill-of-material" if-module="axelor-production"/>
		   	</panel>
		   	<panel title="Notes">
		   		<field name="description" showTitle="false" colSpan="12" widget="Html" x-lite="true"/>
		   	</panel>
		   	<panel title="Delivery">
		   		<field name="estimatedDelivDate"/>
		   		<panel-dashlet name="sale.order.line.dashboard" title="Stock Moves" action="action-sale-order-line-view-stock-move-line" colSpan="12"/>
		   	</panel>
		   	<panel title="Invoicing follow-up" if-module="axelor-supplychain">
		   		<field name="invoicingDate"/>
		  		<field name="amountInvoiced" showIf="eval: GeneralService.getGeneral().getManageInvoicedAmountByLine()"/>
		   	</panel>
			<panel-related field="invoiceSet"/>
			<panel name="projectTaskPanel" title="Project/Task" if-module="axelor-business-project">
				<field name="project" domain="self.imputable = true" onChange="action-sale-order-line-record-progress" form-view="project-task-form" grid-view="project-task-grid"/>
				<field name="progress" readonly="true" widget="SelectProgress"/>
			</panel>
		</panel-tabs>
	</form>
    
    <action-group name="action-group-sale-saleorderline-onnew">
    	<action name="action-purchase-order-line-attrs-title-project-task"/>
    	<action name="action-sale-order-line-attrs-show-project"/>
    	<action name="action-sale-order-line-attrs-scale-and-precision"/>
    	<action name="action-sale-order-line-record-new"/>
    	<action name="action-sale-order-line-record-sequence"/>
    	<action name="action-sale-order-line-attrs-hide-product-variant"/>
    	<action name="action-sale-order-line-attrs-hidden-subscription"/>
    	<action name="action-supplychain-attrs-readonly-invoice-subscription"/>
    	<action name="action-sale-order-attrs-hide-ati"/>
    	
    </action-group>
    
    <action-group name="action-group-sale-saleorderline-onload">
    	<action name="action-purchase-order-line-attrs-title-project-task"/>
    	<action name="action-sale-order-line-attrs-show-project"/>
    	<action name="action-sale-order-line-method-convert-tax"/>
    	<action name="action-sale-order-line-method-compute"/>
    	<action name="save"/>
    	<action name="action-sale-order-line-attrs-ressources-planning"/>
    	<action name="action-sale-order-line-attrs-scale-and-precision"/>
    	<action name="action-sale-order-line-attrs-hide-product-variant"/>
    	<action name="action-sale-order-line-attrs-task-readonly"/>
    	<action name="action-sale-order-line-attrs-hidden-subscription"/>
    	<action name="action-supplychain-attrs-readonly-invoice-subscription"/>
    	<action name="action-sale-order-attrs-hide-ati"/>
    	
    </action-group>

    <action-group name="action-group-sale-saleorderline-product-onchange">
    	<action name="action-sale-order-line-record-product-variant"/>
    	<action name="action-sale-order-line-method-get-product-information"/>
    	<action name="action-sale-order-line-method-convert-tax"/>
    	<action name="action-sale-order-line-method-compute"/>
    	<action name="action-sale-order-line-attrs-hide-product-variant"/>
    	<action name="action-sale-order-line-get-production-information" if="axelor-production"/>
    	<action name="action-sale-order-line-attrs-title-price"/>
    	<action name="action-sale-order-line-attrs-hidden-subscription"/>
    	<action name="action-supplychain-record-periodicity"/>
    </action-group>

    <action-group name="action-group-sale-saleorderline-qty-onchange">
    	<action name="action-sale-order-line-method-get-discount"/>
    	<action name="action-sale-order-line-method-convert-tax"/>
    	<action name="action-sale-order-line-method-compute"/>
    </action-group>

    <action-group name="action-group-sale-saleorderline-salesupplyselect-onchange">
    	<action name="action-sale-order-line-get-production-information" if="axelor-production"/>
    	<action name="action-sale-order-line-attrs-hide-product-variant"/>
    </action-group>
    
    <action-attrs name="action-sale-order-attrs-hide-ati">
		<attribute name="hidden" for="exTaxTotal" expr="eval: _parent.inAti" if="_parent._model == 'com.axelor.apps.sale.db.SaleOrder'"/>
		<attribute name="hidden" for="inTaxTotal" expr="eval: !_parent.inAti" if="_parent._model == 'com.axelor.apps.sale.db.SaleOrder'"/>
	</action-attrs>
	
	<action-attrs name="action-sale-order-line-attrs-show-project" if-module="axelor-business-project">
		<attribute name="hidden" for="projectTaskPanel" expr="!com.axelor.apps.base.service.administration.GeneralService.getGeneral().getProjectTaskSaleOrderLines()"/>
	</action-attrs>
	
	<action-attrs name="action-purchase-order-line-attrs-title-project-task">
		<attribute name="title" for="project" expr="eval: com.axelor.apps.base.service.administration.GeneralService.getGeneral().getProjectTaskLabel()" if="com.axelor.apps.base.service.administration.GeneralService.getGeneral().getProjectTaskLabel() != null"/>
		<attribute name="title" for="projectTaskPanel" expr="eval: com.axelor.apps.base.service.administration.GeneralService.getGeneral().getProjectTaskLabel()" if="com.axelor.apps.base.service.administration.GeneralService.getGeneral().getProjectTaskLabel() != null"/>
	
	</action-attrs>

    <!-- ACTION RECORD -->
    
    <action-record name="action-sale-order-line-record-new" model="com.axelor.apps.sale.db.SaleOrderLine">
    	<field name="qty" expr="eval: 1"/>
    	<field name="isOrdered" expr="true"/>
    	<field name="isToPrintLineSubTotal" expr="eval: _parent?.isToPrintLineSubTotal"/>
    </action-record>
    
	<action-record name="action-sale-order-line-record-sequence" model="com.axelor.apps.sale.db.SaleOrderLine">
    	<field name="sequence" expr="10" if="eval: _parent?.saleOrderLineList == null"/>
    	<field name="sequence" expr="eval: (_parent?.saleOrderLineList.size()+1)*10" if="eval: _parent?.saleOrderLineList != null"/>
    </action-record>
    
    <action-record name="action-sale-order-line-get-production-information" model="com.axelor.apps.sale.db.SaleOrderLine">
    	<field name="billOfMaterial" expr="eval: product?.defaultBillOfMaterial" if="saleSupplySelect == 3 &amp;&amp; product?.defaultBillOfMaterial != null"/>
    	<field name="billOfMaterial" expr="eval: product?.parentProduct?.defaultBillOfMaterial" if="saleSupplySelect == 3 &amp;&amp; product?.defaultBillOfMaterial == null"/>
    	<field name="supplierPartner" expr="eval: product?.defaultSupplierPartner" if="saleSupplySelect == 2"/>
    </action-record>
    
    <action-record name="action-sale-order-line-record-progress" model="com.axelor.apps.sale.db.SaleOrderLine">
    	<field name="progress" expr="eval: project?.progress"/>
    </action-record>
    
   	<!-- ACTION METHOD -->
	<action-method name="action-sale-order-line-method-compute">
		<call class="com.axelor.apps.sale.web.SaleOrderLineController" method="compute"/>
	</action-method>
	
	<action-method name="action-sale-order-line-method-convert-tax">
		<call class="com.axelor.apps.sale.web.SaleOrderLineController" method="convertUnitPrice"/>
	</action-method>
	
	<action-method name="action-sale-order-line-method-get-product-information">
		<call class="com.axelor.apps.sale.web.SaleOrderLineController" method="getProductInformation"/>
	</action-method>
	
	<action-method name="action-sale-order-line-method-get-discount">
		<call class="com.axelor.apps.sale.web.SaleOrderLineController" method="getDiscount"/>
	</action-method>
	
	
	
  	<!-- ACTION ATTRS -->
    
    <action-attrs name="action-sale-order-line-attrs-hide-product-variant">
    	<attribute name="hidden" for="productVariant" expr="eval: product?.productVariantConfiguration == null"/>
    	<attribute name="hidden" for="billOfMaterial" expr="eval: saleSupplySelect != 3 || product?.productTypeSelect == 'service' "/>
    	<attribute name="hidden" for="customizeBOM" expr="eval: saleSupplySelect != 3 || product?.productTypeSelect == 'service' "/>
    </action-attrs>
    
    <action-attrs name="action-sale-order-line-attrs-task-readonly">
		<attribute name="readonly" for="task" expr="eval: (_parent.statusSelect == 2 || _parent.statusSelect == 3 || _parent.statusSelect == 4) &amp;&amp; task != null" if="_parent._model == 'com.axelor.apps.sale.db.SaleOrder'"/>
	</action-attrs>
	
	<action-attrs name="action-sale-order-line-attrs-bill-of-material-domain">
		<attribute name="domain" for="billOfMaterial" expr="eval: &quot;(self.product.id = ${product?.parentProduct?.id} OR self.product.id = ${product?.id}) AND self.isRawMaterial = 'false' AND self.personalized = false&quot;"/>
	</action-attrs>
	
	<action-attrs name="action-sale-order-line-attrs-discountamount-title">
		<attribute name="title" for="discountAmount" expr="Discount Rate" if="discountTypeSelect == 1"/>
		<attribute name="title" for="discountAmount" expr="Discount Amount" if="discountTypeSelect == 2"/>
	</action-attrs>
	
	<action-attrs name="action-sale-order-line-attrs-title-price">
		<attribute name="title" for="price" expr="Unit Price (by month)" if="product?.productTypeSelect == 'subscriptable'"/>
		<attribute name="title" for="price" expr="Unit Price" if="product?.productTypeSelect != 'subscriptable'"/>
	</action-attrs>
	
	<action-attrs name="action-sale-order-line-attrs-hidden-subscription">
		<attribute name="hidden" for="subscription" expr="product?.productTypeSelect != 'subscriptable'"/>
	</action-attrs>
	
	<action-attrs name="action-sale-order-line-attrs-domain-product">
		<attribute name="domain" for="product" expr="self.expense = false and (self.endDate = null or self.endDate &gt; :__date__) and self.sellable = true"/>
	</action-attrs>
	
	<action-attrs name="action-supplychain-attrs-readonly-invoice-subscription" if-module="axelor-supplychain">
		<attribute name="hidden" for="subscriptionList.invoiceSubscription" expr="eval: __parent__.statusSelect &lt; 3" if="_parent._model == 'com.axelor.apps.sale.db.SaleOrder'"/>
	</action-attrs>
	
	<action-record name="action-supplychain-record-periodicity" model="com.axelor.apps.sale.db.SaleOrderLine" if-module="axelor-supplychain">
		<field name="periodicity" expr="eval: product?.periodicitySelect"/>
	</action-record>
	
  	<action-attrs name="action-sale-order-line-attrs-scale-and-precision">
		<attribute name="scale" for="price" expr="eval: GeneralService.getNbDecimalDigitForUnitPrice()"/>
		<attribute name="scale" for="priceDiscounted" expr="eval: GeneralService.getNbDecimalDigitForUnitPrice()"/>
		<attribute name="scale" for="discountAmount" expr="eval: GeneralService.getNbDecimalDigitForUnitPrice() &amp;&amp; discountTypeSelect == 2"/>
	</action-attrs>
	
<!-- 	ACTION VIEW -->
	<action-view name="action-sale-order-line-view-stock-move-line" title="" model="com.axelor.apps.stock.db.StockMoveLine">
  		<view type="grid" name="stock-move-line-all-grid"/>
		<view type="form" name="stock-move-line-all-form"/>
  		<domain>self.saleOrderLine.id = :id</domain>
  		<context name="id" expr="eval: id"/>
  	</action-view>
    
    
</object-views>

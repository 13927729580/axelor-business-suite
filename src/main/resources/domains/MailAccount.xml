<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

	<module name="message" package="com.axelor.apps.message.db" />

	<entity name="MailAccount" lang="java">

		<string name="name" title="Name" required="true" namecolumn="true" />
		<string name="serverTypeSelect" title="Server Type" required="true" selection="mail.account.server.type.select"/>
		<string name="login" required="true" />
		<string name="password" required="true" />
		<string name="host" required="true" title="Host"/>
		<integer name="port" title="Port"/>
		<boolean name="securitySelect" title="SSL/TLS"/>
		<many-to-one name="userInfo" ref="com.axelor.apps.base.db.UserInfo" title="User" readonly="true"/>
		<boolean name="isDefault" title="Default account ?"/>

	</entity>

</domain-models>

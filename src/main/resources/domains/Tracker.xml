<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="marketing" package="com.axelor.apps.marketing.db"/>

  <entity name="Tracker" lang="java">
	
	<string name="targetUrl" title="Target URL" required="true"/>
	<string name="code" title="Code" required="true" unique="true"/>
	<string name="label" title="Label" multiline="true"/>
	
	<many-to-one name="campaign" ref="com.axelor.apps.marketing.db.Campaign"/>
	
	<finder-method name="findByCode" using="code"/>

  </entity>

</domain-models>

<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_2.0.xsd">

  <module name="socialnetwork" package="com.axelor.apps.socialnetwork.db"/>

  <entity name="SnStatusUpdates">
  	<![CDATA[
    This class represents a status post on a social network
 	A status can be posted on the 3 social networks simultaneously so
 	this object has one reference for each post on each social networks
 	It can also be posted on multiple pages so there a many2many relation with SnPage
 	an a one2many with SnPagePostRef to keep all the pages' post IDs
    @author David Nguyen
    ]]>
  	<boolean name="isFb" title="Facebook"/>
  	<boolean name="isTwt" title="Twitter"/>
  	<boolean name="isLn" title="Linkedin"/>
  	<boolean name="isFbWall" title="Post on Wall ?"/>
  	<string name="linkedinUpdateRef"/>
  	<string name="facebookUpdateRef"/>
  	<string name="twitterUpdateRef"/>
    <string name="content" namecolumn="true" multiline="true" required="true" max="60000" title="Content"/>
    <datetime name="updateDateT" tz="true" title="Update Time"/>
    <one-to-many name="snPagePostRefList" ref="com.axelor.apps.socialnetwork.db.SnPagePostRef"/>
    <many-to-one name="snProfile" ref="com.axelor.apps.socialnetwork.db.SnProfile"/>
	<many-to-many name="snPageSet" ref="com.axelor.apps.socialnetwork.db.SnPage" title="Pages"/>
	<many-to-one name="commentSnPage" ref="com.axelor.apps.socialnetwork.db.SnPage" title="Page"/>
    <boolean name="isPostSuccessful"/>
    <many-to-one name="socialNet" ref="com.axelor.apps.socialnetwork.db.SocialNet" title="Social Network"/>
    <string name="fbPrivacySelect" selection="socialnetwork.facebook.post.privacy.select" title="Privacy parameter" default="'EVERYONE'"/>
  </entity>
 
</domain-models>
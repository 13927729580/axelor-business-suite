<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="socialnetwork" package="com.axelor.apps.socialnetwork.db"/>

  <entity name="SnStatusUpdates">
  	<boolean name="isFb" title="Facebook"/>
  	<boolean name="isTwt" title="Twitter"/>
  	<boolean name="isLn" title="Linkedin"/>
  	<boolean name="isFbWall" title="Post on Wall ?"/>
  	<string name="linkedinUpdateRef"/>
  	<string name="facebookUpdateRef"/>
  	<string name="twitterUpdateRef"/>
    <string name="content" namecolumn="true" multiline="true" required="true" max="140" title="Content"/>
    <datetime name="updateDateT" tz="true" title="Update Time"/>
    <!-- <one-to-many name="snStatusCommentsList" ref="com.axelor.apps.socialnetwork.db.SnStatusComments" orphan="true" mappedBy="snStatusUpdates" title="Comments"/> -->
    <one-to-many name="snPagePostRefList" ref="com.axelor.apps.socialnetwork.db.SnPagePostRef"/>
    <many-to-one name="partner" ref="com.axelor.apps.base.db.Partner"/>
    <many-to-many name="companyPartnerSet" ref="com.axelor.apps.base.db.Partner" title="Pages"/>
    <many-to-one name="commentCompanyPartner" ref="com.axelor.apps.base.db.Partner" title="Page"/>
  </entity>
 
</domain-models>
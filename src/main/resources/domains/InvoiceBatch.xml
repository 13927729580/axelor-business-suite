<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_2.0.xsd">

  <module name="account" package="com.axelor.apps.account.db"/>

  <entity name="InvoiceBatch" lang="java">
  	
  	<!-- HEADER -->
  	<string name="code" title="Code" namecolumn="true"/>
    <integer name="actionSelect" title="Action" required="true" selection="iinvoice.batch.action.select"/>
    <many-to-one name="company" ref="com.axelor.apps.base.db.Company" required="true" title="Company" />
    
    <!-- UPDATE STATUS -->
    <string name="fromStatusSelect" title="Invoice initial status" default="dra" selection="iinvoice.batch.from.status.select"/>
    <string name="toStatusSelect" title="Invoice final status" default="tov" selection="iinvoice.batch.to.status.select"/>
    <boolean name="onSelectOk" title="Select invoices manually ?" />
    <many-to-many name="invoiceSet" ref="com.axelor.apps.account.db.Invoice" title="Invoices selection" />
    
    <!-- INVOICE GENERATION -->
    
    <!-- OTHERS INFORMATIONS -->
    <string name="description" title="Description" large="true" />
    <one-to-many name="batchList" ref="com.axelor.apps.base.db.Batch" mappedBy="invoiceBatch" title="Batches" />
  
  </entity>

</domain-models>

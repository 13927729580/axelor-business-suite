<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="base" package="com.axelor.apps.base.db"/>

  <entity name="BaseBatch" lang="java">
  	
  	<!-- HEADER -->
  	<string name="code" title="Code" namecolumn="true"/>
    <integer name="actionSelect" title="Action" required="true" selection="ibase.batch.action.select"/>
    <many-to-one name="company" ref="com.axelor.apps.base.db.Company" title="Company" />
    
    <!-- OTHERS INFORMATIONS -->
    <string name="description" title="Description" large="true" />
    <one-to-many name="batchList" ref="com.axelor.apps.base.db.Batch" mappedBy="baseBatch" title="Batchs" />
  
  </entity>

</domain-models>

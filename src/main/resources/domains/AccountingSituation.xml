<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">
  
  <module name="account" package="com.axelor.apps.account.db"/>
  
  <entity name="AccountingSituation" lang="java">
	
    <many-to-one name="company" ref="com.axelor.apps.base.db.Company" title="Company"/>
    <many-to-one name="partner" ref="com.axelor.apps.base.db.Partner" title="Payer partner" />
	
	
 	<many-to-one name="customerAccount" ref="com.axelor.apps.account.db.Account" title="Customer account"/>
    <many-to-one name="supplierAccount" ref="com.axelor.apps.account.db.Account" title="Supplier account"/>
	
	<!-- PAGE Compte Client -->
    <many-to-many name="moveLineSet" ref="com.axelor.apps.account.db.MoveLine" title="Movelines"/>    
    <decimal name="balanceCustAccount" title="Total balance"/>
    <decimal name="balanceDueCustAccount" title="Due balance"/>
	<decimal name="balanceDueReminderCustAccount" title="Due balance (remindable)"/>


	<!--  PAGE Relance -->
	<many-to-one name="reminder" ref="com.axelor.apps.account.db.Reminder" title="Reminder"/>
	
  </entity>
</domain-models>

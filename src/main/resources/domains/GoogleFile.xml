<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_2.0.xsd">

	<module name="googleapps" package="com.axelor.apps.googleapps.db" />
	<entity name="GoogleFile">
	
		<string name="fileId" title="File Id" help="true"/>
		<string name="fileName" title="File Name" namecolumn="true" help="true"/>
		<string name="fileType" title="File Type" help="true"/>
		<string name="fileSize" title="File Size" help="true"/>
		<string name="lastModified" title="Last Modified" help="true"/>
		<string name="fileContent" multiline="true" large="true" help="true"/>	
		<boolean name="trashed" default="false" help="true"/>
				
		<!-- following three attributes used for only inserting the files meta data as shared with me files not used in form of google file
		and they are helpful in filtering the shared with me files for current user	 -->
		<boolean name="sharedWithMe" default="false" help="true" />
		<boolean name="writable" default="true" help="true"/>
		<string name="sharedBy"  help="true"/>
				
		<many-to-one name="driveUserInfo" ref="com.axelor.apps.base.db.UserInfo" orphan="true" help="true"/>
		<many-to-one name="googleDirectory" ref="GoogleDirectory" orphan="true" help="true"/>
		<one-to-many name="filePermissionsList" ref="com.axelor.apps.googleapps.db.FilePermission" mappedBy="googleFile" help="true" />
				
	</entity>     
</domain-models>   


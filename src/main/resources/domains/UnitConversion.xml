<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="base" package="com.axelor.apps.base.db"/>

  <entity name="UnitConversion" lang="java" cachable="true">
  
    <many-to-one name="startUnit" ref="Unit" title="From Unit" required="true"/>
    <many-to-one name="endUnit" ref="Unit" title="To Unit" required="true"/>
    <decimal name="coef" title="Coefficient" required="true" precision="30" scale="12"/>
  
    <string name="name" search="startUnit,endUnit" title="Name">
    	<![CDATA[
    		return startUnit.getName() + " => " + endUnit.getName();
    	]]>
   	</string>
  
  </entity>

</domain-models>

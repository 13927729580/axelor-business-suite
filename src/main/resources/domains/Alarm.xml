<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_2.0.xsd">
	
  <module name="base" package="com.axelor.apps.base.db"/>
  
  <entity name="Alarm" lang="java">
  
    <datetime name="date" title="Date" required="true" tz="true"/>
    <many-to-one name="alarmEngine" ref="com.axelor.apps.base.db.AlarmEngine" title="Alarm engine"/>
    <boolean name="acquitOk" title="Suspend Alarm ?" />
    
    <string name="content" title="Message" large="true" />

    <many-to-one name="invoice" ref="com.axelor.apps.account.db.Invoice" title="Invoice"/>
	<many-to-one name="partner" ref="com.axelor.apps.base.db.Partner" title="Partner"/>
    
    <decimal name="balanceDueReminder" title="Due balance Reminder" />
    
  </entity>
  
</domain-models>

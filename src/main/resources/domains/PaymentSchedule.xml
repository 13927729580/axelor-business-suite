<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">
  
  <module name="account" package="com.axelor.apps.account.db"/>
  
  <entity name="PaymentSchedule" lang="java">
  
    <string name="scheduleId" title="Reference" unique="false" required="false" namecolumn="true" readonly="true"/>
    <date name="creationDate" title="Creation Date"/>
    <date name="startDate" title="Schedule start Date"/>
    <many-to-one name="invoice" ref="com.axelor.apps.account.db.Invoice" title="Invoice"/>
    <integer name="nbrTerm" title="Nbr. of terms"/>
    <many-to-one name="bankDetails" ref="com.axelor.apps.base.db.BankDetails" title="Bank Details"/>
    <many-to-one name="paymentMode" ref="com.axelor.apps.account.db.PaymentMode" title="Payment Mode" required="true"/>
    <one-to-many name="paymentScheduleLineList" ref="PaymentScheduleLine" mappedBy="paymentSchedule" title="Schedule lines" readonly="false"/>
    <string name="state" title="Status" default="1" selection="payment.schedule.state.select"/>
    <many-to-one name="partner" ref="com.axelor.apps.base.db.Partner" title="Partner" required="true"/>
    <many-to-one name="company" ref="com.axelor.apps.base.db.Company" title="Company" required="true"/>
    <many-to-one name="generatedMove" ref="com.axelor.apps.account.db.Move" title="Technical move" readonly="true"/>
    <many-to-many name="invoiceSet" ref="com.axelor.apps.account.db.Invoice" title="Select invoices to include in the payment schedule"/>
    <integer name="natureSelect" title="Schedule nature" selection="iaccount.account.schedule.nature.select" default="0"/> 
    <integer name="rejectCounter" title="Reject counter" readonly="true"/>
    <many-to-one name="paymentScheduleType" ref="com.axelor.apps.account.db.PaymentScheduleType" title="Schedule type"/>
    <many-to-one name="subPaymentScheduleType" ref="com.axelor.apps.account.db.PaymentScheduleType" title="Schedule subType"/>
    
   	<integer name="irrecoverableStateSelect" title="Irrecoverable status" default="0" readonly="true" selection="iaccount.account.schedule.irrecoverable.state.select"/>
	<many-to-one name="managementObject" ref="com.axelor.apps.account.db.ManagementObject" title="Irrecoverable shift reason"/>
	
    <decimal name="inTaxAmount" title="Total amount A.T.I. remaining to pay on selected invoices">
    	<![CDATA[
	    	BigDecimal totalInvoices = BigDecimal.ZERO;
    		if (invoiceSet != null) {
				for (Invoice invoice : invoiceSet){
					totalInvoices = totalInvoices.add(invoice.getInTaxTotalRemaining());
				}
			}
			return totalInvoices;
	    ]]>
    </decimal>
    <decimal name="totalToPayAmount" title="Total amount for generated schedule lines">
    	<![CDATA[
    		BigDecimal totalToPay = BigDecimal.ZERO;
	    	if (paymentScheduleLineList != null) {
				for (PaymentScheduleLine paymentScheduleLine : paymentScheduleLineList){
					totalToPay = totalToPay.add(paymentScheduleLine.getInTaxAmount());
				}
			}
			return totalToPay;
	    ]]>
    </decimal>
	
  </entity>
  
</domain-models>

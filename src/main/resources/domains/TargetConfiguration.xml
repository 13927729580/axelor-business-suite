<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="crm" package="com.axelor.apps.crm.db"/>

  <entity name="TargetConfiguration" lang="java">
  
    <string name="name" title="Nom"/>
    <string name="code" title="Code"/>
    <many-to-one name="userInfo" ref="com.axelor.apps.base.db.UserInfo" title="Assigned to"/>
  	<many-to-one name="team" ref="com.axelor.apps.base.db.Team" title="Team"/>
  	
<!-- Opportunity -->
    <decimal name="opportunityAmountEarned" title="Amount earned"/>
    <integer name="opportunityCreatedNumber" title="Created number"/>
    <integer name="opportunityCreatedWon" title="Created won"/>
    
<!-- Sales order -->
<!-- 	<decimal name="salesOrderAmountEarned" title="Amount earned"/> -->
<!--     <integer name="salesOrderCreatedNumber" title="Created number"/> -->
<!--     <integer name="salesOrderCreatedWon" title="Created won"/> -->

<!-- Call -->
    <integer name="callEmittedNumber" title="Call emitted number"/>
    <integer name="meetingNumber" title="Meeting number"/>
    
    <integer name="periodTypeSelect" title="Period type" selection="crm.target.configuration.period.type.select"/>
    
    <date name="fromDate" title="Date from" required="true"/>
    <date name="toDate" title="Date to" required="true"/>
    
    
  </entity>
</domain-models>

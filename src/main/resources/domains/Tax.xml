<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="account" package="com.axelor.apps.account.db"/>

  <entity name="Tax" lang="java" cachable="true">
  
    <string name="name" title="Name"/>
    <string name="code" title="Code"/>
    <integer name="orderId" title="Ordering Nbr" unique="true" help="Used to order the taxlines on invoices PDF." />
    <many-to-one name="account" ref="com.axelor.apps.account.db.Account" title="Account"/>
    <string name="condition"  title="Condition(s)"/>
    <one-to-many name="taxLineList" ref="TaxLine" mappedBy="tax" title="Tax lines"/>
    <one-to-many name="formulaControlList" ref="com.axelor.apps.base.db.FormulaControl" mappedBy="tax" title="Formula controls" />
    
    <one-to-many name="accountManagementList" ref="com.axelor.apps.account.db.AccountManagement" title="Account Management settings" />
    <decimal name="managementFeeRate" title="Taux de gestion (%)" scale="2" precision="6" default="2"/>
    
  </entity>

</domain-models>

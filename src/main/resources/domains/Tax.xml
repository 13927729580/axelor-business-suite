<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="account" package="com.axelor.apps.account.db"/>

  <entity name="Tax" lang="java" cachable="true">
  
    <integer name="importId"/>
    <string name="name" title="Name" required="true"/>
    <string name="code" title="Code" required="true" unique="true"/>
    <many-to-one name="activeTaxLine" ref="com.axelor.apps.account.db.TaxLine" title="Tax active version"/>
    
    <one-to-many name="taxLineList" ref="com.axelor.apps.account.db.TaxLine" mappedBy="tax" title="Tax versions"/>
    
  	<one-to-many name="taxAccountList" ref="com.axelor.apps.account.db.TaxAccount" mappedBy="tax" title="Tax account configuration"/>
  
 	<unique-constraint columns="code,name"/>
  
  </entity>

</domain-models>
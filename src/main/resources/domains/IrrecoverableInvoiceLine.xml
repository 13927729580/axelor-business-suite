<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="account" package="com.axelor.apps.account.db"/>

  <entity name="IrrecoverableInvoiceLine" lang="java">
  
  	<many-to-one name="irrecoverableCustomerLine" ref="com.axelor.apps.account.db.IrrecoverableCustomerLine" title="Client"/>
  	<integer name="invoiceLineSeq" title="Référence"/>
  	<many-to-one name="invoice" ref="com.axelor.apps.account.db.Invoice" title="Facture"/>
  	<one-to-many name="irrecoverableReportLineList" ref="com.axelor.apps.account.db.IrrecoverableReportLine" mappedBy="irrecoverableInvoiceLine" title="Reportings"/>
 	
 	<string name="name" title="Nom">
 		<![CDATA[
	    	if (invoice != null) return invoice.getInvoiceId() + " - " + invoiceLineSeq;
	    	else return invoiceLineSeq.toString();
	    ]]>
	</string>

  </entity>

</domain-models>

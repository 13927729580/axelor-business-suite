<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="supplychain" package="com.axelor.apps.supplychain.db"/>

  <entity name="SalesOrderLine" lang="java">
  
  	<many-to-one name="salesOrder" ref="com.axelor.apps.supplychain.db.SalesOrder" title="Sale order"/>
  	<integer name="sequence" title="Sequence"/>
  	<many-to-one name="product" ref="com.axelor.apps.base.db.Product" title="Product"/>
  	<decimal name="qty" title="Qty" default="1"/>
  	<boolean name="isToPrintLineSubTotal" title="Print subtotal per line"/>
  	<string name="productName" title="Product name"/>
  	<decimal name="price" title="Unit price"/>
  	<many-to-one name="vatLine" ref="com.axelor.apps.account.db.VatLine" title="V.A.T."/>
  	<decimal name="exTaxTotal" title="Total W.T."/>
  	
  	<many-to-one name="task" ref="com.axelor.apps.organisation.db.Task" title="Task"/>
  	<many-to-many name="employeeSet" ref="com.axelor.apps.organisation.db.Employee" title="Employees"/>
  	<many-to-many name="candidateSet" ref="com.axelor.apps.organisation.db.Candidate" title="Candidates"/>
  	<string name="description" title="Description" large="true"/>
  	<many-to-one name="unit" ref="com.axelor.apps.base.db.Unit" title="Unit"/>
  	<date name="invoicingDate" title="Invoicing Date"/>
  	
  	<boolean name="hasToCreateTask" title="Créer tâche/OF ?"/>
  	<boolean name="hasToBuy" title="Acheter ?"/>
  	<decimal name="discountAmount" title="Remise"/>
  	<decimal name="discountTypeSelect" title="En % / fixe" selection="organisation.sales.order.line.discount.type.select"/>
  	
  	<boolean name="isOrdered" title="Commandé ?"/>
  	<boolean name="isToInvoice" title="A facturer ?"/>
  	<boolean name="isInvoiced" title="Facturé ?"/>
  	<decimal name="amountInvoiced" title="Montant facturé"/>
  	<decimal name="amountRemainingToBeInvoiced" title="Reste à facturer"/>
  	
<!--   	Onglet Détail de la ligne de devis -->
	<one-to-many name="salesOrderSubLineList" ref="com.axelor.apps.supplychain.db.SalesOrderSubLine" mappedBy="salesOrderLine" title="Les sous-lignes de devis"/>
  
<!--   Onglet Historique -->
  	<many-to-many name="invoiceSet" ref="com.axelor.apps.account.db.Invoice" title="Lignes de Factures associées"/>
  	
  	
<!--   	Devis-commande fournisseur -->
	<date name="deliveryDate" title="Date de livraison"/>

<!-- Bon de livraison -->
  	<boolean name="isInvoiceControlled" title="Facture controllée"/>
  	
  	
  </entity>

</domain-models>

<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">
  
  <module name="message" package="com.axelor.apps.message.db"/>
  
  <entity name="EmailAddress" lang="java">
  	
  	<string name="importId" />
	<one-to-one name="partner"  ref="com.axelor.apps.base.db.Partner" title="Contact" mappedBy="emailAddress"/>
	<one-to-one name="lead"  ref="com.axelor.apps.crm.db.Lead" title="Lead" mappedBy="emailAddress"/>
	<string name="address" title="Address"/>
	<string name="name" readonly="true">
		<![CDATA[
		String name = "";
	    if(partner != null)  {   name += partner.getFullName()+" ";  }
	    if(address != null)  {   name += "["+address+"]";  }
	    return name;
	    ]]>
	</string>
	
  </entity>
  
</domain-models>

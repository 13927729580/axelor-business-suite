<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="base" package="com.axelor.apps.base.db"/>

  <entity name="UserInfo" sequential="true" lang="java">
  
    <many-to-one name="internalUser" ref="com.axelor.auth.db.User" title="User"/>
    <many-to-many name="companySet" ref="com.axelor.apps.base.db.Company" title="Company"/>
    <many-to-one name="activeCompany" ref="com.axelor.apps.base.db.Company" title="Active company"/>
    <many-to-one name="partner" ref="com.axelor.apps.base.db.Partner" title="Partner"/>
    <many-to-one name="agency" ref="com.axelor.apps.base.db.Agency" title="Agency"/>
    <datetime name="today" title="Today date" tz="true" />
<!--     <many-to-many name="teamSet" ref="com.axelor.apps.base.db.Team" mappedBy="userInfoSet" title="Equipes"/> -->
    <many-to-many name="teamSet" ref="com.axelor.apps.base.db.Team"  title="Teams"/>
    <many-to-one name="employee" ref="com.axelor.apps.organisation.db.Employee" title="Employee"/>
    <many-to-many name="projectSet" ref="com.axelor.apps.organisation.db.Project" title="Projects"/>
    <many-to-one name="activeTeam" ref="com.axelor.apps.base.db.Team"  title="Active Team"/>
   	<many-to-many name="personalCredentialSet" ref="com.axelor.apps.socialnetwork.db.PersonalCredential"/>
    <many-to-one name="timesheetPeriodConfig" ref="com.axelor.apps.organisation.db.TimesheetPeriodConfig" title="Timesheet period config"/>
    
    <string name="fullName" namecolumn="true" search="partner" title="Partner name">
    	<![CDATA[
    	if(partner != null && partner.getFirstName() != null && partner.getName() != null)  {
    		return partner.getFirstName()+ " " + partner.getName();
    	}
    	else if(partner != null && partner.getFirstName() != null)  {
	    	return partner.getFirstName();
	    }
    	else if(partner != null && partner.getName() != null)  {
    	    return partner.getName();
    	}
    	else  {
    		return "";
    	}
    	]]>
   	</string>
    
  </entity>

</domain-models>

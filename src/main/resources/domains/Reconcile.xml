<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">
  
  <module name="account" package="com.axelor.apps.account.db"/>
  
  <entity sequential="true" name="Reconcile" lang="java">
  
    <decimal name="amount" title="Amount reconciled" default="0.0"/>
    <many-to-one name="debitMoveLine" ref="MoveLine" title="Debit line" required="true"/>
    <many-to-one name="creditMoveLine" ref="MoveLine" title="Credit line" required="true"/>
    <integer name="statusSelect" title="Status" default="1" readonly="true" selection="account.reconcile.status.select"/>
    
    <!--  Will be fully reconciled if the payment amount is with a range of +/-20 cts compare to the amount remaining to pay  -->
    <boolean name="canBeZeroBalanceOk" title="Clear remaining amount" default="false"/>
    
    <!--  Will be fully reconciled if there is a currency delta amount -->
    <boolean name="mustBeZeroBalanceOk" title="Must be solded out" default="false" />
    
  </entity>

</domain-models>

<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="account" package="com.axelor.apps.account.db"/>

  <entity name="IrrecoverableReportLine" lang="java">
  
  	<many-to-one name="irrecoverableInvoiceLine" ref="com.axelor.apps.account.db.IrrecoverableInvoiceLine" title="Facture"/>
  	<many-to-one name="irrecoverablePaymentScheduleLineLine" ref="com.axelor.apps.account.db.IrrecoverablePaymentScheduleLineLine" title="Echéance rejetée"/>
  	<integer name="reportLineSeq" title="Référence"/>
  	<string name="label" title="Libellé" readonly="true"/>
  	<decimal name="value" title="Valeur" readonly="true"/>
  
  	<string name="name" title="Nom">
  		<![CDATA[
	    	if (irrecoverableInvoiceLine != null) return irrecoverableInvoiceLine.getInvoiceLineSeq() + " - " + reportLineSeq;
	    	if (irrecoverablePaymentScheduleLineLine != null) return irrecoverablePaymentScheduleLineLine.getName() + " - " + reportLineSeq;
	    	else return reportLineSeq.toString();
	    ]]>
  	</string>
  
  </entity>

</domain-models>

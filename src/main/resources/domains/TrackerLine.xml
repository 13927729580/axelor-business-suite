<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">

  <module name="marketing" package="com.axelor.apps.marketing.db"/>

  <entity name="TrackerLine" lang="java">
  	
  	<many-to-one name="tracker" ref="com.axelor.apps.marketing.db.Tracker" title="Tracker" initParam="true"/>
  	<integer name="counter" readonly="true" title="Number of hits"/>
  	
  	<many-to-one name="campaign" ref="com.axelor.apps.marketing.db.Campaign" initParam="true"/>
  	
  	<finder-method name="findByCampaign" using="String:campaignCode" filter="self.campaign.code = :campaignCode" all="true"/>
  	<finder-method name="findByCampaignAndTracker" using="String:campaignCode,String:trackerCode" filter="self.campaign.code = :campaignCode AND self.tracker.code = :trackerCode"/>
    
  </entity>

</domain-models>

<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://apps.axelor.com/xml/ns/domain-models" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/domain-models http://apps.axelor.com/xml/ns/domain-models/domain-models_0.9.xsd">
  
  <module name="message" package="com.axelor.apps.message.db"/>
  
  <entity name="Message" lang="java">
  
  	<integer name="typeSelect" title="Type" selection="email.type.select"/>
  	<string name="subject" title="Subject"/>
  	<string name="content" title="Content" large="true"/>
	<datetime name="sendedDate" title="Sended date"/>
	<string name="relatedTo1Select" title="Related to" selection="base.message.related.to.select"/>
  	<integer name="relatedTo1SelectId"/>
  	<string name="relatedTo2Select" title="Related to" selection="base.message.related.to.select"/>
  	<integer name="relatedTo2SelectId"/>
	<integer name="statusSelect" title="Status" selection="email.status.select"/>
  	
  <!--   	Email -->
  	<many-to-many name="toEmailAddressSet" ref="com.axelor.apps.message.db.EmailAddress" title="To"/>
  	<many-to-many name="ccEmailAddressSet" ref="com.axelor.apps.message.db.EmailAddress" title="Cc" help="Carbon copy"/>
  	<many-to-many name="bccEmailAddressSet" ref="com.axelor.apps.message.db.EmailAddress" title="Bcc" help="Blind carbon copy"/>
  	<many-to-one name="fromEmailAddress" ref="com.axelor.apps.message.db.EmailAddress" title="Sender (Email)" readonly="true"/>
  	<boolean name="sentByEmail" title="Sent by email"/>
  	
<!--   	Intern message -->
  	<many-to-one name="senderUserInfo" ref="com.axelor.apps.base.db.UserInfo" title="Sender (User)" readonly="true"/>
  	<many-to-one name="recipientUserInfo" ref="com.axelor.apps.base.db.UserInfo" title="Recipient"/>
  
  
<!--   	Not displayed, used for ticket event -->
	<many-to-one name="event" ref="com.axelor.apps.crm.db.Event" title="Event"/>

  </entity>
  
</domain-models>

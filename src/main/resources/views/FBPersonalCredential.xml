<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">

	<grid name="fb-credential-grid" title="Facebook Personal Credential List"
		model="com.axelor.apps.base.db.PersonalCredential">
		
		<toolbar>
			<button name="save" title="Save" hidden="true" />
			<button name="edit" title="Edit" hidden="true" />
			<button name="delete" title="Delete" hidden="true" />
			<button name="fbDelAll" title="De-Authorize"
				onClick="com.axelor.sn.web.FBController:clearAllData"
				prompt="All detail of Your will be removed would you like to continue?" />
		</toolbar>
		<field name="snType"></field>
		<field name="snUserName"></field>
		<field name="userToken" hidden="true"></field>
	</grid>

	<form name="fb-credential-form" cols="2" colWidths="*,200"
		onNew="action-user-personal,action-dsp-snusername"
		title="Facebook Personal Credential Form" model="com.axelor.apps.base.db.PersonalCredential">
		<toolbar>
			<button name="save" title="Save" hidden="true" />
		</toolbar>
		<group title="Facebook Personal Credentials" cols="4" colSpan="1">
			<break />
			<field name="snUserName"></field>

			<break />
			<button name="getTokenFB" title="Allow Access"
				onClick="com.axelor.sn.web.FBController:getAuthUrlFB" />
			<break />
			<field name="userId" readonly="true" hidden="true"></field>
		</group>
		<group title="Help" colSpan="1" cols="1" canCollapse="true">
			<label title="Click on Allow Access to Authorize the Connector Applications it will ask you for Login to Facebook and Authorize Application Thats it."/>
		</group>
	</form>
	<action-record name="action-user-personal" model="com.axelor.apps.base.db.PersonalCredential">
		<field name="userId" expr="eval:__user__" />
	</action-record>
	
	
</object-views>

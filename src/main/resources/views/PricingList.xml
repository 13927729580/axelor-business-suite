<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
   
	<grid name="pricing-list-grid" title="Pricing lists" model="com.axelor.apps.account.db.PricingList">
        <field name="name"/>
        <field name="keyPricingList"/>
    </grid>
    
    <form name="pricing-list-form" title="Pricing list" model="com.axelor.apps.account.db.PricingList" cols="6">
        <field name="name"/>
        <field name="typeSelect"/>
        <field name="keyPricingList"/>
        <field name="pricingListVersionList" colSpan="6" grid-view="pricing-list-version-grid" form-view="pricing-list-version-form" summary-view="pricing-list-version-form"
        	onChange="meth-pricingList-fixVersionListDates"/>
    </form>
    
    <!-- ACTION METHOD -->
    <action-method name="meth-pricingList-fixVersionListDates">
        <call class="com.axelor.apps.account.web.PricingListControllerSimple" method="fixVersionListDates"/>
    </action-method>
    
</object-views>

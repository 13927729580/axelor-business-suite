<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="training-grid" title="Training" model="com.axelor.apps.organisation.db.Training">
        <field name="experienceTypeSelect"/>
        <field name="startDate"/>
        <field name="endDate"/>
        <field name="duration"/>
    </grid>
    
    <form name="training-form" title="Training" model="com.axelor.apps.organisation.db.Training" cols="4">
        <field name="experienceTypeSelect"/>
        <field name="startDate"/>
        <label title=" " colSpan="2" />
        <field name="endDate"/>
        <field name="jobTitle"/>
        <break/>
        <field name="service"/>
        <field name="duration"/>
        <field name="jobDescription" colSpan="4"/>
        <field name="referencePosition" />
        <break/>
        <field name="context" />
        <field name="aims" />
        <field name="progress" />
        <field name="technicalEnvironment" />
		<field name="result" />
		<break/>
<!-- 		<field name="business" /> -->
		<field name="toolKeywordSet" widget="TagSelect[create=keyWord]"/>
        <field name="sectorKeywordSet" widget="TagSelect[create=keyWord]"/>
        
    </form>

</object-views>
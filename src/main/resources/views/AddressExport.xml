<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
	<grid name="address-export-grid" title="Export addresses"
		model="com.axelor.apps.base.db.AddressExport">
		<field name="date" />
		<field name="path" />
	</grid>
	<form name="address-export-form" title="Export Address"
		model="com.axelor.apps.base.db.AddressExport"
		onNew="action-default-address-export-record">
		<panel>
		<field name="date" x-span="4" />
		<field name="path" x-span="8"/>
		<button name="export" title="Export" onClick="com.axelor.apps.base.web.AddressController:export"/>
		<spacer/>
		<field name="log" />
		</panel>
	</form>

	<action-record name="action-default-address-export-record"
		model="com.axelor.apps.base.db.AddressExport">
		<field name="date" expr="eval: __datetime__" />
	</action-record>
	
</object-views>
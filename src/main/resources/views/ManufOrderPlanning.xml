<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="manuf-order-planning-grid" title="MO plannings" model="com.axelor.apps.production.db.ManufOrderPlanning">
        <field name="manufOrderPlanningSeq"/>
        <field name="startDate"/>
   		<field name="endDate"/>
    </grid>
    
    <form name="manuf-order-planning-form" title="MO planning" model="com.axelor.apps.production.db.ManufOrderPlanning" cols="4"
    onNew="action-manuf-order-planning-default-record">
    	<field name="manufOrderPlanningSeq" />
    	<field name="isValidated"/>
    	<group title="Dates" colSpan="2" cols="2">
    		<field name="startDate"/>
    		<field name="endDate"/>
    	</group>
    	<group title="Action" colSpan="2" cols="1">
    		<button name="runSimulation" title="Run simulation"/>
       	 	<button name="validateChanges" title="Validate changes"/>
    	</group>
        <field name="manufOrderPlanningLineList" canSelect="true" colSpan="4"/>
        <field name="manufOrderList" canSelect="true" colSpan="4"/>
    </form>
    
    <action-record name="action-manuf-order-planning-default-record" model="com.axelor.apps.production.db.ManufOrderPlanning">
    	<field name="startDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()" if="startDate == null"/>
    </action-record>
    
</object-views>

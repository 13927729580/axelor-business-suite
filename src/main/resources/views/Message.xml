<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">
	
    <grid name="message-grid" title="Emails" model="com.axelor.apps.message.db.Message" orderBy="-sentDateT">
        <field name="sentDateT"/>
        <field name="senderUserInfo"/>
        <field name="subject"/>
    </grid>
    
    <form name="message-form" title="Email" model="com.axelor.apps.message.db.Message" cols="4"
    onNew="action-message-record-default,action-message-record-mail-account,action-message-record-get-signature,action-message-record-active-company,action-message-record-default-media-type,action-message-attrs-showhide-by-media-type"
    onLoad="action-message-attrs-showhide-by-media-type">
      <toolbar>
	        <button name="print" title="Print" icon="fa-print" onClick="save,action-message-method-print-pdf-email" readonlyIf="id == null"/>
	  </toolbar>
    	<group title="Informations" colSpan="4" readonlyIf="statusSelect == 2 || statusSelect == 3">
            <field name="sentDateT"/>
            <field name="fromEmailAddress" />
            <field name="senderUserInfo"/>
            <field name="mailAccount" widget="SuggestBox" onChange="action-message-record-get-signature"/>
            <field name="statusSelect"/>
            <field name="mediaTypeSelect" onChange="action-message-attrs-showhide-by-media-type"/>
<!--             <field name="sentByEmail"/> -->
        </group>
        <group title="Recipients" colSpan="4" readonlyIf="statusSelect == 2 || statusSelect == 3">
        	<field name="toEmailAddressSet" widget="TagSelect" x-create="emailAddress" form-view="email-address-form" colSpan="4"/>
        	<field name="ccEmailAddressSet" widget="TagSelect" x-create="emailAddress" form-view="email-address-form" colSpan="4"/>
        	<field name="bccEmailAddressSet" widget="TagSelect" x-create="emailAddress" form-view="email-address-form" colSpan="4"/>
        	<field name="addressBlock" colSpan="4" widget="html"/>
        	<field name="recipientUserInfo" widget="TagSelect" x-create="name" colSpan="4" help="Internal Message"/>
        </group>
        <group title="Content" colSpan="4" readonlyIf="statusSelect == 2 || statusSelect == 3">
        	<field name="subject" title="Subject" colSpan="4"/>
        	<spacer/>
       	 	<field name="content" colSpan="4" showTitle="false" widget="html"/>
        </group>
        <group title="Related to" colSpan="1" cols="2" readonlyIf="statusSelect == 3">
	        <field name="relatedTo1Select" widget="RefSelect" x-related="relatedTo1SelectId"/>
	        <field name="relatedTo2Select" widget="RefSelect" x-related="relatedTo2SelectId"/>
	        <field name="filePath" widget="url"/>
        </group>
<!--         <button name="printMail" title="Imprimer" colSpan="2" onClick="save,action-mail-method-print-mail"/> -->
<!--         <button name="reply" title="Reply" showIf="!canReply" onClick="com.axelor.dyndemo.web.DynController:showReply"/> -->
        <button name="send" title="Send" icon="fa-envelope" onClick="save,action-message-method-send-by-email,save" showIf="statusSelect == 1 "/>
        <button name="delete" title="Delete" icon="fa-trash" onClick="save,action-message-record-delete-status,save" showIf="statusSelect != 3"/>
    </form>
    
    <action-method name="action-message-method-print-pdf-email">
		<call class="com.axelor.apps.message.web.MessageController" method="print"/>
	</action-method>
	
	<action-record name="action-message-record-default-media-type" model="com.axelor.apps.message.db.Message">
    	<field name="mediaTypeSelect" expr="3"/>
    </action-record>
	
    <action-record model="com.axelor.apps.message.db.Message" name="action-message-record-active-company">
      <field name="company" expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserActiveCompany()"/>
    </action-record>
    
	<action-record name="action-message-record-default" model="com.axelor.apps.message.db.Message">
    	<field name="sentDateT" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDateTime()"/>
    	<field name="statusSelect" expr="eval: 1"/>
    	<field name="typeSelect" expr="eval: 2"/>
    	<field name="senderUserInfo" expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserInfo()"/>
    </action-record>
    
    <action-record name="action-message-record-mail-account" model="com.axelor.apps.message.db.Message">
    	<field name="mailAccount" expr="eval: com.axelor.apps.message.db.MailAccount.all().filter('self.isDefault = true and self.userInfo = ?1',senderUserInfo).fetchOne()"/>
    </action-record>
    
    <action-record name="action-message-record-get-signature" model="com.axelor.apps.message.db.Message">
    	<field name="content" expr="eval: mailAccount?.signature" if="content == null"/>
    </action-record>
    
    <action-record name="action-message-record-delete-status" model="com.axelor.apps.message.db.Message">
    	<field name="statusSelect" expr="3"/>
    </action-record>
	
	<action-attrs name="action-message-attrs-showhide-by-media-type">		
	  	<attribute name="hidden" for="addressBlock" expr="false" if="eval: mediaTypeSelect == 1" />
	   	<attribute name="hidden" for="addressBlock" expr="true" if="eval: mediaTypeSelect == 2 || mediaTypeSelect == 3" />
	    <attribute name="hidden" for="toEmailAddressSet" expr="true" if="eval: mediaTypeSelect == 1 || mediaTypeSelect == 3" />
	   	<attribute name="hidden" for="toEmailAddressSet" expr="false" if="eval: mediaTypeSelect == 2" />
	    <attribute name="hidden" for="ccEmailAddressSet" expr="true" if="eval: mediaTypeSelect == 1 || mediaTypeSelect == 3" />
	   	<attribute name="hidden" for="ccEmailAddressSet" expr="false" if="eval: mediaTypeSelect == 2" />
	    <attribute name="hidden" for="bccEmailAddressSet" expr="true" if="eval: mediaTypeSelect == 1 || mediaTypeSelect == 3" />
	   	<attribute name="hidden" for="bccEmailAddressSet" expr="false" if="eval: mediaTypeSelect == 2" />
	   	<attribute name="hidden" for="recipientUserInfo" expr="true" if="eval: mediaTypeSelect == 2 ||  mediaTypeSelect == 1" />
	  	<attribute name="hidden" for="recipientUserInfo" expr="false" if="eval: mediaTypeSelect == 3" /> 
    </action-attrs>
    
    <!-- ACTION METHOD -->
	<action-method name="action-message-method-send-by-email">
		<call class="com.axelor.apps.message.web.MessageController" method="sendByEmail"/>
	</action-method>
    
    <!-- 	Action commune pour tous les envoies par email avec utilisation de template et context -->
	
	<action-method name="action-send-by-email-with-template">
		<call class="com.axelor.apps.message.web.GenerateMessageController" method="callMessageWizard"/>
	</action-method>
    
</object-views>
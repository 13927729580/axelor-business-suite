<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="querie-grid" title="Queries" model="com.axelor.apps.base.db.Querie">
    	<field name="name"/>
        <field name="type"/>
        <field name="metaModel"/>
    </grid>
    
    <form name="querie-form" title="Querie" model="com.axelor.apps.base.db.Querie" cols="4">
        <field name="name"/>
        <field name="metaModel"/>
        <field name="type"/>
        <field name="query" widget="CodeEditor[syntax=sql]" hideIf="type == 3" colSpan="4"/>
        <button name="checkQuery" title="Check query" colSpan="4"/>
    </form>
    
</object-views>
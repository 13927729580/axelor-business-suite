<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
	
	<grid name="alarm-grid" title="Alarms" model="com.axelor.apps.base.db.Alarm">
	    <field name="date"/>
	    <field name="partner"/>
        <field name="invoice" />
	    <field name="alarmEngine.alarmMessage"/>
	    <field name="alarmEngine.alarmMessage.typeSelect"/>
	    <field name="acquitOk"/>
	</grid>
    
    <grid name="alarm-portal-grid" title="Alarm" model="com.axelor.apps.base.db.Alarm">
        <field name="date"/>
        <field name="partner"/>
        <field name="invoice" />
        <field name="alarmEngine.alarmMessage" />
        <field name="acquitOk"/>
    </grid>
    
    <form name="alarm-form" title="Alarm" model="com.axelor.apps.base.db.Alarm" cols="6">
        <field name="date"/>
        <field name="acquitOk"/>
        <field name="alarmEngine" summary-view="alarm-message-form" form-view="alarm-message-form" edit-window="self" />
        <field name="content" colSpan="6" showTitle="false" />
        <group title="Details" canCollapse="true" colSpan="6" cols="4">
	        <field name="partner" domain="self.isContact = false"/>
	        <field name="invoice" grid-view="invoice-grid" form-view="invoice-form"/>
	        <field name="balanceDueReminder"/>
        </group>
    </form>
    
    <form name="alarm-contract-line-form" title="Alarm" model="com.axelor.apps.base.db.Alarm" cols="4">
        <field name="date"/>
        <field name="acquitOk"/>
        <field name="alarmEngine" summary-view="alarm-message-form" form-view="alarm-message-form" edit-window="self" colSpan="4"/>
        <field name="content" colSpan="4" showTitle="false" />
        <group title="Details" canCollapse="true" colSpan="4" cols="4">
	        <field name="invoice" grid-view="invoice-grid" form-view="invoice-form"/>
	        <field name="balanceDueReminder"/>
        </group>
    </form>
	
    <form name="alarm-invoice-form" title="Alarm" model="com.axelor.apps.base.db.Alarm" cols="6">
        <field name="date"/>
        <field name="acquitOk" onChange="save,action-alarm-method-acquit-invoice" />
        <field name="alarmEngine" summary-view="alarm-message-form" form-view="alarm-message-form" edit-window="self" />
        <field name="content" colSpan="6" showTitle="false" />
    </form>
    
    <action-method name="action-alarm-method-acquit-invoice">
    	<call class="com.axelor.apps.base.web.AlarmController" method="acquitAlarms"/>
    </action-method>
    
</object-views>
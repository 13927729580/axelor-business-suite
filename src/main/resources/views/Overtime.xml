<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">
    
    <grid name="overtime-grid" title="Overtimes" model="com.axelor.apps.organisation.db.Overtime">
        <field name="user"/>
        <field name="date"/>
        <field name="totalAmount"/>
        <field name="currency"/>
        <field name="statusSelect"/>
        <field name="validationDate"/>
        <field name="period"/>
    </grid>
    
    <grid edit-icon="true" name="my-overtime-grid" title="My Overtimes" model="com.axelor.apps.organisation.db.Overtime">
		<field name="date" />
		<field name="totalAmount" />
		<field name="currency" />
		<field name="statusSelect" />
		<field name="validationDate" />
		<field name="period" />
	</grid>
    
    <form name="overtime-form" title="Overtime" model="com.axelor.apps.organisation.db.Overtime" cols="6"
    onNew="action-overtime-default-record">
        <field name="user"/>
        <field name="date"/>
        <field name="statusSelect" widget="NavSelect"/>
        <break />
        <field name="totalAmount"/>
        <field name="currency"/>
        <field name="overtimeLineList" colSpan="6"/>
        <break />
        <field name="period"/>
        <field name="motif" showIf="statusSelect == 6"/>
        <break />
       	<group title="Action(s)" colSpan="4">
   			<group colSpan="1" cols="1">
   				<button name="draft" title="Draft" colSpan="2" onClick="save,action-overtime-record-draft,save" showIf="statusSelect == 6"/>
        		<button name="submit" title="Submit" colSpan="2" onClick="save,action-overtime-record-submit,save" showIf="statusSelect == 1"/>
	            <button name="validateManager" title="Validate" colSpan="1" onClick="save,action-overtime-record-validate-manager,save" showIf="statusSelect == 2"/>
	            <button name="validateCommercial" title="Validate" colSpan="1" onClick="save,action-overtime-record-validate-commercial,save" showIf="statusSelect == 3"/>
	         	<button name="confirm" title="Confirm" colSpan="1" onClick="save,action-overtime-record-confirm,save" showIf="statusSelect == 4"/>
	            <button name="refuse" title="Refuse" colSpan="1" onClick="save,action-overtime-record-refuse" showIf="statusSelect == 1 || statusSelect == 2"/>
	        </group>
   			<group colSpan="1" cols="2" readonly="true">
   				<field name="validatedByUser" colSpan="1"/>
             	<field name="validationDate" colSpan="1"/>
   			</group>
        </group>
    </form>
    
    <action-record name="action-overtime-default-record" model="com.axelor.apps.organisation.db.Overtime">
    	<field name="user" expr="eval:__user__"/>
    	<field name="date" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()" if="date == null"/>
    	<field name="currency" expr="eval: _activeCompany.currency"/>	
    	<field name="statusSelect" expr="eval: 1"/>
    </action-record>
    
    <action-record name="action-overtime-record-submit" model="com.axelor.apps.organisation.db.Overtime">
    	<field name="statusSelect" expr="eval: 2"/>
    </action-record>
    
    <action-record name="action-overtime-record-validate-manager" model="com.axelor.apps.organisation.db.Overtime">
    	<field name="statusSelect" expr="eval: 3"/>
    	<field name="validationDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()"/>
    	<field name="validatedByUser" expr="eval:__user__"/>
    </action-record>
    
    <action-record name="action-overtime-record-validate-commercial" model="com.axelor.apps.organisation.db.Overtime">
    	<field name="statusSelect" expr="eval: 4"/>
    	<field name="validationDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()"/>
    	<field name="validatedByUser" expr="eval:__user__"/>
    </action-record>
        
    <action-record name="action-overtime-record-confirm" model="com.axelor.apps.organisation.db.Overtime">
    	<field name="statusSelect" expr="eval: 5"/>
    </action-record>
    
     <action-record name="action-overtime-record-refuse" model="com.axelor.apps.organisation.db.Overtime">
    	<field name="statusSelect" expr="eval: 6"/>
    </action-record>
    
    <action-record name="action-overtime-record-draft" model="com.axelor.apps.organisation.db.Overtime">
    	<field name="statusSelect" expr="eval: 1"/>
    </action-record>
    
</object-views>
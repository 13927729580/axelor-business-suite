<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
	
	<grid name="general-grid" title="General admin" model="com.axelor.apps.base.db.General">
       	<toolbar>
		    <button name="save" title="Edit" hidden="true"/>
		    <button name="new" title="New" hidden="true"/>
		    <button name="delete" title="Delete" hidden="true"/>
		    <button name="copy" title="Copy" hidden="true"/>
		    <button name="refresh" title="Refresh" hidden="true"/>
		    <button name="search" title="Search" hidden="true"/>
		</toolbar>
		<field name="today" />
	</grid>
	
	<form name="general-form" title="General admin" model="com.axelor.apps.base.db.General" cols="6">
       	<toolbar>
		    <button name="new" title="New" hidden="true"/>
		    <button name="delete" title="Delete" hidden="true"/>
		    <button name="back" title="Back" hidden="true"/>
		    <button name="copy" title="Copy" hidden="true"/>
		    <button name="search" title="Search" hidden="true"/>
		</toolbar>
	    <field name="today"/>
	    <field name="logOk"/>
	    <field name="defaultProjectUnit"/>
	    <notebook colSpan="6">
	        <page title="Accounting" cols="4">
	            <field name="defaultExemptionTax"/>
	            <field name="isInvoiceMoveConsolidated"/>
	            <separator title="Rejects reasons and codes list" colSpan="6"/>
	            <field name="transferAndDirectDebitInterbankCode"/>
	            <field name="chequeInterbankCode"/>
	            <separator title="Payer quality" colSpan="4"/>
	            <field name="payerQualityConfigLineList" colSpan="4"/>
	            <button name="payerQualityProcess" title="Compute payers quality" colSpan="2" onClick="action-general-method-payer-quality-process"/>
	            <separator title="Currency conversion" colSpan="4"/>
	            <button name="updateCurrencyConversion" title="Update &amp; Historize conversion rate" colSpan="1" onClick="save,action-general-method-update-currency-conversion" />
	            <button name="checkConversionRate" title="Check conversion rate" colSpan="1" onClick="wizard-check-currency-rate" />
	            <label title="" /> 
	            <field name="currencyConversionLineList" colSpan="4" />
	        </page>
	        <page title="Interfaces" cols="4">
	            <group name="map" title="Mapping" colSpan="4">
	                <field name="mapApiSelect"/>
	                <button name="checkMapApi" title="Test mapping service connection" colSpan="2" onClick="com.axelor.apps.base.web.AddressController:checkMapApi"/>
	            </group>
	            <group name="qas" title="Addresses validation" colSpan="4">
	                <field name="qasWsdlUrl"/>
	                <button name="checkQasWsdl" title="Test connection to QAS webservice" colSpan="2" onClick="com.axelor.apps.base.web.AddressController:check"/>
	            </group>
	            <group name="ws" title="Webserivces" colSpan="4">
	            	<field name="currencyWsURL" colSpan="4"/>
	            </group>
	        </page>
	        <page title="Exceptions" cols="4">
	            <field name="exceptionDefaultMsg" colSpan="4"/>
	            <field name="exceptionInvoiceMsg" colSpan="4"/>
	            <field name="exceptionAccountingMsg" colSpan="4"/>
	            <field name="exceptionReminderMsg" colSpan="4"/>
	            <field name="exceptionMailMsg" colSpan="4"/>
	            <field name="exceptionSupplychainMsg" colSpan="4"/>
	        </page>
	    </notebook>
	</form>
	
	<!-- ACTION METHOD -->

	<action-method name="action-general-method-payer-quality-process">
		<call class="com.axelor.apps.account.web.GeneralController" method="payerQualityProcess" />
	</action-method>
	
	<action-method name="action-general-method-update-currency-conversion">
		<call class="com.axelor.apps.account.web.GeneralController" method="updateCurrencyConversion" />
	</action-method>
	
	
	<action-view title="Check currency conversion rate" model="com.axelor.apps.base.db.Wizard" name="wizard-check-currency-rate">
	    <view type="form" name="wizard-check-currency-rate-form"/>
	    <view-param name="popup" value="reload"/>
	    <view-param name="forceEdit" value="true"/> 
	    <view-param name="width" value="800" />
	    <view-param name="show-confirm" value="false" />
	    <context name="_general" expr="eval:__this__"/>
	</action-view>
	
</object-views>
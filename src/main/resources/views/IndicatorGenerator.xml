<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
	
	<grid name="indicator-generator-grid" title="Indicator generators" model="com.axelor.apps.base.db.IndicatorGenerator">
		<field name="code"/>
		<field name="name"/>
		<field name="requestLanguage" />
		<field name="request" />
	</grid>
	
	<form name="indicator-generator-form" title="Indicator generator" model="com.axelor.apps.base.db.IndicatorGenerator">
		<field name="code"/>
		<field name="name" colSpan="4"/>
		<field name="requestLanguage" />
		<field name="request" colSpan="4" widget="CodeEditor[syntax=sql]"/>
		<button name="run" title="Execute" colSpan="4" onClick="save,com.axelor.apps.base.web.IndicatorGeneratorController:run" />
		<field name="result" colSpan="4" />
		<field name="log" colSpan="4" />
	</form>

</object-views>
<form cols="4" onLoad="action-target-method-update,save" onSave="action-target-validate" name="target-form" title="Target" model="com.axelor.apps.crm.db.Target">
  <panel title="Information">
    <field name="name"/>
    <field name="code"/>
    <field name="user" showIf="team == null"/>
    <field name="team" showIf="user == null"/>
  </panel>
  <panel title="Period">
    <field name="periodTypeSelect"/>
    <field name="fromDate"/>
    <field name="toDate"/>
  </panel>
  <panel-tabs>
    <panel title="Opportunity">
    <panel title="Target" x-span="6">
     <field name="opportunityAmountWonTarget" x-span="10"/>
     <label title="Vs" x-span="2"/>
     <field name="opportunityCreatedNumberTarget" x-span="10"/>
     <label title="Vs" x-span="2"/>
    <field name="opportunityCreatedWonTarget" x-span="10"/>
      <label title="Vs" x-span="2"/>
    </panel>
    
    <panel title="Real" x-span="6">
        <field name="opportunityAmountWon" showTitle="false" x-span="12"/>
        <field name="opportunityCreatedNumber" showTitle="false" x-span="12"/>
      <field name="opportunityCreatedWon" showTitle="false" x-span="12"/>
    </panel>
  </panel>  
  
  <panel title="Events">
    <panel title="Target" x-span="6">
        <field name="callEmittedNumberTarget" x-span="10"/>
        <label title="Vs" x-span="2"/>
      <field name="meetingNumberTarget" x-span="10"/>
      <label title="Vs" x-span="2"/>
    </panel>
    <panel title="Real" x-span="6">
        <field name="callEmittedNumber" showTitle="false" x-span="12"/>
       <field name="meetingNumber" showTitle="false" x-span="12"/>
    </panel>
    
   </panel>
    </panel-tabs>

</form>

    
    <action-method name="action-target-method-update">
    	<call class="com.axelor.apps.crm.web.TargetController" method="update"/>
    </action-method>
    
    <action-validate name="action-target-validate">
    	<error message="From date must be less than the to date" if="fromDate > toDate"/>
    </action-validate>
    
</object-views>
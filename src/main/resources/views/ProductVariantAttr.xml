<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
   
    <grid name="product-variant-attr-grid" title="Product variant attributes" model="com.axelor.apps.base.db.ProductVariantAttr">
        <field name="name"/>
        <field name="code"/>
        <field name="productVariantValueList"/>
    </grid>
    
    <form name="product-variant-attr-form" title="Product variant attribute" model="com.axelor.apps.base.db.ProductVariantAttr">
    	<panel>
        	<field name="name" />
        	<field name="code" x-bind="{{code|uppercase}}" />
        	<panel-related  field="productVariantValueList" colSpan="12"/>
        </panel>
    </form>   

</object-views>
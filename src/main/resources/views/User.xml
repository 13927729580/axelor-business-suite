<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">
    <grid name="user-grid" title="Users list" model="com.axelor.auth.db.User" id="user-grid-base">
        <field name="name"/>
        <field name="fullName"/>
        <field name="partner"/>
        <field name="activeCompany"/>
    </grid>
    <form name="user-form" title="User" model="com.axelor.auth.db.User" cols="4" id="user-form-base"
    onNew="action-user-language-record">
        <field name="partner" domain="self.isContact = false" grid-view="partner-grid" form-view="partner-form"/>
        <field name="activeCompany" widget="SuggestBox"/>
        <field name="today"/>
        <field name="activeCashRegister"/>
        <field name="timesheetPeriodConfig"/>
        <field name="employee"/>
        <notebook colSpan="4">
        	<page title="User login settings">
                <include view="user-form" from="axelor-core"/>
        	</page>
        	<page title="Internal companies">
        		<field name="companySet" showTitle="false" colSpan="4"/>
        	</page>
        	<page title="Teams">
        		<field name="activeTeam" colSpan="2"/>
        		<field name="teamSet" showTitle="false" colSpan="4"/>
        	</page>
        	<page title="Projects">
        		<field name="projectSet" showTitle="false" colSpan="4"/>
        	</page>
        	<page title="Social Network" colSpan="4" cols="2" colWidths="50%,50%">
        		<field name="fbPersonalCredential" grid-view="fb-credential-grid" form-view="fb-credential-form"/>
        		<field name="twtPersonalCredential" grid-view="twt-credential-grid" form-view="twt-credential-form"/>
        		<field name="lnPersonalCredential" grid-view="ln-credential-grid" form-view="ln-credential-form"/>
        	</page>
        	<page title="Calendars">
        		<field name="followersCalUserSet"/>
        		<field name="authorizeCalUserSet"/>
        	</page>
        </notebook>
        
    </form>
    
    
    
    
    <action-record name="action-user-language-record" model="com.axelor.auth.db.User">
    	<field name="language" expr="fr"/>
    </action-record>
    
</object-views>
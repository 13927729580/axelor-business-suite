<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
    <grid name="user-grid" title="Users list" model="com.axelor.auth.db.User" id="user-grid-base">
        <field name="name"/>
        <field name="fullName"/>
        <field name="partner"/>
        <field name="activeCompany"/>
    </grid>
    <form name="user-form" title="User" model="com.axelor.auth.db.User" id="user-form-base"
    onNew="action-user-language-record">
    	 <panel-side>
	        <field name="partner" domain="self.isContact = false" grid-view="partner-grid" form-view="partner-form"/>
	        <field name="activeCompany" widget="SuggestBox"/>
	        <field name="today"/>
	        <field name="activeCashRegister"/>
	        <field name="timesheetPeriodConfig"/>
	        <field name="employee"/>
        </panel-side>
        <panel-include view="user-form" from="axelor-core"/>
        <panel-tabs>
        	 <panel-related title="Internal companies" field="companySet" showTitle="false"/>
        	 <panel title="Teams">
        		<field name="activeTeam"/>
        		<panel-related field="teamSet" colSpan="12"/>
        	 </panel>
        	 <panel-related title="Projects" field="projectSet" showTitle="false" colSpan="4"/>
        	 <panel title="Social Network" colWidths="50%,50%">
        		<field name="fbPersonalCredential" grid-view="fb-credential-grid" form-view="fb-credential-form" colSpan="12"/>
        		<field name="twtPersonalCredential" grid-view="twt-credential-grid" form-view="twt-credential-form" colSpan="12"/>
        		<field name="lnPersonalCredential" grid-view="ln-credential-grid" form-view="ln-credential-form" colSpan="12"/>
        	 </panel>
        	<panel title="Calendars">
        		<panel-related field="followersCalUserSet" colSpan="12"/>
        		<panel-related field="authorizeCalUserSet" colSpan="12"/>
        	</panel>
        </panel-tabs>
    </form>
    
    
    
    
    <action-record name="action-user-language-record" model="com.axelor.auth.db.User">
    	<field name="language" expr="fr"/>
    </action-record>
    
</object-views>
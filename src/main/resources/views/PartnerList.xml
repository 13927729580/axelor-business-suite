<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
    <grid name="partner-list-grid" title="Partner lists" model="com.axelor.apps.base.db.PartnerList">
         <field name="code"/>
        <field name="description" colSpan="4"/>
    </grid>
    <form name="partner-list-form" title="Partner list" model="com.axelor.apps.base.db.PartnerList">
    	<panel>
	        <field name="code"/>
	        <field name="description" colSpan="12"/>
	        <panel-related field="partnerSet" colSpan="12"/>
        </panel>
    </form>

	<!--  Mapping -->
    <grid name="partner-list-map-grid" title="Sales maps" model="com.axelor.apps.base.db.PartnerList">
         <field name="code"/>
        <field name="description" colSpan="4"/>
    </grid>
	<form cols="2" colWidths="*,200" name="partner-list-map-form" title="Sales map" model="com.axelor.apps.base.db.PartnerList">
	    <panel>
	        <field name="code"/>
	        <field name="description" colSpan="12"/>
	        <field name="partnerSet" colSpan="12" domain="self.partnerTypeSelect = 1" showTitle="false"/>
	    </panel>
	    <panel-side name="action_buttons" title="Actions" hideIf="$popup()">
	        <button name="map" title="Sales map" onClick="save,com.axelor.apps.base.web.AddressController:viewSalesMap"/>
	        <field name="isCluster"/>
	    </panel-side>
	</form>
</object-views>




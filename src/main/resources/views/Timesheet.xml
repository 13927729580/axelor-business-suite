<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="timesheet-grid" title="Timesheets" model="com.axelor.apps.organisation.db.Timesheet">
        <field name="userInfo"/>
        <field name="period"/>
        <field name="fromDate"/>
        <field name="toDate"/>
    </grid>
    
    <form name="timesheet-form" title="Timesheet" model="com.axelor.apps.organisation.db.Timesheet" cols="8">
        <field name="userInfo"/>
        <field name="period"/>
        <field name="fromDate"/>
        <field name="toDate"/>
        <group title="Satisfaction" cols="4" colSpan="8" colWidths="10%,10%,10%,70%">
        	<separator colSpan="8" title="Project"/>
        	<group colSpan="2">
				<field name="projectSatisfactionSelect" widget="Progress" showIf="$readonly()"/>
				<field name="projectSatisfactionSelect" hideIf="$readonly()"/>
			</group>
	        <field name="projectComment"/>
	        <separator colSpan="8" title="Company"/>
	        <group colSpan="2">
				<field name="companySatisfactionSelect" widget="Progress" showIf="$readonly()"/>
				<field name="companySatisfactionSelect" hideIf="$readonly()"/>
			</group>
        	<field name="companyComment"/>
        </group>
        <group title="UnitÃ©" colSpan="8">
         	<field name="unit"/>
        	<field name="timeUnitSelect"/>
        </group>
        <spacer/>
        <separator colSpan="8" title="Details of time spent on project/tasks"/>
        <field name="timesheetLineList" colSpan="8"/>
        <field name="timesheetInputTotal"/>
        <field name="timesheetTotalByTypeList" colSpan="8"/>
    </form>
    
</object-views>
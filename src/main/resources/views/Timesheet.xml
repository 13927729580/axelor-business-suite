<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="timesheet-grid" title="Timesheets" model="com.axelor.apps.organisation.db.Timesheet">
        <field name="userInfo"/>
        <field name="fromDate"/>
        <field name="toDate"/>
        <field name="statusSelect"/>
    </grid>
    
    <form name="timesheet-form" title="Timesheet" model="com.axelor.apps.organisation.db.Timesheet" cols="4"
    onNew="action-timesheet-default-record,action-timesheet-getPeriod">
        <field name="userInfo"/>
        <field name="statusSelect" widget="NavSelect" showTitle="false"/>
        <break/>
        <field name="fromDate" onChange="action-timesheet-getPeriod"/>
        <field name="toDate"/>
        <field name="project" domain="self.isAffair = true"/>
        <group title="Satisfaction" cols="4" colSpan="4" colWidths="10%,10%,10%,70%">
        	<separator colSpan="8" title="Project"/>
        	<group colSpan="2">
				<field name="projectSatisfactionSelect" widget="SelectProgress"/>
			</group>
	        <field name="projectComment"/>
	        <separator colSpan="8" title="Company"/>
	        <group colSpan="2">
				<field name="companySatisfactionSelect" widget="SelectProgress"/>
			</group>
        	<field name="companyComment"/>
        </group>
        <group title="UnitÃ©" colSpan="4">
         	<field name="unit"/>
        </group>
        <spacer/>
        <separator colSpan="4" title="Details of time spent on project/tasks"/>
        <group title="Configuration" colSpan="4" readonlyIf="statusSelect == 3">
        	<field name="hasToGetLeaveRequests"/>
		  	<field name="hasToGetSpentTimeFromTask"/>
		  	<field name="hasToGetPlanningLine"/>
		  	<separator colSpan="4"/>
		  	<field name="hasCompleteTimesheetLines" onChange="action-timesheet-record-complete-group-default"/>
		  	<group title="Complete time sheet configuration" colSpan="4" showIf="hasCompleteTimesheetLines == true">
		  		<field name="completeFromDate"/>
			  	<field name="completeToDate"/>
			  	<field name="completeDefaultTask"/>
			  	<field name="duration"/>
		  	</group>
		  	<group title="Action(s)" colSpan="4" showIf="statusSelect != 3 &amp;&amp; hasToGetLeaveRequests == true || hasToGetSpentTimeFromTask == true || hasToGetPlanningLine == true || hasCompleteTimesheetLines == true)">
		  		<button name="getSpentTimeButton" title="Get past time" colSpan="1" onClick="save,action-timesheet-method-get-task-spent-time" 
		  		showIf="statusSelect != 3 &amp;&amp; hasToGetLeaveRequests == true || hasToGetSpentTimeFromTask == true || hasToGetPlanningLine == true)"/>
		  		<button name="completeTimeSheetButton" title="Complete time sheet" colSpan="1" onClick="save" showIf="statusSelect != 3 &amp;&amp; hasCompleteTimesheetLines == true"/>
		  	</group>
        </group>
	  	
        <field name="timesheetLineList" colSpan="4" grid-view="timesheet-line-grid" form-view="timesheet-line-form"/>
        <field name="timesheetInputTotal"/>
        <field name="timesheetTotalByTypeList" colSpan="4"/>
       	<group title="Action(s)" colSpan="4">
   			<group colSpan="1" cols="1">
	         	<button name="confirm" title="Confirm" colSpan="1" onClick="save,action-timesheet-record-confirm,save" showIf="statusSelect == 1 || statusSelect == 4"/>
	            <button name="validate" title="Validate" colSpan="1" onClick="save,action-timesheet-method-validate,action-timesheet-record-validate,save" showIf="statusSelect == 2"/>
	            <button name="cancel" title="Cancel" colSpan="1" onClick="save,action-timesheet-record-cancel" showIf="statusSelect == 1 || statusSelect == 2"/>
	        </group>
   			<group colSpan="1" cols="2" readonly="true">
   				<field name="validatedByUserInfo" colSpan="1"/>
             	<field name="validationDate" colSpan="1"/>
   			</group>
        </group>
    </form>
    
    <action-record name="action-timesheet-record-complete-group-default" model="com.axelor.apps.organisation.db.Timesheet">
    	<field name="completeFromDate" expr="eval: fromDate" if="completeFromDate == null"/>
    	<field name="completeToDate" expr="eval: toDate" if="completeToDate == null"/>
    </action-record>
    
    <action-record name="action-timesheet-default-record" model="com.axelor.apps.organisation.db.Timesheet">
    	<field name="userInfo" expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserInfo()"/>
    	<field name="fromDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()" if="fromDate == null"/>
    	<field name="toDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()" if="toDate == null"/>
    	<field name="statusSelect" expr="eval: _statusSelect ? _statusSelect : 1"/> 
    	<field name="unit" expr="com.axelor.apps.base.db.Unit(&quot;self.code = 'JR'&quot;).fetchOne()"/>	
    </action-record>
    
    <action-record name="action-timesheet-record-validate" model="com.axelor.apps.organisation.db.Timesheet">
    	<field name="statusSelect" expr="eval: 3"/>
    	<field name="validationDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()"/>
    	<field name="validatedByUserInfo" expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserInfo()"/>
    </action-record>
    
     <action-record name="action-timesheet-record-cancel" model="com.axelor.apps.organisation.db.Timesheet">
    	<field name="statusSelect" expr="eval: 4"/>
    </action-record>
    
    <action-method name="action-timesheet-getPeriod">
    	<call class="com.axelor.apps.organisation.web.TimesheetController" method="getPeriod"/>
    </action-method>
    
    <action-method name="action-timesheet-method-get-task-spent-time">
		<call class="com.axelor.apps.organisation.web.TimesheetController" method="getTaskSpentTime"/>
	</action-method>
    
    <action-record name="action-timesheet-record-confirm" model="com.axelor.apps.organisation.db.Timesheet">
    	<field name="statusSelect" expr="eval: 2"/>
    </action-record>
    
    <action-method name="action-timesheet-method-validate">
    	<call class="com.axelor.apps.organisation.web.TimsheetController" method="validate"/>
    </action-method>
    
    
    
</object-views>
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">

    <grid name="alarm-engine-batch-grid" title="Alarm engine batches" model="com.axelor.apps.base.db.AlarmEngineBatch">
    	<field name="code" />
   		<field name="metaModelSet" />
   		<field name="alarmEngineSet" />
    </grid>
    
    <form name="alarm-engine-batch-form" title="Alarm engine" model="com.axelor.apps.base.db.AlarmEngineBatch" cols="4">
    	<field name="code" />
        <notebook colSpan="4">
        	<page title="Configuration" cols="4">
        		<field name="metaModelSet" colSpan="2" />
        		<field name="alarmEngineSet" colSpan="2" onSelect="alarm-engine-batch-attrs-alarm-engine-domain"/>
        	</page>
        	<page title="Batches" cols="4">
		    	<field name="description" showTitle="false" colSpan="4" />
        		<field name="batchList" colSpan="4" grid-view="batch-grid" form-view="batch-form"/>
        	</page>
        </notebook>
        <button name="run" title="Run" onClick="save,alarm-engine-batch-method-run"/>
    </form>
    
    <action-method name="alarm-engine-batch-method-run">
    	<call class="com.axelor.apps.base.web.AlarmEngineBatchController" method="launch"/>
    </action-method>
    
    <action-attrs name="alarm-engine-batch-attrs-alarm-engine-domain">
    	<attribute name="domain" for="alarmEngineSet" expr="eval: &quot;self.externalOk = false AND self.metaModel.id IN (${metaModelSet?.collect{it.id}?.join(',')})&quot;" if="metaModelSet"/>
    </action-attrs>
    
</object-views>
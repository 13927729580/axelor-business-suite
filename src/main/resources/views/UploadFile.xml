<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">

	<form colWidths="*,200" cols="2" title="Upload File" name="uploadFile-form" onNew="action-uploadFile-in-current-user-directory">
			<toolbar>
			<button name="save" title="Save" hidden="true" />
			</toolbar>
		  	<group title="Upload file" >
		  			<field name="driveUser" hidden="true"/>
		  			<field name="googleDirectory" title="Directory" domain="self.driveUser=:driveUser"/><break/>
		  			<field name="fileName" title="File Name" help="Enter File name to be uploaded in Drive" widget="FileInput" />
		  			<button name="upload" title="Upload" onClick="com.axelor.googleapps.uploadFile.UploadFileController:uploadFile"/>
		  	</group>
			<group title="Instruction">
				<label title="Enter File Name which You want to upload  "/><break/>
		  		<label title=" Example : FirstDemp.jpg"/>
			</group>
	</form>
	
	<action-record name="action-uploadFile-in-current-user-directory" model="com.axelor.apps.base.db.GoogleFile">
		<field name="driveUser" expr="eval:__user__"/>
	</action-record>
</object-views>

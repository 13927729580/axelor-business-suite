<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">

	<grid name="mission-order-grid" title="Mission orders" model="com.axelor.apps.organisation.db.MissionOrder">
		<field name="reference" />
		<field name="date" />
		<field name="project" />
		<field name="company" />
		<field name="employee" />
		<field name="address"/>
		<field name="missionStartDate" />
		<field name="missionEndDate" />
	</grid>

	<form name="mission-order-form" cols="6" title="Mission order" model="com.axelor.apps.organisation.db.MissionOrder">
		<group title="Mission order" colSpan="6" cols="6">
        	<field name="reference"/>
        	<field name="date"/>
        	<break/>
        	<field name="company" form-view="company-lite-form" widget="SuggestBox"/>
        	<field name="project" domain="self.isBusiness = true" grid-view="business-project-grid" form-view="business-project-form"/>
       		<field name="employee"/>
        	<field name="qualificationKeyword" colSpan="2" domain="self.typeSelect = '3'" form-view="keyword-profession-form" grid-view="keyword-profession-grid"/>
        	<group title="Mission information" colSpan="6" cols="6">
            	<field name="missionPropose" colSpan="6"/>
            	<break/>
            	<field name="missionStartDate"/>
            	<field name="missionEndDate"/>
            	<field name="dateTypeSelect" showTitle="false"/>
            	<field name="address"/>
            	<field name="contactPartner" domain="self.isContact = true" form-view="partner-contact-form" grid-view="partner-contact-grid"/>
            	<break/>
            	<field name="user"/>
            	<field name="workingTime"/>
        	</group>
    	</group>
	</form>

</object-views>
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">
    
    <grid name="blocking-grid" title="Blockings" model="com.axelor.apps.base.db.Blocking">
        <field name="invoicingBlockingOk"/>
        <field name="debitBlockingOk"/>
        <field name="reimbursementBlockingOk"/>
        <field name="reminderBlockingOk" />
    </grid>
    
    <form name="blocking-form" title="Blocking" model="com.axelor.apps.base.db.Blocking" cols="8" colWidths="15%,10%,15%,10%,15%,10%,15%,10%">
     	<field name="invoicingBlockingOk"/>
        <field name="debitBlockingOk"/>
        <field name="reimbursementBlockingOk"/>
        <field name="reminderBlockingOk" />
        <group title="Invoicing blocking" colSpan="8" cols="6" showIf="invoicingBlockingOk">
        	<field name="invoicingBlockingToDate"/>
        	<field name="invoicingBlockingReason"/>
        	<field name="invoicingBlockingByUser"/>
        </group>
        <group title="Direct debit blocking" colSpan="8" cols="6" showIf="debitBlockingOk">
        	<field name="debitBlockingToDate"/>
        	<field name="debitBlockingReason"/>
        	<field name="debitBlockingByUser"/>
        </group>
        <group title="Reimbursement blocking" colSpan="8" cols="6" showIf="reimbursementBlockingOk">
        	<field name="reimbursementBlockingToDate"/>
        	<field name="reimbursementBlockingReason"/>
        	<field name="reimbursementBlockingByUser"/>
        </group>
        <group title="Reminder blocking" colSpan="8" cols="6" showIf="reminderBlockingOk">
        	<field name="reminderBlockingToDate"/>
        	<field name="reminderBlockingReason"/>
        	<field name="reminderBlockingByUser"/>
        </group>
    </form>

</object-views>
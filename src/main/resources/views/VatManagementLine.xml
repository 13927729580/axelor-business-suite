<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    <grid name="vat-management-line-grid" title="Les lignes de gestions de TVA" model="com.axelor.apps.account.db.VatManagementLine">
        <field name="vat"/>
        <field name="condition"/>
    </grid>
    <form name="vat-management-line-form" title="Ligne de gestion de la TVA" model="com.axelor.apps.account.db.VatManagementLine" cols="4">
		<field name="vat"/>
		<separator title="Condition d'application" colSpan="4" />
		<field name="condition" noLabel="true" colSpan="4" widget="CodeEditor[syntax=groovy]"/>
    </form>
</object-views>

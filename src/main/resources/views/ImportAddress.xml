<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
	
	<form name="import-address-form" title="Import address" model="com.axelor.apps.base.db.Import"
		onNew="action-default-import-address-record">
		<panel>
			<field name="typeSelect"/>
			<field name="date" />
			<field name="path" colSpan="12"/>
			<field name="configPath" colSpan="12"/>
			<button name="import" title="Importer"
				onClick="save,com.axelor.apps.base.web.AddressController:importAddress" />
			<field name="log" colSpan="12"/>
		</panel>
	</form>
	
	<action-record name="action-default-import-address-record"
		model="com.axelor.apps.base.db.Import">
		<field name="typeSelect" expr="csv" />
		<field name="date" expr="eval: __time__" />
		<field name="path" expr="/tmp/ADRESSES" />
		<field name="configPath" expr="/tmp/ADRESSES/csv-config-address.xml" />	
	
	</action-record>


</object-views>
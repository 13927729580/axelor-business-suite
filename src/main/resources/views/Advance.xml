<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_3.0.xsd">

	<grid name="advance-grid" title="Advances" editable="true"
		model="com.axelor.apps.organisation.db.Advance">
		<field name="date" />
		<field name="amount" />
		<field name="reversalDate" />
		<field name="comment" />
	</grid>

	<form name="advance-form" title="Advance" editable="true"
		model="com.axelor.apps.organisation.db.Advance">
		<panel>
			<field name="date" />
			<field name="amount" />
			<field name="reversalDate" />
			<field name="comment" />
		</panel>
	</form>

</object-views>
  
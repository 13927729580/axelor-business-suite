<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="inventory-grid" title="Inventory" model="com.axelor.apps.supplychain.db.Inventory">
        <field name="name"/>
        <field name="location"/>
        <field name="dateT"/>
        <field name="statusSelect"/>
    </grid>
    
    <form name="inventory-form" title="Inventory" model="com.axelor.apps.supplychain.db.Inventory" cols="4"
    	onNew="action-inventory-record-new">
	    <field name="name"/>
	    <field name="statusSelect" widget="NavSelect"/>
	    <field name="location"/>
	    <spacer/>
	    <button name="showInventory" title="Print" colSpan="1" icon="img/icons/print.png" onClick="save,action-inventory-method-show-inventory"/>
	    <field name="dateT"/>
	    <field name="description" colSpan="4"/>
	    <spacer/>
	    <break/>
	    <button name="fillInventory" title="Fill inventory" colSpan="4" onClick=""/>
	    <spacer/>
	    <break/>
	    <field name="inventoryLineList" colSpan="4"/>
	    <group title="Actions" colSpan="4">
	        <button name="confirm" title="Confirm" showIf="statusSelect == 1 || statusSelect == 4" colSpan="1"/>
	        <button name="realized" title="Realized" showIf="statusSelect == 2" colSpan="1"/>
	        <button name="cancel" title="Cancel" showIf="statusSelect == 1 || statusSelect == 2 || statusSelect == 3" colSpan="1"/>
	    </group> 
    </form>
    
    
    <action-record name="action-inventory-record-new" model="com.axelor.apps.supplychain.db.Inventory">
	    <field name="statusSelect" expr="1"/>
	</action-record>
	
	<action-method name="action-inventory-method-show-inventory">
		<call class="com.axelor.apps.supplychain.web.InventoryController" method="showInventory"/>
	</action-method>
    
</object-views>

<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.8.xsd">
	<grid title="Inbox" name="sn-msg-inbox-grid" model="com.axelor.apps.base.db.MsgInbox">
		<toolbar>
			<button name="new" title="New" hidden="true" />
			<button name="edit" title="Edit" hidden="true" />
			<button name="btnSyn" title="Sync Messages"
				onClick="com.axelor.sn.web.FBController:fetchInbox" />
		</toolbar>
		<field name="messageContent" />
		<field name="messageFrom" />
		<field name="messageDate"/>
	</grid>

	<form title="Inbox Message" name="sn-msg-inbox-form" model="com.axelor.apps.base.db.MsgInbox">
		<toolbar>
			<button name="new" title="New" hidden="true" />
			<button name="edit" title="Edit" hidden="true" />
		</toolbar>
		<field name="messageFrom" readonly="true"/>
		<break/>
		<field name="messageContent" readonly="true"/>
		<break/>
		<field name="messageDate" readonly="true"/>
	</form>
</object-views>
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
    
    <grid name="production-config-grid" title="Production configurations" model="com.axelor.apps.production.db.ProductionConfig">
        <field name="company"/>
    </grid>

    <form name="production-config-form" title="Production configuration" model="com.axelor.apps.production.db.ProductionConfig">
    	<panel title="Overview">
		    <field name="company" form-view="company-lite-form" colSpan="4"/>
		</panel>
		<panel>
			<field name="productionVirtualLocation" domain="self.typeSelect = 3" colSpan="4"/>
			<field name="prodResourceProduct" colSpan="4"/>
		</panel>
    </form>
	
	
</object-views>
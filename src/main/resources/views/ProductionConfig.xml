<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">
    
    <grid name="production-config-grid" title="Production configurations" model="com.axelor.apps.production.db.ProductionConfig">
        <field name="name"/>
        <field name="code"/>
        <field name="address"/>
    </grid>

    <form name="production-config-form" title="Production configuration" model="com.axelor.apps.production.db.ProductionConfig" cols="4">
	    
        <field name="name"/>
        <field name="code"/>
        <field name="company" form-view="company-lite-form"/>

		<field name="productionVirtualLocation" domain="self.typeSelect = 3"/>
		<field name="prodResourceProduct"/>
		
    </form>
	
	
</object-views>
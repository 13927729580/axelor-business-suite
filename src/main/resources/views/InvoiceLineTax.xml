<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="invoice-line-tax-grid" title="Tax lines" model="com.axelor.apps.account.db.InvoiceLineTax">
		<field name="tax"/>
		<field name="base"/>
		<field name="rateTax"/>
		<field name="unit"/>
		<field name="exTaxTotal"/>
		<field name="vatLine.vat"/>
    </grid>
    
    <form name="invoice-line-tax-form" title="Tax line" model="com.axelor.apps.account.db.InvoiceLineTax" cols="4">
		<field name="tax"/>
		<field name="base"/>
		<field name="rateTax"/>
		<field name="unit"/>
		<field name="exTaxTotal"/>
    	<field name="vatLine"/>
    	<break/>
		<field name="vatLine.vat.name"/>
		<field name="vatLine.value"/>
		<field name="pricingListVersion"/>
    </form>
    
    <action-attrs name="action-invoice-line-tax-attrs-invoice-line-details">
	    <attribute name="hidden" expr="eval: !invoiceLineDetailList" for="invoiceLineDetailList"/>
	</action-attrs>
    
</object-views>
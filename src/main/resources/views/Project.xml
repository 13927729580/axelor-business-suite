<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="project-grid" title="Affaires / Projets" model="com.axelor.apps.organisation.db.Project">
        <field name="holderUserInfo"/>
        <field name="clientPartner"/>
        <field name="contactPartner"/>
        <field name="need"/>
        <field name="affairName"/>
        <field name="isModel"/>
    </grid>
    
    <form name="project-form" title="Affaire / Projet" model="com.axelor.apps.organisation.db.Project" cols="6" >
    	<group noLabel="true" colSpan="4">
    		<field name="holderUserInfo"/>
	        <field name="clientPartner"/>
	        <field name="contactPartner"/>
	        <field name="need"/>
	        <field name="affairName"/>
	        <field name="isModel"/>
	        <field name="isReinvoicingExpense"/>
	        <field name="isReinvoicingTime"/>
	        <field name="isTimeSheetImputable"/>
	        <field name="defaultTask" hideIf="!isTimeSheetImputable"/>
    	</group>
    	<group noLabel="true" colSpan="2" title="Actions">
    		<button name="createSalesOrder" title="Créer devis"/>
    		<button name="generateNewInstanceOfProject" title="Générer nouvelle instance du projet" hideIf="!isModel"/>
    		<button name="generateDraftInvoice" title="Générer facture brouillon"/>
    	</group>
    	<field name="customerSaleOrders" title="Les commandes clients" widget="MANY_TO_MANY[type=MANY_TO_MANY|target=com.axelor.apps.supplychain.db.SalesOrder|targetName=name|title=Les commandes clients]" colSpan="6"/>
    	<field name="customerInvoices" title="Les factures clients" widget="MANY_TO_MANY[type=MANY_TO_MANY|target=com.axelor.apps.account.db.Invoice|targetName=invoiceId|title=Les factures clients]" colSpan="6"/>
		<separator title="Informations financières" colSpan="6"/>
		<group title="Budget initial" colSpan="6" cols="6">
			<field name="initialBudgetTurnover"/>
			<field name="initialBudgetCost"/>
			<field name="initialBudgetMargin"/>
		</group>
		<group title="Réalisé" colSpan="6" cols="6">
			<field name="realizedTurnover"/>
			<field name="realizedBudgetCost"/>
			<field name="realizedBudgetMargin"/>
		</group>
		<group title="Reste à faire" colSpan="6" cols="6">
			<field name="remainingTurnover"/>
			<field name="remainingBudgetCost"/>
			<field name="remainingBudgetMargin"/>
		</group>
		<group title="Final estimé" colSpan="6" cols="6">
			<field name="expectedFinalTurnover"/>
			<field name="expectedFinalCost"/>
			<field name="expectedFinalMargin"/>
		</group>
		<field name="plannedTime"/>
		<field name="spentTime"/>
		<field name="remainingTime"/>
		<field name="budgetedExpenses"/>
		<field name="incurredExpenses"/>
		<field name="remainingExpenses"/>
		<field name="parentProject"/>
		<field name="taskList" colSpan="6"/>
		<field name="responsibleUserInfo"/>
		<field name="memberUserInfoSet" colSpan="6"/>
		<field name="projectModel"/>
		<field name="taskStatusSet" colSpan="6"/>
    </form>
    
</object-views>

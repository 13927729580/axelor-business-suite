<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <form name="business-project-production-form" title="Business" model="com.axelor.apps.organisation.db.Project" cols="6">
       	<field name="prodInvTypeSelect"/>
       	<portlet colSpan="4" action="action-business-project-view-production-operation-order"/>
	</form>
	
	<action-view name="action-business-project-view-production-operation-order" title="Operation orders" model="com.axelor.apps.production.db.OperationOrder">
  		<view type="grid" name="operation-order-grid"/>
		<view type="form" name="operation-order-form"/>
  		<domain>self.manufOrder.productionOrder.businessProject.id = :id</domain>
  		<context name="id" expr="eval: id"/>
  	</action-view>
		
</object-views>
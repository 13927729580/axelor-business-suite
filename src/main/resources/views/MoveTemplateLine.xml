<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">
    
    <grid name="move-template-line-grid" title="Move template line" model="com.axelor.apps.account.db.MoveTemplateLine">
        <field name="moveTemplate"/>
        <field name="name" />
        <field name="debitCredit" />
        <field name="product"/>
        <field name="account"/>
        <field name="percentage"/>
    </grid>
    
    <form name="move-template-line-form" title="Move template line" model="com.axelor.apps.account.db.MoveTemplateLine" onNew="action-move-template-set-domain" onLoad="action-move-template-set-domain">
        <field name="moveTemplate"  onChange="action-move-template-line-get-account" required="true" readonlyIf="isValid"/>
        <break/>
        <field name="name" readonlyIf="isValid"/>
        <field name="debitCreditSelect" onChange="action-move-template-line-get-account" readonlyIf="isValid"/>
        <field name="product" onChange="action-move-template-line-get-account" readonlyIf="isValid"/>
        <field name="account" readonlyIf="isValid"/>
        <field name="percentage" placeholder="80" onChange="action-template-move-line-check-percent" readonlyIf="isValid"/>
        <field name="partnerToDebit" showIf="debitCreditSelect == '0'" readonlyIf="isValid"/>
        <field name="partnerToCredit" showIf="debitCreditSelect == '1'" readonlyIf="isValid"/>
        <field name="isValid" />
    </form>
    
    <action-attrs name="action-move-template-set-domain">
    	<attribute name="domain" expr="eval:'self.company.id = '+_parent.company.id" for="account" if="_parent != null"/>
    	<attribute name="domain" expr="eval:'self.company.id = '+moveTemplate.company.id" for="account" if="moveTemplate != null"/>
    </action-attrs>
    
    <action-record name="action-move-template-line-get-account" model="com.axelor.apps.account.db.MoveTemplateLine">
    	<field name="account" expr="call:com.axelor.apps.account.service.AccountManagementService:getProductAccount(product,moveTemplate.company,true)" if="moveTemplate != null &amp;&amp; moveTemplate.company != null &amp;&amp; debitCreditSelect == '0' "/>
    	<field name="account" expr="call:com.axelor.apps.account.service.AccountManagementService:getProductAccount(product,com.axelor.apps.base.db.Company.find(_parent.company.id),true)" if="_parent != null &amp;&amp; _parent.company != null &amp;&amp; debitCreditSelect == '0' "/>
    	<field name="account" expr="call:com.axelor.apps.account.service.AccountManagementService:getProductAccount(product,moveTemplate.company,false)" if="moveTemplate != null &amp;&amp; moveTemplate.company != null &amp;&amp; debitCreditSelect == '1' "/>
    	<field name="account" expr="call:com.axelor.apps.account.service.AccountManagementService:getProductAccount(product,com.axelor.apps.base.db.Company.find(_parent.company.id),false)" if="_parent != null &amp;&amp; _parent.company != null &amp;&amp; debitCreditSelect == '1' "/>
    </action-record>
    
    <action-validate name="action-template-move-line-check-percent">
    	<error message="Please input values between 1 to 100" action="action-template-move-line-set-percent" if="percentage &lt; 0 || percentage &gt; 100"/>
    </action-validate>
    
    <action-record name="action-template-move-line-set-percent" model="com.axelor.apps.account.db.MoveTemplateLine">
    	<field name="percent" expr="eval:0" />
    </action-record>
    
    
</object-views>
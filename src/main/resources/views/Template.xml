<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="template-grid" title="Templates" model="com.axelor.apps.base.db.Template">
        <field name="name"/>
        <field name="content"/>
        <field name="birtTemplate"/>
        <field name="metaModel"/>
    </grid>
    
    <form name="template-form" title="Template" model="com.axelor.apps.base.db.Template" cols="4" onNew="action-template-record-new">
        <field name="name"/>
        <field name="metaModel"/>
        <break/>
        <field name="content" colSpan="4"/>
        <break/>
        <field name="birtTemplate"/>
    </form>
    
    <action-record name="action-template-record-new" model="com.axelor.apps.base.db.Template">
    	<field name="metaModel" expr="eval: (_parent?.targetSelect) ? ((_parent?.targetSelect == 1) ? com.axelor.meta.db.MetaModel.all().filter('self.name = \'Partner\'').fetchOne() : com.axelor.meta.db.MetaModel.all().filter('self.name = \'Lead\'').fetchOne()) : ((_parent?._parent?.metaModel) ? _parent?._parent?.metaModel : null)"/>
    </action-record>
    
</object-views>
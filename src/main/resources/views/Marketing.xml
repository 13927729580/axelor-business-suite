<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="marketing-grid" title="Marketings" model="com.axelor.apps.crm.db.Marketing">
        <field name="name"/>
        <field name="hasForceEmailSending"/>
        <field name="hasListGenerated"/>
        <field name="typeSelect"/>
        <field name="followUpTypeSelect"/>
        <field name="eventCategory"/>
        <field name="eventDate"/>
        <field name="team"/>
    </grid>
    
    <form name="marketing-form" title="Marketing" model="com.axelor.apps.crm.db.Marketing" cols="4">
    	<group colSpan="3" cols="4" colWidths="25%,25%,25%,25%">
    		<field name="name"/>
    		<field name="typeSelect"/>
	        <field name="hasForceEmailSending"/>
	        <field name="hasListGenerated"/>
	        <field name="followUpTypeSelect"/>
	        <field name="eventCategory"/>
	        <field name="eventDate"/>
	        <field name="team"/>
    	</group>
        <group title="Actions" colSpan="1" cols="1">
        	<button name="showEvents" title="Show events"/>
	        <button name="showMailsAndEmails" title="Show mails/emails"/>
	        <button name="generateRequest" title="Generate request"/>
	        <button name="generateFollowUp" title="Generate follow up"/>
        </group>
        <notebook colSpan="4">
        	<page title="Recipients">
        		<field name="emailListSet" colSpan="4"/>
		        <field name="requestSet" colSpan="4"/>
		        <field name="partnerSet" colSpan="4"/>
		        <field name="leadSet" colSpan="4"/>
        	</page>
        	<page title="Content">
        		<field name="content" noLabel="true" widget="CodeEditor[syntax=html]"/>
        	</page>
        	<page title="Trackers">
        		<field name="marketingTrackerList" colSpan="4"/>
        	</page>
        </notebook>
    </form>
    
</object-views>

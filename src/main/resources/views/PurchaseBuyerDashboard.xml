<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
	
	<portal title="Dashboard" name="purchase.buyer.dashboard.portal" cols="2">
		<portlet action="chart:chart.purchase.buyer.dashboard.family.product.purchase.volume" height="350"/>
	    <portlet action="chart:chart.purchase.buyer.dashboard.family.product.purchase.turnover" height="350"/>
		<portlet action="purchase.buyer.dashboard.portal.validated.orders" height="350" canSearch="true" />
		<portlet action="purchase.buyer.dashboard.portal.orders" canSearch="true" height="350" />
		<portlet action="purchase.buyer.dashboard.portal.order.to.validate" canSearch="true" height="350" />
	</portal>

	<action-view name="purchase.buyer.dashboard.portal.validated.orders" title="My Validated Purchase Orders"
		model="com.axelor.apps.supplychain.db.PurchaseOrder">
		<view type="grid" name="purchase-order-grid" />
		<view type="form" name="purchase-order-form" />
		<domain>self.buyerUserInfo.internalUser = :_user and self.statusSelect = 4</domain>
	</action-view>
	
	<action-view name="purchase.buyer.dashboard.portal.orders" title="My Purchase Orders"
		model="com.axelor.apps.supplychain.db.PurchaseOrder">
		<view type="grid" name="purchase-order-grid" />
		<view type="form" name="purchase-order-form" />
		<domain>self.buyerUserInfo.internalUser = :_user</domain>
	</action-view>

	<action-view name="purchase.buyer.dashboard.portal.order.to.validate" title="My RFQ And PO To Validate"
		model="com.axelor.apps.supplychain.db.PurchaseOrder">
		<view type="grid" name="purchase-order-grid" />
		<view type="form" name="purchase-order-form" />
		<domain>self.buyerUserInfo.internalUser = :_user and self.statusSelect in (2,3)</domain>
	</action-view>


</object-views>

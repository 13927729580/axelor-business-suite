<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">
    
    <!--  Account Invoice Dashboard  -->    
    
	<portal title="Invoice Dashboard" name="account.invoice.dashboard.portal" cols="2">
		 <portlet action="portal.account.invoice.summary" colSpan="1" height="350" canSearch="true"/>
		 <portlet action="portal.invoiced.turnover.ytd.vs.lastyear" colSpan="1" height="350" canSearch="true"/>    	
		 <portlet action="portal.prod.turnover.cust.invoices.last.12m" colSpan="1" height="350" canSearch="true"/>
		 <portlet action="portal.prod.qty.cust.invoices.last.12m" colSpan="1" height="350" canSearch="true"/>
		 <portlet action="portal.total.revenue.by.each.product" colSpan="1" height="350" canSearch="true"/>
		 <portlet action="portal.total.revenue.by.geo.region" colSpan="1" height="350" canSearch="true"/>
		 <portlet action="portal.prod.qty.suppl.invoices.last.12m" canSearch="true" height="350"/>
		 <portlet action="portal.prod.turnover.suppl.invoices.last.12m" canSearch="true" height="350"/>
		 <portlet action="portal.supplier.invoices.per.month" canSearch="true" height="350"/>
	   	 <portlet action="portal.supplier.invoices.unpaid" canSearch="true" height="350" />
	   	 <portlet action="portal.supplier.invoices.due" canSearch="true" height="350" />
		 <portlet action="portal.customer.invoices.to.collect" colSpan="1" height="350" canSearch="true"/>
		 <portlet action="portal.paymentVoucher.customer.paymentMode.distribution.nbr" colSpan="1" height="350" canSearch="true"/>
		 <portlet action="portal.invoice.sale.amount.by.month"  height="350"/>
		 <portlet action="portal.invoice.sale.amount.by.currency"  height="350"/>
		 <portlet action="portal.invoice.sale.paymentCondition.distribution"  height="350"/>
		 <portlet action="portal.invoice.purchase.amount.by.month"  height="350"/>
		 <portlet action="portal.invoice.purchase.amount.by.currency"  height="350"/>
		 <portlet action="portal.invoice.purchase.paymentCondition.distribution"  height="350"/>
	</portal>    

	<action-view name="portal.account.invoice.summary" title="Account Invoice Summary" model="com.axelor.apps.account.db.Invoice">
		<view type="chart" name="chart.account.invoice.summary"/>
	</action-view>	

	<action-view name="portal.invoiced.turnover.ytd.vs.lastyear" title="Invoiced Turnover This year vs Last year" model="com.axelor.apps.account.db.Invoice">
	    <view type="chart" name="chart.invoiced.turnover.ytd.vs.lastyear"/>        
	    <domain>self.company=:active_company</domain>
	    <context name="active_company" expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserActiveCompany()" />
	</action-view>	

	<action-view name="portal.prod.turnover.cust.invoices.last.12m" title="Turnover On Customer Invoices on Last 12 Month" model="com.axelor.apps.account.db.Invoice">
        <view type="chart" name="chart.prod.turnover.cust.invoices.last.12m"/>            
    </action-view>    
    
    <action-view name="portal.prod.qty.cust.invoices.last.12m" title="Number Of Units On Customer Invoices on Last 12 Month" model="com.axelor.apps.account.db.Invoice">
        <view type="chart" name="chart.prod.qty.cust.invoices.last.12m"/>        
    </action-view>    
    
	<action-view name="portal.total.revenue.by.each.product" title="Total Revenue Generated By Each Product" model="com.axelor.apps.account.db.Invoice" >
	    <view type="chart" name="chart.total.revenue.by.each.product"/>
	</action-view>   
	
	<action-view name="portal.total.revenue.by.geo.region" title="Total Revenue Generated By Geo Region" model="com.axelor.apps.account.db.Invoice">
	    <view type="chart" name="chart.total.revenue.by.geo.region"/>
	</action-view>
	
	<action-view name="portal.prod.qty.suppl.invoices.last.12m" title="Number Of Units On Supplier Invoices On Last 12 Month"
		model="com.axelor.apps.account.db.Invoice">
		<view type="chart" name="chart.purchase.buyer.dashboard.prod.qty.suppl.invoices.last.12m"/>
	</action-view>
	
	<action-view name="portal.prod.turnover.suppl.invoices.last.12m" title="Turnover On Supplier Invoices On Last 12 Month">
		<view type="chart" name="chart.purchase.buyer.dashboard.prod.turnover.suppl.invoices.last.12m"/>
	</action-view>
	
	<action-view name="portal.supplier.invoices.per.month" title="Number Of Supplier Invoices Per Month">
		<view type="chart" name="chart.purchase.buyer.dashboard.supplier.invoices.per.month"/>
	</action-view>	
	
	<action-view name="portal.supplier.invoices.unpaid" title="Unpaid Supplier's Invoices" icon="img/16px/invoiceSmall_16px.png" model="com.axelor.apps.account.db.Invoice" >
	    <view type="grid" name="invoice-grid"/>
	    <view type="form" name="invoice-form"/>
	    <domain>self.operationTypeSelect = 1 AND self.inTaxTotalRemaining &gt; 0 </domain>    
	</action-view>    
	
	<action-view name="portal.supplier.invoices.due" title="Supplier's Invoices Due" icon="img/16px/invoiceSmall_16px.png" model="com.axelor.apps.account.db.Invoice">
	    <view type="grid" name="invoice-grid"/>
	    <view type="form" name="invoice-form"/>
	    <domain>self.operationTypeSelect = 1 AND self.inTaxTotalRemaining &gt; 0 AND CURRENT_DATE &gt;= self.dueDate</domain>    
	</action-view>
	
	<action-view name="portal.customer.invoices.to.collect" title="Customer Invoices remaining To Collect" model="com.axelor.apps.account.db.Invoice">
		<view type="grid" name="invoice-grid"/>
		<view type="form" name="invoice-form"/>        
		<domain>self.operationTypeSelect=3 AND self.inTaxTotalRemaining &gt; 0</domain>
	</action-view>
	
	<action-view name="portal.paymentVoucher.customer.paymentMode.distribution.nbr" title="Customer Payment mode distribution by transactions" model="com.axelor.apps.account.db.PaymentVoucher">
	    <view type="chart" name="chart.paymentVoucher.customer.paymentMode.distribution.nbr"/>
	    <context name="todayDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()" />
	</action-view>
	
	<action-view title="Invoice Sale by month (tax excl.)" name="portal.invoice.sale.amount.by.month">
		    <view type="chart" name="chart.invoice.sale.amount.by.month"/>
			<context name="todayDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()"/>
	</action-view>
		
	<action-view title="Invoice Sale by currency (tax excl.)" name="portal.invoice.sale.amount.by.currency">
			  <view type="chart" name="chart.invoice.sale.amount.by.currency"/>
			<context name="todayDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()"/>
	</action-view>
		
	<action-view title="Invoice Sale Payment Condition distribution" name="portal.invoice.sale.paymentCondition.distribution">
	  		<view type="chart" name="chart.invoice.sale.paymentCondition.distribution"/>
			<context name="todayDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()"/>	
	</action-view>
	
	<action-view title="Invoice Purchase by month (tax excl.)" name="portal.invoice.purchase.amount.by.month">
	  		<view type="chart" name="chart.invoice.purchase.amount.by.month"/>
			<context name="todayDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()"/>
	</action-view>
	
	<action-view title="Invoice Purchase by currency (tax excl.)" name="portal.invoice.purchase.amount.by.currency">
	  		<view type="chart" name="chart.invoice.purchase.amount.by.currency"/>
			<context name="todayDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()"/>
	</action-view>
	
	<action-view title="Invoice Purchase Payment Condition distribution" name="portal.invoice.purchase.paymentCondition.distribution">
		  <view type="chart" name="chart.invoice.purchase.paymentCondition.distribution"/>
		  <context name="todayDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()"/>
	</action-view>
	
	<!-- 	Action Record for selection of fromDate to toDate   -->
	<action-record model="com.axelor.apps.base.db.Product" name="action-account-set-from-to-date-range">
		  <field name="toDate" expr="eval:todayDate"/>
		  <field name="fromDate" expr="eval:LocalDate.parse(todayDate).minusYears(1)" /> 
	</action-record>
	
	<!-- 	Action Record For Retrieving UserInfo.activeCompany  -->
	<action-record name="action-user-info-set-value-user-id" model="com.axelor.apps.base.db.UserInfo" >
  			<field name="id" expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserInfoId()"/>  
	</action-record>
	
	
</object-views>


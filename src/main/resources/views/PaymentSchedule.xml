<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
    
    <grid name="payment-schedule-grid" title="Payment schedule" model="com.axelor.apps.account.db.PaymentSchedule">
        <field name="scheduleId"/>
        <field name="creationDate"/>
        <field name="partner"/>
        <field name="company"/>
        <field name="inTaxAmount"/>
        <field name="nbrTerm"/>
        <field name="bankDetails"/>
        <field name="paymentMode"/>
        <field name="statusSelect"/>
    </grid>
    
	 <form  name="payment-schedule-form" title="Payment schedule" model="com.axelor.apps.account.db.PaymentSchedule"   
	 onNew="action-account-payment-schedule-onnew-group" 
	 onLoad="action-payment-schedule-attrs-collapse-irrecoverable-group" 
	 onSave="action-payment-schedule-payment-schedule-id">
		<panel title="Overview">
			<field name="scheduleId" readonlyIf="statusSelect != 1"/>
			<field name="creationDate" readonlyIf="statusSelect != 1"/>
			<field name="startDate" readonlyIf="statusSelect != 1" required="true"/>
			<field name="nbrTerm" readonlyIf="statusSelect != 1"/>
			<field name="partner" readonlyIf="statusSelect != 1" onChange="action-payment-schedule-record-partner" domain="self.isContact = false" form-view="partner-form" grid-view="partner-grid"/>
			<field name="company" readonlyIf="statusSelect != 1" widget="SuggestBox"/>
			<field name="bankDetails" form-view="bank-details-form" grid-view="bank-details-grid"/>
			<field name="paymentMode"/>
			<field name="currency" readonlyIf="statusSelect != 1"/>
			<field name="inTaxAmount" readonlyIf="statusSelect != 1"/>
			<field name="statusSelect"/>
		</panel>
		 <panel  title="Irrecoverable">
			<field name="irrecoverableStatusSelect"/>
			<field name="managementObject"/>
			<button name="passInIrrecoverable" title="Shift to irrecoverablePassage en irrÃ©couvrable"   onClick="com.axelor.apps.account.web.PaymentScheduleController:passInIrrecoverable"/>
			<button name="notPassInIrrecoverable" title="Do not shift to irrecoverable"   onClick="com.axelor.apps.account.web.PaymentScheduleController:notPassInIrrecoverable"/>
		</panel>
		<panel-tabs>
		  <panel-related title="Invoices" field="invoiceSet"  domain="self.partner = :partner and self.schedulePaymentOk = 'f' and self.company=:company and self.statusSelect = 3 and self.inTaxTotalRemaining > 0.0 AND self.currency = :currency" grid-view="invoice-account-grid" form-view="invoice-form" readonlyIf="statusSelect != 1" onChange="action-payment-schedule-record-in-tax-amount"/>
		  <panel-related title="PaymentSchduleLine" field="paymentScheduleLineList" grid-view="payment-schedule-line-payment-schedule-grid" form-view="payment-schedule-line-payment-schedule-form" readonlyIf="statusSelect != 3"/>
		</panel-tabs>  
	
		 <panel sidebar="true" >
			<panel title="actions">
			    <button name="validate" title="Validate"  onClick="action-group-account-payment-schedule-validate-click" showIf="statusSelect == 1"/>
			    <button name="cancel" title="Cancel"  onClick="action-payment-schedule-method-cancel,save" hideIf="statusSelect = 4" />
			    <button name="createPaymentScheduleLines" title="Create schedule lines"   onClick="action-group-account-payment-schedule-create-click" showIf="statusSelect == 1"/>
			</panel>
		</panel>
	</form>
    
    <!-- ACTION GROUPs -->
    <action-group name="action-account-payment-schedule-onnew-group">
	    <action name="default-payment-schedule-record"/>
	    <action name="action-payment-schedule-attrs-collapse-irrecoverable-group"/>
    </action-group>
    
    <action-group name="action-group-account-payment-schedule-create-click">
    	<action name="save"/>
    	<action name="action-payment-schedule-create-payment-schedule-lines"/>
    	<action name="save"/>
    </action-group>
    
    <action-group name="action-group-account-payment-schedule-validate-click">
    	<action name="save"/>
    	<action name="action-payment-schedule-payment-schedule-id"/>
    	<action name="action-payment-schedule-method-validate"/>
    	<action name="save"/>
    </action-group>
    
    <!-- ACTION RECORD -->
    <action-record name="default-payment-schedule-record" model="com.axelor.apps.account.db.PaymentSchedule">
   		<field name="creationDate" expr="eval:__date__"/>
   		<field name="startDate" expr="eval:__date__"/>
   		<field name="company"  expr="eval:__user__.activeCompany"/>
   		<field name="statusSelect" expr="eval: 1"/>
	</action-record>

	<action-record name="action-payment-schedule-record-partner" model="com.axelor.apps.account.db.PaymentSchedule" >
		<field name="paymentMode" expr="eval:partner?.paymentMode"/>
		<field name="currency" expr="eval:partner?.currency"/>
	</action-record>
	
	<action-record name="action-payment-schedule-record-in-tax-amount" model="com.axelor.apps.account.db.PaymentSchedule">
		<field name="inTaxAmount" expr="eval: invoiceSet?.collect(){ it?.inTaxTotalRemaining }?.sum()" />
	</action-record>
	
	
	<!-- ACTION ATTRS -->
	
	<action-attrs name="action-payment-schedule-attrs-collapse-irrecoverable-group">
		<attribute name="collapse" for="irrecoverable" expr="eval: irrecoverableStatusSelect == null || irrecoverableStatusSelect == 0"/>
	</action-attrs>
	
	
	<!-- ACTION METHOD -->
	<action-method name="action-payment-schedule-method-validate">
		<call class="com.axelor.apps.account.web.PaymentScheduleController" method="validate"/>
	</action-method>
	
	<action-method name="action-payment-schedule-create-payment-schedule-lines">
		<call class="com.axelor.apps.account.web.PaymentScheduleController" method="createPaymentScheduleLines"/>
	</action-method>
	
	<action-method name="action-payment-schedule-payment-schedule-id">
		<call class="com.axelor.apps.account.web.PaymentScheduleController" method="paymentScheduleScheduleId"/>
	</action-method>
	
	<action-method name="action-payment-schedule-method-cancel">
		<call class="com.axelor.apps.account.web.PaymentScheduleController" method="cancel"/>
	</action-method>
	
	<search-filters name="payment-schedule-filters" model="com.axelor.apps.account.db.PaymentSchedule" title="Payment schedule filters">
		<filter title="Ongoing Schedules">
			<domain>self.startDate &lt; CURRENT_DATE</domain>
		</filter>
		<filter title="Old Schedules">
			<domain>self.startDate &gt; CURRENT_DATE</domain>
		</filter>
	</search-filters>
	
</object-views>


    
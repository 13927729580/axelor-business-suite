<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="year-account-grid" title="Fiscal years" model="com.axelor.apps.base.db.Year">
        <field name="name"/>
        <field name="code"/>
        <field name="fromDate"/>
        <field name="toDate"/>
        <field name="reportedBalanceDate"/>
        <field name="company"/>
        <field name="status"/>
    </grid>
    
    <form name="year-account-form" title="Fiscal year" model="com.axelor.apps.base.db.Year" cols="4"
    onNew="action-year-record-new" onSave="action-year-check-date" >
        <field name="name"/>
        <field name="code"/>
        <field name="fromDate" />
        <field name="toDate"  />
        <field name="reportedBalanceDate"/>
        <field name="company" widget="SuggestBox"/>
        <separator colSpan="4"/>
<!--         <field name="reportedBalanceLineList" colSpan="4"/> -->
        <field name="status"/>
        <button name="close" title="Close fiscal year" colSpan="2" onClick="action-year-check-date,action-year-close-method,save"/>
    	<field name="periodDurationSelect" />
    	<button name="generatePeriods" title="Generate periods" colSpan="2" onClick="action-year-check-date,save,action-year-validate-generate-period,com.axelor.apps.account.web.YearController:generatePeriods,save"/>
    	<field name="periodList" colSpan="4" />
    </form>
    
    <action-record name="action-year-record-new" model="com.axelor.apps.base.db.Year">
    	<field name="status" expr="action:action-status-record-ope"/>
    	<field name="company"  expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserActiveCompany()"/>
    </action-record>
    
    <action-method name="action-year-close-method">
    	<call class="com.axelor.apps.account.web.YearController" method="close"/>
    </action-method>
    
    <action-validate name="action-year-validate-generate-period">
	    <error message="To generate periods, please fill in the limits of the fiscal year." if="fromDate == null || toDate == null" />
	    <error message="To generate periods, please fill in the Period duration." if="periodDurationSelect == null || periodDurationSelect == 0"/>
	    <error message="Please clear all existing periods before generating new ones" if="!periodList.empty"/>
	</action-validate>
	
	<action-validate name="action-year-check-date">
		<error message="Enter proper 'From' and 'To' date." if="fromDate != null &amp;&amp; toDate != null &amp;&amp; fromDate &gt; toDate" action="action-year-set-empty-date"/>
		<error message="Fiscal year already exist for 'From' and 'To' date." if="!Year.all().filter('((fromDate &gt;= ?1 AND fromDate &lt;= ?2) OR (toDate &gt;= ?3 AND toDate &lt;= ?4)) AND company = ?5 AND id != ?6',fromDate,toDate,fromDate,toDate,company,id).fetch().empty" />
	</action-validate>
	
	<action-record name="action-year-set-empty-date" model="com.axelor.apps.base.db.Year">
		<field name="fromDate" expr="eval:null" />
		<field name="toDate" expr="eval:null" />
	</action-record>
	
	
</object-views>
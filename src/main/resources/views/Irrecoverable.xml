<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">

    <grid name="irrecoverable-grid" title="Irrecoverables" model="com.axelor.apps.account.db.Irrecoverable">
        <field name="name"/>
        <field name="dateTime"/>
        <field name="company"/>
        <field name="status"/>
    </grid>
    
    <form cols="4" onLoad="action-irrecoverable-attrs-hidden" onNew="action-account-irrecoverable-onnew-group" name="irrecoverable-form" title="Irrecoverable" model="com.axelor.apps.account.db.Irrecoverable">
  
  <panel title="Overview">
    <field name="status"/>
    <field name="name"/>
    <field name="user"/>
    <field name="dateTime"/>
    <field name="company" widget="SuggestBox" form-view="company-lite-form"/>
   <field name="exportTypeSelect"/>
  </panel>
<panel-side title="Actions">
      <button name="passInIrrecoverable" title="Shift to irrecoverable" colSpan="2" onClick="action-group-account-irrecoverable-passin-click"/>
      <button name="showTraceBack" title="Anomalies" colSpan="2" onClick="save,action-irrecoverable-show-trace-back"/>
      <button name="getIrrecoverable" title="Get invoices and schedule lines to set as irrecoverable" colSpan="4" onClick="save,com.axelor.apps.account.web.IrrecoverableController:getIrrecoverable"/>
     <button name="createIrrecoverableReport" title="Generate irrecoverable report" colSpan="2" onClick="save,com.axelor.apps.account.web.IrrecoverableController:createIrrecoverableReport"/>
     <button name="printReport" title="Print" colSpan="2" icon="fa-print" onClick="save,com.axelor.apps.account.web.IrrecoverableController:printIrrecoverable"/>  
  </panel-side>
  <panel-tabs>
  
     <panel-related field="irrecoverableCustomerLineList" title="Report execution" x-span="12"/>  
  <panel-related field="moveSet" showIf="status.code != 'dra'" x-span="12"/>
  <panel-related field="invoiceSet"  form-view="invoice-form" grid-view="invoice-grid" x-span="12"/>
  <panel-related field="paymentScheduleLineSet"/>
  </panel-tabs>
  
</form>

    
    <action-group name="action-account-irrecoverable-onnew-group">
	    <action name="action-record-irrecoverable-default-record"/>
	    <action name="action-irrecoverable-attrs-hidden"/>
    </action-group>
    
    <action-group name="action-group-account-irrecoverable-passin-click">
    	<action name="save"/>
    	<action name="action-method-account-irrecoverable-pass-in"/>
    	<action name="action-irrecoverable-attrs-hidden"/>
    </action-group>
    
    <action-method name="action-method-account-irrecoverable-pass-in">
    	<call class="com.axelor.apps.account.web.IrrecoverableController" method="passInIrrecoverable"/>
    </action-method>
    
    <action-attrs name="action-irrecoverable-attrs-hidden">
    	<attribute name="hidden" for="getIrrecoverable" expr="eval: status?.code == 'val'"/>
    	<attribute name="hidden" for="passInIrrecoverable" expr="eval: status?.code == 'val'"/>
    	<attribute name="hidden" for="showTraceBack" expr="eval: status?.code != 'val'"/>
    </action-attrs>
	
	<action-record name="action-record-irrecoverable-default-record" model="com.axelor.apps.account.db.Irrecoverable">
		<field name="dateTime" expr="eval:__datetime__"/>
		<field name="user" expr="eval:__user__"/>
        <field name="status" expr="action:action-status-record-dra"/>
   		<field name="company"   expr="eval:__user__.activeCompany"/>
	</action-record>
	
	<action-view name="action-irrecoverable-show-trace-back" title="Anomalies"	model="com.axelor.exception.db.TraceBack">
		<view type="grid" />
		<view type="form" />
		<domain>self.batchId = :id and self.origin = 'irrecoverable'</domain>
		<context name="id" expr="eval: id"/>
	</action-view>
	
</object-views>
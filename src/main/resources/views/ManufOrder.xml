<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="manuf-order-grid" title="Manufacturing orders" model="com.axelor.apps.production.db.ManufOrder">
        <field name="manufOrderSeq"/>
        <field name="billOfMaterial"/>
        <field name="prodProcess"/>
        <field name="outStockMove"/>
        <field name="inLocation"/>
        <field name="outLocation"/>
        <field name="startDate"/>
        <field name="endDate"/>
        <field name="isSimulation"/>
        <field name="statusSelect"/>
    </grid>
    
    <form name="manuf-order-form" title="Manufacturing order" model="com.axelor.apps.production.db.ManufOrder" cols="4"
    onNew="action-prod-order-default-record">
        <field name="manufOrderSeq"/>
        <field name="statusSelect" widget="NavSelect"/>
        <field name="billOfMaterial"/>
        <field name="prodProcess"/>
        <field name="isSimulation"/> 
        <group title="Moves In/Out" colSpan="4">
	        <field name="inStockMoveList" colSpan="4"/>
	        <field name="inLocation"/>
	        <field name="outStockMove"/>
	        <field name="outLocation"/>
        </group>
        <group title="Date" colSpan="2">
        	<field name="startDate"/>
        	<field name="endDate"/>
        </group>
        <group title="Action" colSpan="2">
        	<button name="standbyAllLines" title="Stand by all lines"/>
        	<button name="endAllLines" title="Finish all lines "/>
        </group>
        <field name="manufOrderLineList" colSpan="4"/>
        
    </form>
    
    <action-record name="action-prod-order-default-record" model="com.axelor.apps.production.db.ManufOrder">
    	<field name="statusSelect" expr="eval: 1"/>
    	<field name="startDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()" if="startDate == null"/>
    </action-record>
    
</object-views>

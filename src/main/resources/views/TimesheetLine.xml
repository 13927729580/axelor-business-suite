<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="timesheet-line-grid" title="Timesheet project/task time inputs" model="com.axelor.apps.organisation.db.TimesheetLine">
        <field name="project"/>
        <field name="task"/>
        <field name="date"/>
        <field name="duration" title="Duration (h)"/>
    </grid>
    
    <form name="timesheet-line-form" title="Timesheet project/task time input" model="com.axelor.apps.organisation.db.TimesheetLine" cols="4">
        <field name="project"/>
        <field name="task"/>
        <field name="date"/>
        <field name="duration" title="Duration (h)"/>
        <field name="isToInvoice"/>
        <field name="isInvoiced"/>
    </form>
    
</object-views>
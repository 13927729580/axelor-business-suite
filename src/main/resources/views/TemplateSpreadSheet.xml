<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">

	<grid title="Template Spredsheet" name="templateSpreadSheet-grid"
		model="com.axelor.apps.base.db.TemplateSpreadSheet">
		<field name="templateName" />
		<field name="creator" />
		<field name="templateModel" />
		<field name="criteria" />
		<field name="share" />
	</grid>

	<selection name="selectOperator">
		<option value="eq">=</option>
		<option value="lt">&lt;</option>
		<option value="gt">&gt;</option>
	</selection>

	<form name="templateSpreadSheet-form" title="Template Spredsheet"
		cols="2" colWidths="*,200" model="com.axelor.apps.base.db.TemplateSpreadSheet"
		onNew="action-current-user-of-template-creator">
		<group title="SpreadSheet Template">
			<field name="templateName" required="true" />
			<break />
			<field name="creator" hidden="true" />
			<break />
			<group title="Template Model" colSpan="2">
			<field name="templateModel" required="true"/>
			<break/>
			<field name="templateFields" domain="self.metaModel = :templateModel"  colSpan="2"  >
	
				<grid title="Template Fields">
					<field name="name" />
					<field name="metaModel" />
				</grid>
			</field>
			</group>
			<break/>
<!-- 			<field name="dummyAllData" widget="BOOLEAN" title="All Data" -->
<!-- 				onChange="action-hide-conditions" /> -->
			<break />
			<group title="Conditions" colSpan="2" cols="3" name="conditions">
				<field name="criteria" colSpan="2">
					<grid title="Criteria" editable="true">
						<field name="field" />
						<field name="operator" selection="selectOperator" />
						<field name="value" />
					</grid>
					<form cols="3" title="Select Field" colWidths="100,500,100" onNew="com.axelor.googleapps.spreadsheet.SpreadSheetController:setFieldOfSelectedModel">
					
						<field name="selectedModel_dummy"  widget="MasterDetail[type=MANY_TO_ONE|target=com.axelor.meta.db.MetaModel|targetName=name]" hidden="true"></field>
						<group title="Criteria">
						
							<field name="field" domain="self.metaModel = :selectedModel_dummy">
								<grid title="Template Fields">
									<field name="name"/>
									<field name="metaModel" />
								</grid>
							</field>
							<break />
							<field name="operator" selection="selectOperator" />
							<break />
							<field name="value" />
							<break />
						</group>
						<group title="Value Format">
							<label title="Date Format: YYYY/MM/DD   " />
							<break />
							<label title="Boolean: true or false     " />
						</group>
						<label></label>
					</form>
				</field>
			</group>
			<break />
			<group title="Sharable" colSpan="2">
				<field name="share" />
			</group>
		</group>
	</form>

	<action-attrs name="action-hide-conditions">
		<attribute name="hidden" for="conditions" expr="eval: dummyAllData" />
	</action-attrs>

	<action-attrs name="action-set-field-of-model">
		<attribute name="domain" for="field"
			expr="eval: &quot;self.metaModel.id = ${_parent.templateModel.id}&quot;" />
	</action-attrs>

	<action-record name="action-current-user-of-template-creator"
		model="com.axelor.apps.base.db.TemplateSpreadSheet">
		<field name="creator" expr="eval:__user__" />
	</action-record>
	
	<action-attrs name="action-load-fields-of-model" >
		<attribute name="domain" for="templateFields" expr="eval: &quot;self.metaModel.id = ${templateModel.id}&quot;" />
	</action-attrs>
	
	<action-record name="action-set-selectedModel_dummy-for-field" model="com.axelor.apps.base.db.TemplateSpreadSheetCriteria">
		<field name="selectedModel_dummy" expr="_parent.templateModel" />
	</action-record>
	
</object-views>

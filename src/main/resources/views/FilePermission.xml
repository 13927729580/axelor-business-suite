<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">

	<grid name="file-permission-grid" title="File Sharing Permissions"
		model="com.axelor.apps.base.db.FilePermission" editable="true">
		<toolbar>
			<button name="refresh" title="Refresh" />
			<button name="search" title="Search" />
			<button name="delete" title="Delete" hidden="true" />
		</toolbar>
		<field name="sharingUser" title="User"></field>
		<field name="shareToEmail" title="Email Address" ></field>
		<field name="editable" title="Can Modify"></field>
	</grid>

	<form name="file-permission-form" title="File Sharing Permissions"
		cols="2" colWidths="*,200" model="com.axelor.apps.base.db.FilePermission"
		onNew="action-googleFileParent_forPermission">
		<field name="sharingUser" title="User" onChange="action-setEmail-forUser" >
			<grid title="User">
				<field name="driveUser" title="User" />
				<field name="emailId" title="EmailId"/>
				<field name="name" title="Name"/>
			</grid>
			<form title="User">
				<field name="driveUser" title="User" />
				<field name="emailId" title="EmailId" readonly="true" />
				<field name="name" title="Name"/>
			</form>
		</field>
		<break />
		<field name="shareToEmail" title="Email Address" required="true" ></field>
		<break />
		<label title="Pass Email Address for sharing other than ABS user." />
		<break/>
		<field name="editable" title="Can Modify"></field>
		<break />
		<field name="notifyEmail" title="Send Email Notification"></field>
		<field name="googleFile" title="Google File" hidden="true"></field>		
	</form>

	<action-record name="action-setEmail-forUser" model="com.axelor.apps.base.db.FilePermission">
		<field name="shareToEmail" expr="eval: sharingUser.emailId"/>
	</action-record>
	<action-record name="action-googleFileParent_forPermission"
		model="com.axelor.apps.base.db.FilePermission">
		<field name="googleFile" expr="eval:_parent" />
	</action-record>
</object-views>

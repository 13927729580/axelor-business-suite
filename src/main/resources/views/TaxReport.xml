<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="tax-report-grid" title="Taxes reports" model="com.axelor.apps.account.db.TaxReport">
        <field name="date"/>
        <field name="company"/>
        <field name="comments"/>
    </grid>
    
    <form name="tax-report-form" title="Tax report" model="com.axelor.apps.account.db.TaxReport" cols="4">
        <field name="company"/>
        <field name="date"/>
        <field name="periods" colSpan="2"/>
        <field name="accounts" colSpan="2" domain="self.type.name = 'Taxe'"/>
        <group title="Descrition" colSpan="4" cols="2">
        	<field name="comments" showTitle="false" colSpan="2"/>
        </group>
        <button name="printTaxReport" title="Print tax report" colSpan="2" onClick="save,com.axelor.apps.account.web.TaxReportController:printTaxReport"/>
    </form>
    
</object-views>
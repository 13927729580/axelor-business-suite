<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
	
	<!--  Partner Dashboard  -->
	
	<portal title="Partner Dashboard" name="base.partner.list.portal" cols="2">
		<portlet action="portal.my.recent.customers" height="350" colSpan="1" canSearch="true"/> 
	    <portlet action="portal.partner.by.salesman" height="350" colSpan="1" canSearch="true"/>
		<portlet action="portal.partner.recent.partners" height="350" colSpan="1" canSearch="true"/>	
		<portlet action="portal.partner.by.industry.sector" height="350" colSpan="1" canSearch="true"/>
		<portlet action="portal.my.customers" height="350" colSpan="1" canSearch="true"/>
	 	<portlet title="Customers by country" action="chart:chart.customers.by.country.bar" height="350"/>
  	</portal>
	
	<action-view name="portal.my.recent.customers" title="My Recent Customers" model="com.axelor.apps.base.db.Partner">
		<view type="grid" name="partner-grid"/>
		<view type="form" name="partner-form"/>
    	<domain>self.updatedOn &gt; date(now())-30</domain>
    </action-view>
	
	<action-view name="portal.partner.by.salesman" title="Customers by salesman" model="com.axelor.apps.base.db.Partner">
		<view type="grid" name="partner-grid-group"/>
		<view type="form" name="partner-form"/>
	</action-view>
	
	<action-view title="Recently created partners" model="com.axelor.apps.base.db.Partner" name="portal.partner.recent.partners">
    	<view type="grid" name="partner-grid"/>
    	<view type="form" name="partner-form"/>
    	<domain>self.createdOn &gt; date(now())-15</domain>
	</action-view>
	
	<action-view name="portal.my.customers" title="My Customers" model="com.axelor.apps.base.db.Partner">
		<view type="grid" name="partner-grid"/>
		<view type="form" name="partner-form"/>
		 <domain>self.userInfo = :userInfoId</domain>
		 <context name="userInfoId" expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserInfo()"/>
    </action-view>
	
	<action-view name="portal.partner.by.industry.sector" title="Partners by Industry Sector" model="com.axelor.apps.base.db.Partner">
		<view type="chart" name="chart.partner.by.industry.sector.bar" />
	</action-view>
	
	
	
	<!--  Opportunity Grid view Dashboard  -->
	
	
	<portal title="Opportunity Dashboard" name="crm.opportunity.portal" cols="2">
	    <portlet action="close.opportunity" height="350" colSpan="1" canSearch="true"/>
	    <portlet action="open.opportunity" height="350" colSpan="1" canSearch="true"/>
	    <portlet action="portal.opportunities.won.by.account" height="350" colSpan="1" canSearch="true"/>
	    <portlet action="portal.opportunities.recent.opps" height="350" colSpan="1" canSearch="true"/>
	    <portlet action="portal.opportunities.top.deals" height="350" colSpan="1" canSearch="true"/>
	    <portlet action="portal.opportunities.key.account" height="350" colSpan="1" canSearch="true"/>
	    <portlet action="portal.opportunities.lost.deals" height="350" colSpan="1" canSearch="true"/>
  	</portal>
  	
  	

 
	<action-view name="close.opportunity" title="Close Opportunities" model="com.axelor.apps.crm.db.Opportunity">
		<view type="grid" name="opportunity-grid"/>
		<view type="form" name="opportunity-form"/>
		<domain>self.salesStageSelect in (9, 10)</domain>
	</action-view>
	
	
	<action-view title="Open Opportunities" model="com.axelor.apps.crm.db.Opportunity" name="open.opportunity">
	    <view type="grid" name="opportunity-grid"/>
	    <view type="form" name="opportunity-form"/>
	    <domain>self.salesStageSelect not in (9, 10)</domain>
	</action-view>
	
	<action-view name="portal.opportunities.won.by.account" title="Opportunities Won By Partner"
		model="com.axelor.apps.crm.db.Opportunity">
		<view type="grid" name="opportunity-grid-group"/>
		<view type="form" name="opportunity-form"/>
		<domain>self.salesStageSelect = 9</domain>
	</action-view>
	
  	<action-view name="portal.opportunities.top.deals" title="Best Open Deals" model="com.axelor.apps.crm.db.Opportunity">
		<view type="grid" name="opportunity-top-deal-grid"/>
		<view type="form" name="opportunity-form"/>
		<domain>self.salesStageSelect not in (9, 10)</domain>
	</action-view>
	
	 <action-view name="portal.opportunities.key.account" title="Key accounts" model="com.axelor.apps.crm.db.Opportunity">
		<view type="grid" name="opportunity-key-account-grid"/>
		<view type="form" name="opportunity-form"/>
		<domain>self.salesStageSelect in (9, 10)</domain>
	</action-view>
	
	<action-view name="portal.opportunities.recent.opps" title="Recently created opportunities" model="com.axelor.apps.crm.db.Opportunity">
		<view type="grid" name="opportunity-grid"/>
		<view type="form" name="opportunity-form"/>
		<domain>self.createdOn &gt; date(now())-15</domain>
	</action-view>
	
	<action-view name="portal.opportunities.lost.deals" title="Recent lost deals" model="com.axelor.apps.crm.db.Opportunity">
		<view type="grid" name="opportunity-grid"/>
		<view type="form" name="opportunity-form"/>
		<domain>self.updatedOn &gt; date(now())-30 and self.salesStageSelect = 10</domain>
	</action-view>
	
	
<!--  Opportunity Graph View Dashboard  -->
	
	<portal title="Dashboard" name="crm.opportunity.graph.portal" cols="2">
		<portlet action="portal.opportunities.by.source" height="350"/>
	    <portlet action="portal.opportunities.by.salestage" height="350"/>
	    <portlet action="portal.opportunities.by.type"  height="350" colSpan="1"/>
	    <portlet action="portal.opportunities.won.by.leadsource" height="350"/>
	    <portlet action="portal.opportunities.won.by.salesman" height="350"/>
	    <portlet title="Opportunities By Origin By Stage" action="chart:chart.opportunities.by.origin.by.stage" height="350"/>
	 </portal>
  	
  	
  	<action-view name="portal.opportunities.by.source" title="Chart">
    	<view type="chart" name="chart.dashboard.opportunities.source.amount.bar" />
 	</action-view>
 	
 	<action-view name="portal.opportunities.by.salestage" title="Opportunities By Sale Stage">
    	<view type="chart" name="chart.dashboard.opportunities.sales.stage.amount.bar" />
  	</action-view>
  	
  	
   	<action-view name="portal.opportunities.by.type" title="Opportunities By Type">
   		<view type="chart" name="chart.dashboard.opportunities.type.amount.bar" />
  	</action-view>
  	
  	<action-view name="portal.opportunities.byStage.byType" title="Pipeline by Stage and Type">
   		<view type="chart" name="chart.dashboard.opportunities.by.stage.type.bar" />
  	</action-view>
  	
  	
	
	<action-view name="portal.opportunities.won.by.leadsource" title="Opportunities Won By Lead Source">
    	<view type="chart" name="chart.dashboard.opportunities.won.by.leadsource.bar" />
  	</action-view>
  
    <action-view name="portal.opportunities.won.by.salesman" title="Opportunities Won By Salesman">
    	<view type="chart" name="chart.dashboard.opportunities.won.by.salesman.bar" />
  	</action-view>
  	
  	
  
  	
  	

 <!--  Lead Graph view Dashboard  -->
  	
  	
  	<portal title="Lead Graph Dashboard" name="crm.lead.graph.portal" cols="2">
		<portlet action="portal.leads.by.source" height="350"/>
	    <portlet action="portal.leads.by.country" height="350"/>
	    <portlet action="portal.leads.by.team.by.status" height="350" colSpan="1"/>
	    <portlet action="portal.leads.by.salesman.by.status" height="350"/>
	    <portlet action="portal.leads.recent.leads" height="350" colSpan="1" canSearch="true"/>
	    
	</portal>
	 
  	<action-view name="portal.leads.by.source" title="Leads by Source">
    	<view type="chart" name="chart.leads.by.source.bar" />
  	</action-view>
  
	<action-view name="portal.leads.by.country" title="Leads by Country">
	   	<view type="chart" name="chart.leads.by.country.bar" />
	</action-view>
	  
	<action-view name="portal.leads.by.team.by.status" title="Leads by Team by Status">
	  	<view type="chart" name="chart.leads.by.team.by.status.bar" />
	</action-view>
	  
	<action-view name="portal.leads.by.salesman.by.status" title="Leads by Salesman by Status">
	  	<view type="chart" name="chart.leads.by.salesman.by.status.bar" />
	</action-view>
  
  <!--  Lead Grid View Portal -->
  	<action-view name="portal.leads.recent.leads" title="Recently created leads" model="com.axelor.apps.crm.db.Lead">
		<view type="grid" name="lead-grid"/>
		<view type="form" name="lead-form"/>
		<domain>self.createdOn &gt; date(now())-15</domain>
	</action-view>
  	<!--  Event  Graph view Dashboard  -->
  
  
	  <portal title="Event Graph Dashboard" name="crm.event.graph.portal" cols="2">
			<portlet action="portal.calls.types.by.user" height="350"/>
		    <portlet action="portal.calls.types.by.team" height="350"/>
		    <portlet action="portal.calls.by.team.by.user" height="350"/>
		    <portlet action="portal.open.tickets.by.priority" height="350"/>
		    <portlet action="portal.open.tickets.by.status" height="350"/>
			<portlet action="portal.agents.by.open.cases" height="350"/>
			<portlet action="portal.customer.by.open.cases" height="350"/>
			<portlet action="portal.open.ticket.priority.distribution" height="350"/>
		</portal>
	 
  	<action-view name="portal.calls.types.by.user" title="Calls type by user">
    	<view type="chart" name="chart.calls.types.by.user.bar" />
  	</action-view>
  
  	<action-view name="portal.calls.types.by.team" title="Calls type by team">
    	<view type="chart" name="chart.calls.types.by.team.bar" />
  	</action-view>
  
  	<action-view name="portal.calls.by.team.by.user" title="Calls by team by user">
    	<view type="chart" name="chart.calls.types.by.team.by.user.bar" />
  	</action-view>
  
  	<action-view name="portal.open.tickets.by.priority" title="Open tickets by priority">
    	<view type="chart" name="chart.open.tickets.by.priority.bar" />
  	</action-view>
	
	
	 <action-view name="portal.open.tickets.by.status" title="Open tickets by status">
    	<view type="chart" name="chart.open.tickets.by.status.bar" />
  	</action-view>
  
  	<action-view name="portal.agents.by.open.cases" title="Calls by team by user">
    	<view type="chart" name="chart.agents.by.open.cases.bar" />
  	</action-view>
  
  	<action-view name="portal.customer.by.open.cases" title="Top clients by Open Cases">
    	<view type="chart" name="chart.customer.by.open.cases.bar" />
  	</action-view>
	
	<action-view name="portal.open.ticket.priority.distribution" title="Ticket distribution by Priority">
    	<view type="chart" name="chart.open.ticket.priority.distribution.bar" />
  	</action-view>
	
  	
</object-views>
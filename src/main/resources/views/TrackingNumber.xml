<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="tracking-number-grid" title="Tracking Number" model="com.axelor.apps.base.db.TrackingNumber">
    	<field name="trackingNumberSeq"/>
    	<field name="product"/>
    	<field name="productVariant"/>
        <field name="warrantyExpirationDate"/>
        <field name="perishableExpirationDate"/>
    </grid>
    
    <form name="tracking-number-form" title="Tracking Number" model="com.axelor.apps.base.db.TrackingNumber" cols="4"
    	onLoad="action-tracking-number-attrs-hide-fields" >
    	<field name="trackingNumberSeq"/>
        <field name="product" hidden="true" onChange="action-tracking-number-attrs-hide-fields,action-tracking-number-record-product-variant"/>
        <group title="Product Variants" colSpan="4" cols="4" readonly="true">
	        <field name="productVariant" widget="NestedEditor" summary-view="true" form-view="product-variant-form" edit-window="self" canSelect="false" showTitle="false"/>
	    </group>
        <field name="warrantyExpirationDate"/>
        <field name="perishableExpirationDate"/>
        <field name="counter"/>
    </form>
    
    <action-attrs name="action-tracking-number-attrs-hide-fields">
    	<attribute name="hidden" for="warrantyExpirationDate" expr="eval: !product?.hasWarranty"/>
    	<attribute name="hidden" for="perishableExpirationDate" expr="eval: !product?.isPerishable"/>
    </action-attrs>
    
    <action-record name="action-tracking-number-record-product-variant" model="com.axelor.apps.base.db.TrackingNumber">
    	<field name="productVariant" expr="action:action-product-variant-record-on-new" if="product?.productVariantConfiguration != null"/>
    </action-record>
    
</object-views>
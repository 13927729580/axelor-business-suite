<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="prod-order-planning-grid" title="PO plannings" model="com.axelor.apps.production.db.ProdOrderPlanning">
        <field name="prodOrderPlanningSeq"/>
        <field name="startDate"/>
   		<field name="endDate"/>
    </grid>
    
    <form name="prod-order-planning-form" title="PO planning" model="com.axelor.apps.production.db.ProdOrderPlanning" cols="4"
    onNew="action-prod-order-planning-default-record">
    	<field name="prodOrderPlanningSeq" />
    	<field name="isValidated"/>
    	<group title="Dates" colSpan="2" cols="2">
    		<field name="startDate"/>
    		<field name="endDate"/>
    	</group>
    	<group title="Action" colSpan="2" cols="1">
    		<button name="runSimulation" title="Run simulation"/>
       	 	<button name="validateChanges" title="Validate changes"/>
    	</group>
        <field name="prodOrderPlanningLineList" canSelect="true" colSpan="4"/>
        <field name="prodOrderList" canSelect="true" colSpan="4"/>
    </form>
    
    <action-record name="action-prod-order-planning-default-record" model="com.axelor.apps.production.db.ProdOrderPlanning">
    	<field name="startDate" expr="eval: __date__" if="startDate == null"/>
    </action-record>
    
</object-views>

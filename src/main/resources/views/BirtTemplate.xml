<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">
    
    <grid name="birt-template-grid" title="Birt Templates" model="com.axelor.apps.base.db.BirtTemplate">
        <field name="name"/>
        <field name="templateLink"/>
    </grid>
    
    <form name="birt-template-form" title="Birt Template" model="com.axelor.apps.base.db.BirtTemplate" cols="4"
    onNew="action-birt-template-record-default">
        <field name="name"/>
        <field name="templateLink"/>
        <field name="format"/>
        <field name="generatedFilePath"/>
        <field name="birtTemplateParameterList" colSpan="4"/>
    </form>
    
    <action-record name="action-birt-template-record-default" model="com.axelor.apps.base.db.BirtTemplate">
    	<field name="format" expr="pdf"/>
    </action-record>
    
</object-views>
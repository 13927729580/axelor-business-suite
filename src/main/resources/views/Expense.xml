<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">

	<grid name="expense-edit-grid" title="Ndf" editable="true"
		model="com.axelor.apps.organisation.db.Expense">
		<field name="date" />
		<field name="expenseLineList" grid-view="expense-line-edit-grid" />
		<field name="statusSelect"/>
	</grid>

    
    <grid name="expense-grid" title="Les notes de frais" model="com.axelor.apps.organisation.db.Expense">
        <field name="employee"/>
        <field name="isRecurrentExpense"/>
        <field name="date"/>
        <field name="totalAmount"/>
        <field name="currency"/>
        <field name="paymentPeriod"/>
        <field name="statusSelect"/>
    </grid>
    
    <form name="expense-form" title="Note de frais" model="com.axelor.apps.organisation.db.Expense" cols="4">
		<field name="employee" colSpan="4"/>
        <field name="isRecurrentExpense" colSpan="2"/>
        <field name="date" />
        <field name="totalAmount"/>
       	<field name="currency" />
   	 	<field name="expenseLineList" colSpan="4"/>
   	 	<break/>
   	 	<field name="validationStatusSelect"/>
   	 	<field name="progress"/>
   	 	<field name="validationDate"/>
   	 	<field name="paymentPeriod"/>
   	 	<break/>
   	 	<field name="statusSelect"/>
   	 	<break/>
        <button name="confirm" title="Confirm" colSpan="2" onClick="save"/>
        <button name="refuse" title="Refuse" colSpan="2" onClick="save"/>
    </form>
    

</object-views>
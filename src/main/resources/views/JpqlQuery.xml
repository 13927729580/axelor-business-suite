<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
    
    <grid name="jpql-query-grid" title="Queries" model="com.axelor.apps.base.db.JpqlQuery">
        <field name="code"/>
        <field name="description"/>
        <field name="queryString"/>
    </grid>
    
    <form name="jpql-query-form" title="Query" model="com.axelor.apps.base.db.JpqlQuery" >
    	<panel>
	        <field name="code" x-bind="{{code|uppercase}}"/>
	        <field name="description"/>
	        <field name="queryString" widget="CodeEditor" x-syntax="sql" colSpan="12"/>
        </panel>
    </form>
</object-views>

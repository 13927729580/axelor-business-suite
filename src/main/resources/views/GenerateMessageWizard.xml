<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    
    <form name="generate-so-message-wizard-form"  model="com.axelor.apps.base.db.Wizard" title="Generate message" cols="4" onNew="action-generate-so-message-record-on-new">
      	<field name="template" title="Template" widget="ManyToOne[target=com.axelor.apps.base.db.Template|targetName=name]"/>
      	<button name="validate" title="Validate" onClick="action-generate-so-message-method-generate-message" colSpan="2"/>
	</form>
    
    <action-record name="action-generate-so-message-record-on-new" model="com.axelor.apps.base.db.Wizard">
    	<field name="template" expr="eval: _template"/>
    </action-record>
    
    <action-method name="action-generate-so-message-method-generate-message">
    	<call class="com.axelor.apps.message.web.GenerateMessageController" method="generateMessage"/>
    </action-method>
    
</object-views>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
	
	<grid name="import-grid" title="Import" model="com.axelor.apps.base.db.Import">
		<field name="typeSelect"/>
		<field name="date" />
		<field name="path" />
		<field name="configPath" />
	</grid>
	
	<form name="import-form" title="Import" model="com.axelor.apps.base.db.Import"
		onNew="action-default-import-record,attrs-default-import" onLoad="attrs-default-import">
		<field name="typeSelect" onChange="attrs-default-import"/>
		<field name="date" />
		<field name="path" colSpan="4" />
		<field name="configPath" colSpan="4" />
		<button name="import" title="Importer" colSpan="4"
			onClick="save,com.axelor.apps.base.web.ImportController:launchImport" />
		<field name="log" colSpan="4" />
	</form>
	
	<action-record name="action-default-import-record"
		model="com.axelor.apps.base.db.Import">
		<field name="date" expr="eval: __time__" />
		<field name="typeSelect" expr="eval: 'bdd'" if="type == 'bdd'"/>
		<field name="path" expr="/tmp/DYNAMIC/csv" />
		<field name="configPath" expr="/tmp/DYNAMIC/csv-config.xml" />	
	</action-record>

	<action-attrs name="attrs-default-import">
		<attribute name="hidden" for="path" expr="eval: typeSelect == 'bdd'"/>
	</action-attrs>

</object-views>

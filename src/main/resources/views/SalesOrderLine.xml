<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">
    
    <grid name="sale-order-line-grid" title="SO lines" model="com.axelor.apps.sale.db.SaleOrderLine" orderBy="sequence">
    	<field name="sequence"/>
	    <field name="productName"/>
	    <field name="estimatedDelivDate"/>
	    <field name="qty"/>
	    <field name="unit"/>
	    <field name="price"/>
	    <field name="taxLine.value"/>
	    <field name="exTaxTotal"/>
	</grid>
    
    <form name="sale-order-line-form" title="SO line" model="com.axelor.apps.sale.db.SaleOrderLine" cols="4" 
    onNew="action-sale-order-line-record-new,action-sale-order-line-record-sequence,action-sale-order-line-attrs-hide-product-variant"
    onLoad="action-sale-order-line-attrs-ressources-planning,action-sale-order-line-attrs-hide-product-variant,action-sale-order-line-attrs-task-readonly">
	    <group colSpan="4" cols="4">
		    <field name="sequence"/>
		    <field name="isToPrintLineSubTotal"/>
	    </group>
	    <separator colSpan="4"/>
	    <field name="product" onChange="action-sale-order-line-record-product-variant,action-sale-order-line-method-get-product-information,action-sale-order-line-method-compute,action-sale-order-line-attrs-ressources-planning,action-sale-order-line-attrs-hide-product-variant,action-sale-order-line-get-production-information" domain="(self.applicationTypeSelect = 1 or self.applicationTypeSelect = 2) and (self.endDate = null or self.endDate &gt; :__date__) "/>
	    <field name="productName"/>
	    <field name="qty" onChange="action-sale-order-line-method-get-discount,action-sale-order-line-method-compute"/>
	    <field name="unit"/>
	    <field name="price" onChange="action-sale-order-line-method-compute"/>
	    <field name="taxLine" domain="self.endDate = null or self.endDate &gt; :__date__"/>
	    <field name="exTaxTotal"/>
	    <field name="taxLine.value"/>      
	    <group name="discount" title="Discount" colSpan="4" cols="4" canCollapse="true">
	        <field name="discountTypeSelect" onChange="action-sale-order-line-method-compute"/>
	        <field name="discountAmount" onChange="action-sale-order-line-method-compute"/>
	    </group>
	    <notebook colSpan="4">
	        <page title="Settings">
	            <group colSpan="4" cols="4" colWidths="30%,10%,30%,10%">
	                <field name="saleSupplySelect" if-module="axelor-supplychain" onChange="action-sale-order-line-get-production-information,action-sale-order-line-attrs-hide-product-variant"/>
	                <break/>
	                <field name="supplierPartner" domain="self.isContact = false AND self.supplierTypeSelect in (2,3)" showIf="saleSupplySelect == 2"/>
	                <field name="task"/>
	                <field name="billOfMaterial" onSelect="action-sale-order-line-attrs-bill-of-material-domain" if-module="axelor-production"/>
	                <button name="customizeBOM" title="Customize BOM" colSpan="2" onClick="action-production-method-customize-bill-of-material" if-module="axelor-production" />
	            </group>
	        </page>
	        <page title="Notes">
	            <field name="description" colSpan="4" showTitle="false" widget="Html" x-lite="true"/>
	        </page>
	        <page title="Delivery" colSpan="4" cols="4">
    			<field name="estimatedDelivDate"/>
    			<spacer/>
    			<break/>
	        	<portlet action="action-sale-order-line-view-stock-move-line" colSpan="4"/>
	        </page> 
	        <page name="details" title="SO line details">
	            <field name="saleOrderSubLineList" colSpan="4"/>
	        </page>
	        <page title="Invoicing follow-up" if-module="axelor-supplychain">
	            <field name="isToInvoice"/>
	            <field name="isInvoiced"/>
	            <field name="invoicingDate" />
	            <field name="amountInvoiced"/>
	            <field name="amountRemainingToBeInvoiced"/>
	            <field name="invoiceSet" colSpan="6"/>
	        </page>
	        <page name="ressourcesPlanning" title="Ressources Planning">
	            <field name="employeeSet" colSpan="4" domain="self.exitDate = null or self.exitDate &gt; :__date__"/>
	            <field name="candidateSet" colSpan="4"/>
	        </page>
	    </notebook>
	</form>
    
    <!-- ACTION RECORD -->
    <action-record name="action-sale-order-line-record-new" model="com.axelor.apps.sale.db.SaleOrderLine">
    	<field name="qty" expr="eval: 1"/>
    	<field name="isOrdered" expr="true"/>
    	<field name="isToPrintLineSubTotal" expr="true" if="eval: _parent?.isToPrintLineSubTotal == true"/>
    	<field name="task" expr="eval: _parent?.project?.defaultTask"/>
    </action-record>
    
	<action-record name="action-sale-order-line-record-sequence" model="com.axelor.apps.sale.db.SaleOrderLine">
    	<field name="sequence" expr="1" if="eval: _parent?.saleOrderLineList == null"/>
    	<field name="sequence" expr="eval: _parent?.saleOrderLineList.size()+1" if="eval: _parent?.saleOrderLineList != null"/>
    </action-record>
    
    <action-record name="action-sale-order-line-get-production-information" model="com.axelor.apps.sale.db.SaleOrderLine">
    	<field name="billOfMaterial" expr="eval: product?.defaultBillOfMaterial" if="saleSupplySelect == 3 &amp; product?.defaultBillOfMaterial != null"/>
    	<field name="billOfMaterial" expr="eval: product?.parentProduct?.defaultBillOfMaterial" if="saleSupplySelect == 3 &amp; product?.defaultBillOfMaterial == null"/>
    	<field name="supplierPartner" expr="eval: product?.defaultSupplierPartner" if="saleSupplySelect == 2"/>
    </action-record>
    
   	<!-- ACTION METHOD -->
	<action-method name="action-sale-order-line-method-compute">
		<call class="com.axelor.apps.sale.web.SaleOrderLineController" method="compute"/>
	</action-method>
	
	<action-method name="action-sale-order-line-method-get-product-information">
		<call class="com.axelor.apps.sale.web.SaleOrderLineController" method="getProductInformation"/>
	</action-method>
	
	<action-method name="action-sale-order-line-method-get-discount">
		<call class="com.axelor.apps.sale.web.SaleOrderLineController" method="getDiscount"/>
	</action-method>
	
  	<!-- ACTION ATTRS -->
    <action-attrs name="action-sale-order-line-attrs-ressources-planning">
    	<attribute name="hidden" for="ressourcesPlanning" expr="eval: !(product?.applicationTypeSelect == 2 || product?.productTypeSelect == 'service' &amp;&amp; saleSupplySelect == 3)" if="product != null"/>
    	<attribute name="hidden" for="details" expr="eval: !(product?.productTypeSelect == 'service' &amp;&amp; saleSupplySelect == 3)" if="product != null"/>
    </action-attrs>
    
    <action-attrs name="action-sale-order-line-attrs-hide-product-variant">
    	<attribute name="hidden" for="productVariant" expr="eval: product?.productVariantConfiguration == null"/>
    	<attribute name="hidden" for="billOfMaterial" expr="eval: saleSupplySelect != 3 || product?.productTypeSelect == 'service' "/>
    	<attribute name="hidden" for="customizeBOM" expr="eval: saleSupplySelect != 3 || product?.productTypeSelect == 'service' "/>
    </action-attrs>
    
    <action-attrs name="action-sale-order-line-attrs-task-readonly">
		<attribute name="readonly" for="task" expr="eval: (_parent.statusSelect == 2 || _parent.statusSelect == 3 || _parent.statusSelect == 4) &amp;&amp; task != null"/>
	</action-attrs>
	
	<action-attrs name="action-sale-order-line-attrs-bill-of-material-domain">
		<attribute name="domain" for="billOfMaterial" expr="eval: &quot;(self.product.id = ${product?.parentProduct?.id} OR self.product.id = ${product?.id}) AND self.isRawMaterial = 'false'&quot;"/>
	</action-attrs>
	
<!-- 	ACTION VIEW -->
	<action-view name="action-sale-order-line-view-stock-move-line" title="" model="com.axelor.apps.stock.db.StockMoveLine">
  		<view type="grid" name="stock-move-line-all-grid"/>
		<view type="form" name="stock-move-line-all-form"/>
  		<domain>self.saleOrderLine.id = :id</domain>
  		<context name="id" expr="eval: id"/>
  	</action-view>
    
</object-views>

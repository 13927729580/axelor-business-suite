<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="invoice-line-tax-history-grid" title="Tax lines history" model="com.axelor.apps.account.db.InvoiceLineTaxHistory">
		<field name="tax"/>
		<field name="fromDate"/>
		<field name="toDate"/>
		<field name="base"/>
		<field name="rateTax"/>
		<field name="unit"/>
		<field name="vatLine.vat"/>
		<field name="baseOnSelect"/>
    </grid>
    
    <form name="invoice-line-tax-history-form" title="Tax line history" model="com.axelor.apps.account.db.InvoiceLineTaxHistory" cols="4"
    onNew="action-invoice-line-tax-history-attrs-invoice-line-details"
    onLoad="action-invoice-line-tax-history-attrs-invoice-line-details">
		<field name="tax"/>
		<field name="typeSelect"/>
		<field name="fromDate"/>
		<field name="toDate"/>
		<field name="base"/>
		<field name="rateTax"/>
		<field name="unit"/>
    	<field name="vatLine"/>
		<field name="vatLine.vat.name"/>
		<field name="vatLine.value"/>
		<field name="baseOnSelect"/>
		<field name="pricingListVersion"/>
		<field name="invoiceLineDetailList" grid-view="invoice-line-detail-grid" form-view="invoice-line-detail-form" colSpan="4" />
    </form>
	
    <action-attrs name="action-invoice-line-tax-history-attrs-invoice-line-details">
	    <attribute name="hidden" expr="eval: !invoiceLineDetailList" for="invoiceLineDetailList"/>
	</action-attrs>
    
</object-views>

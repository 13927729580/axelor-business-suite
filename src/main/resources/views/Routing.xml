<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">
	
	<grid name="routing-grid" title="Routing rules" model="com.axelor.apps.base.db.Routing">
		<field name="name"/>
		<field name="code"/>
		<field name="priority"/>
		<field name="isActive"/>
	</grid>
	
	<form name="routing-form" title="Routing rule" model="com.axelor.apps.base.db.Routing" cols="4">
		<field name="name"/>
		<field name="code"/>
		<field name="priority"/>
		<field name="isActive"/>
		<break/>
		<notebook colSpan="4">
			<page title="Filters">
				<field name="routingRuleList" colSpan="4"/>
			</page>
			<page title="Actions">
				<field name="routingActionList" colSpan="4"/>
			</page>
		</notebook>
	</form>

</object-views>
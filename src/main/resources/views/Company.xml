<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
    
    <grid name="company-grid" title="Companies" model="com.axelor.apps.base.db.Company">
        <field name="name"/>
        <field name="code"/>
        <field name="address"/>
    </grid>

<!--     <tree name="company-tree" title="Companies" model="com.axelor.apps.base.db.Company"> -->
<!--         <field name="name"/> -->
<!--     </tree> -->
    
    <form name="company-form" title="Company" model="com.axelor.apps.base.db.Company" cols="4" colWidths="20%,30%,20%,30%">
       <panel>
	    <field name="administration" />
	    <field name="name"/>
	    <field name="code"/>
	    <field name="parent"/>
	    <field name="logoPath"/>
	    <field name="partner" domain="self.isContact = false" form-view="partner-form" grid-view="partner-grid"/>
	    <field name="address" colSpan="12"/>
	    <field name="currency"/>
	  </panel>
	  <panel-tabs>
	    <panel title="Notes">
	      <field name="notes" showTitle="false" colSpan="12"/>
	    </panel>
	    <panel title="Account configuration">
	      <field name="accountConfig" showTitle="false" colSpan="12" widget="NestedEditor" canSelect="false" form-view="account-config-form" summary-view="true"/>
	    </panel>
	    <panel title="Bank details">
	      <field name="defaultBankDetails"/>
	      <panel-related field="bankDetailsSet" showTitle="false" colSpan="12" form-view="bank-details-form" grid-view="bank-details-grid"/>
	    </panel>
	    <panel title="Mails / Emails">
	      <field name="generatedMailFilePath" />
	      <field name="generatedEmailFilePath"/>
	      <field name="generatedMailFileName" />
	      <field name="generatedEmailFileName"/>
	    </panel>
	    <panel title="Supply chain configuration">
	      <field name="saleConfig" showTitle="false" colSpan="12" widget="NestedEditor" canSelect="false" form-view="sale-config-form" summary-view="true" if-module="axelor-sale"/>
	      <field name="stockConfig" showTitle="false" colSpan="12" widget="NestedEditor" canSelect="false" form-view="stock-config-form" summary-view="true" if-module="axelor-stock"/>
	      <field name="purchaseConfig" showTitle="false" colSpan="12" widget="NestedEditor" canSelect="false" form-view="purchase-config-form" summary-view="true" if-module="axelor-purchase"/>
	    </panel>
	    <panel title="Organisation">
	      <field name="taskProduct"/>
	    </panel>
	    <panel title="Printing">
	      <field name="printingSettings" showTitle="false" widget="NestedEditor" canSelect="false" edit-window="self" form-view="printing-setting-form" summary-view="true"/>
	    </panel>
	  </panel-tabs>
    </form>
    
    
    <form name="company-lite-form" title="Company" model="com.axelor.apps.base.db.Company" cols="4"  colWidths="20%,30%,20%,30%">
	    <panel readonly="true">
	    	<field name="administration" />
	        <field name="name"/>
	        <field name="code"/>
	        <field name="parent"/>
	        <field name="logoPath" />
	        <field name="partner" domain="self.isContact = false" form-view="partner-form" grid-view="partner-grid"/>
	        <field name="address" colSpan="12"/>
	        <field name="currency"/>
	        <panel title="Notes" colSpan="12">
	        	<field name="notes" showTitle="false" colSpan="12"/>
	        </panel>
	    </panel>
    </form>
	
	
</object-views>
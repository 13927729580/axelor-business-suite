<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">
    
    <grid name="stock-config-grid" title="Stock configurations" model="com.axelor.apps.stock.db.StockConfig">
        <field name="name"/>
        <field name="code"/>
        <field name="address"/>
    </grid>

    <form name="stock-config-form" title="Stock configuration" model="com.axelor.apps.stock.db.StockConfig" cols="4">
	    
        <field name="name"/>
        <field name="code"/>
        <field name="company" form-view="company-lite-form"/>

		<group title="Virtual locations informations" colWidths="30%,30%,30%,30%" colSpan="4">    
			<field name="customerVirtualLocation" domain="self.typeSelect = 3"/>
			<field name="supplierVirtualLocation" domain="self.typeSelect = 3"/>
			<field name="inventoryVirtualLocation" domain="self.typeSelect = 3"/>
		</group>
       	<group title="Stock move informations" colWidths="30%,30%,30%,30%" colSpan="4">	
			<field name="hasOutSmForStorableProduct" />
			<field name="hasOutSmForNonStorableProduct" />
			<field name="hasInSmForStorableProduct" />
			<field name="hasInSmForNonStorableProduct" />
		</group>
    </form>
	
	
</object-views>
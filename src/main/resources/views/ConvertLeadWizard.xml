<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    
    <form cols="4" name="convert-lead-wizard-form" title="Convert lead" model="com.axelor.apps.base.db.Wizard">
 		<group title="Header" colSpan="4"  colWidths="25%,25%,25%,25%">
 			<group colSpan="4" cols="4" colWidths="25%,25%,25%,25%">
 				<field name="hasConvertIntoContact" widget="BOOLEAN[type=BOOLEAN]" title="Convert into Contact ?"/>
 				<field name="contact" widget="MANY_TO_ONE[type=MANY_TO_ONE|target=com.axelor.apps.base.db.Partner]" title="Or Select Contact" domain="self.isContact = 'true'"/>
 			</group>
 			<group colSpan="4" cols="4" colWidths="25%,25%,25%,25%">
 				<field name="hasConvertIntoPartner" widget="BOOLEAN[type=BOOLEAN]" title="Convert into Partner ?" onChange="action-convert-lead-wizard-default-partner"/>
 				<field name="partner" widget="MANY_TO_ONE[type=MANY_TO_ONE|target=com.axelor.apps.base.db.Partner]" title="Or Select Partner" domain="self.isContact = 'false'"/>
 			</group>
 			
 			<field name="hasConvertIntoOpportunity" widget="BOOLEAN[type=BOOLEAN]" title="Create into Opportunity ?"/>
 			<field name="hasConvertIntoCall" widget="BOOLEAN[type=BOOLEAN]" title="Log a call ?"/>
 			<field name="hasConvertIntoMeeting" widget="BOOLEAN[type=BOOLEAN]" title="Schedule a meeting ?"/>
 			
 			<button name="validate" title="Validate" onClick="action-lead-method-convert-lead"/>
 			
 		</group>
 		
 		<group title="Partner" colSpan="4" showIf="hasConvertIntoContact">
 			<field name="partner" widget="NestedEditor[type=MANY_TO_ONE|target=com.axelor.apps.base.db.Partner]" summary-view="true" form-view="partner-lead-converted-form" edit-window="self" showTitle="false">
 			</field>
 		</group>
 		<group title="Partner" colSpan="4" showIf="hasConvertIntoPartner">
 			<field name="partner" widget="NestedEditor[type=MANY_TO_ONE|target=com.axelor.apps.base.db.Partner]" summary-view="true" form-view="partner-lead-converted-form" edit-window="self" showTitle="false">
 			</field>
 		</group>
 		<group title="Opportunity" colSpan="4" showIf="hasConvertIntoOpportunity">
 			<field name="opportunity" widget="NestedEditor[type=MANY_TO_ONE|target=com.axelor.apps.crm.db.Opportunity]" summary-view="true" form-view="opportunity-form" edit-window="self" showTitle="false">
 			</field>
 		</group>
 		<group title="Call" colSpan="4" showIf="hasConvertIntoCall">
 			<field name="call" widget="NestedEditor[type=MANY_TO_ONE|target=com.axelor.apps.crm.db.Event]" summary-view="true" form-view="event-call-form" edit-window="self" showTitle="false">
 			</field>
 		</group>
 		<group title="Meeting" colSpan="4" showIf="hasConvertIntoMeeting">
 			<field name="meeting" widget="NestedEditor[type=MANY_TO_ONE|target=com.axelor.apps.crm.db.Event]" canNew="true" canRemove="false" canView="true" canSelect="false"  summary-view="true" form-view="event-meeting-form"  edit-window="self" showTitle="false" >
 			</field>
 		</group>
 		
 		
	</form>
    
    <action-record name="action-convert-lead-wizard-default-partner" model="com.axelor.apps.base.db.Wizard">
    
    	<field name="partner" expr="call: action-convert-lead-wizard-record-opportunity,save"/>
    	
    </action-record>
    
    
    
    <action-method name="action-lead-method-convert-lead">
		<call class="com.axelor.apps.crm.web.LeadController" method="convertLead"/>
    </action-method>
    
</object-views>
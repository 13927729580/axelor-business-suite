	<form name="opportunity-lead-converted-form" title="Opportunity" model="com.axelor.apps.crm.db.Opportunity" cols="4"
    	onNew="action-opportunity-record-new,action-opportunity-record-currency">
         <group title="Informations" colSpan="4" cols="6">
	        <group title="Context" colSpan="4" cols="6">
		        <field name="name"/>
		        <field name="opportunityType" widget="TagSelect[create=name,code]"/>
	        </group>
	        <group title="Follow-up" colSpan="4" cols="6">
				<field name="salesStageSelect"/>
				<field name="source"/>
				<field name="expectedCloseDate"/>
				<field name="nextStep"/>
				<field name="probability"/>
				<field name="campaign"/>	
	        </group>
	        <group colSpan="4" cols="6">
                <group title="Financial terms" colSpan="2" cols="4">
        	        <field name="amount"/>
    		        <field name="currency"/>
    		        <field name="bestCase"/>
    		        <field name="worstCase"/>
    		    </group>
    	        <group colSpan="2">
                    <field name="description" colSpan="2"/>
                </group>
	        </group>
	    </group>    
        <group title="Assigned to" canCollapse="true">
	        <field name="userInfo"/>
	    	<field name="team"/>
	        <field name="company" widget="SuggestBox"/>
        </group>
    </form>
	
	
	<action-record name="action-convert-lead-wizard-default-opportunity" model="com.axelor.apps.crm.db.Opportunity">
    	<field name="name" expr="eval: _lead.name"/>
    	<field name="amount" expr="eval: _lead.opportunityAmount"/>
    	<field name="description" expr="eval: _lead.description"/>
    	<field name="source" expr="eval: _lead.source"/>
    	<field name="campaign" expr="eval: _lead.campaign"/>
    </action-record>
	
	
	<form name="call-lead-converted-form" title="Call" model="com.axelor.apps.crm.db.Event" cols="4" onNew="action-event-new-record">
        <group title="Informations" cols="4" colSpan="4">
        	<field name="subject" colSpan="4"/>
	        <spacer/><break/>
	        <group title="Meeting date" colSpan="4" cols="5" css="groupTitle">
	        	<field name="startDateTime" colSpan="2"/>
	         	<field name="durationHours" colSpan="2"/>
		        <field name="durationMinutesSelect" showTitle="false" colSpan="1"/>
	        </group>
	        <group title="Description" colSpan="4" cols="2" css="groupTitle">
	        	<field name="description" widget="TEXT[height=4]" colSpan="2" showTitle="false"/>
	        </group>
        </group>
        <group title="Assignment" cols="4" colSpan="4" canCollapse="true">
	        <field name="userInfo"/>
	    	<field name="team" readonlyIf="!userInfo" onSelect="action-event-attrs-team-domain"/>
        </group>
    </form>
	
	
	<action-record name="action-convert-lead-wizard-default-call-event" model="com.axelor.apps.crm.db.Event">
    	<field name="description" expr="eval: _lead.description"/>
    	<field name="_typeSelect" expr="eval: 1"/>
    </action-record>
	
	<form name="meeting-lead-converted-form" title="Meeting" model="com.axelor.apps.crm.db.Event" cols="4" onNew="action-event-new-record">
        <group title="Informations" cols="4" colSpan="4">
        	<field name="subject" colSpan="4"/>
        	<field name="meetingType"/>
	        <spacer/><break/>
	        <group title="Meeting date" colSpan="4" cols="5" css="groupTitle">
	        	<field name="startDateTime" colSpan="2"/>
	         	<field name="durationHours" colSpan="2"/>
		        <field name="durationMinutesSelect" showTitle="false" colSpan="1"/>
	        </group>
	        <group title="Description" colSpan="4" cols="2" css="groupTitle">
	        	<field name="description" widget="TEXT[height=4]" colSpan="2" showTitle="false"/>
	        </group>
        </group>
        <group title="Assignment" cols="4" colSpan="4" canCollapse="true">
	        <field name="userInfo"/>
	    	<field name="team" readonlyIf="!userInfo" onSelect="action-event-attrs-team-domain"/>
        </group>
    </form>
    
     <action-record name="action-convert-lead-wizard-default-meeting-event" model="com.axelor.apps.crm.db.Event">
    	<field name="description" expr="eval: _lead.description"/>
    	<field name="_typeSelect" expr="eval: 2"/>
    </action-record>
    
    
    <form name="crm-task-lead-converted-form" title="Task" model="com.axelor.apps.crm.db.Event" cols="4" onNew="action-event-new-record">
        <group title="Informations" cols="4" colSpan="4">
        	<field name="subject"/>
	        <field name="tertiaryStatusSelect"/>
	        <spacer/><break/>
         	<group title="Task date" colSpan="4" cols="4" colWidths="25*" css="groupTitle">
		        <field name="startDateTime" onChange="action-meeting-method-compute-start-date-time"/>
		        <field name="endDateTime" onChange="action-meeting-method-compute-end-date-time"/>
		        <field name="durationHours" onChange="action-meeting-method-compute-duration"/>
	        </group>
	        <group title="Description" colSpan="4" cols="2" css="groupTitle">
	        	<field name="description" widget="TEXT[height=4]" colSpan="2" showTitle="false"/>
	        </group>
        </group>
        <group title="Assigned to" cols="4" colSpan="4" canCollapse="true">
	        <field name="userInfo"/>
	    	<field name="team" readonlyIf="!userInfo" onSelect="action-event-attrs-team-domain"/>
        </group>
    </form>
    
    <action-record name="action-convert-lead-wizard-default-task-event" model="com.axelor.apps.crm.db.Event">
    	<field name="description" expr="eval: _lead.description"/>
    	<field name="_typeSelect" expr="eval: 3"/>
    </action-record>
	
    <action-record name="action-convert-lead-wizard-default-partner-main-invoicing-address" model="com.axelor.apps.base.db.Address">
    	<field name="addressL4" expr="eval: _lead.primaryAddress"/>
    	<field name="addressL6" expr="eval: _lead.primaryPostalCode+' '+_lead.primaryCity+' '+_lead.primaryState"/>
    	<field name="addressL7Country" expr="eval: _lead.primaryCountry"/>
    </action-record>
    
    <action-record name="action-convert-lead-wizard-default-partner-delivery-address" model="com.axelor.apps.base.db.Address">
    	<field name="addressL4" expr="eval: _lead.otherAddress"/>
    	<field name="addressL6" expr="eval: _lead.otherPostalCode+' '+_lead.otherCity+' '+_lead.otherState"/>
    	<field name="addressL7Country" expr="eval: _lead.otherCountry"/>
    </action-record>
    
    <action-method name="action-lead-method-convert-lead">
		<call class="com.axelor.apps.crm.web.ConvertLeadWizardController" method="convertLead"/>
    </action-method>
    
</object-views>

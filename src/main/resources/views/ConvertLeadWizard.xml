<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    
    <form cols="4" name="convert-lead-wizard-form" title="Convert lead" model="com.axelor.apps.base.db.Wizard" onNew="action-convert-lead-wizard-default">
 		<group title="Header" colSpan="4"  colWidths="25%,25%,25%,25%">
 			
 			<button name="validate" title="Validate" onClick="action-lead-method-convert-lead"/>
 			
 		</group>
 		
 		<group colSpan="4" cols="4" colWidths="25%,25%,25%,25%">
			<field name="hasConvertIntoContact" widget="BOOLEAN[type=BOOLEAN]" title="Convert into Contact ?"/>
			<field name="selectContactPartner" widget="MANY_TO_ONE[type=MANY_TO_ONE|target=com.axelor.apps.base.db.Partner]" title="Or Select Contact" domain="self.isContact = 'true'"/>
		</group>
		<group title="Contact" colSpan="4" showIf="hasConvertIntoContact" showTitle="false">
			<field name="contactPartner" widget="NestedEditor[type=MANY_TO_ONE|target=com.axelor.apps.base.db.Partner]" summary-view="true" 
			form-view="contact-lead-converted-form" edit-window="self" canSelect="false" showTitle="false" />
		</group>
		<group colSpan="4" cols="4" colWidths="25%,25%,25%,25%">
			<field name="hasConvertIntoPartner" widget="BOOLEAN[type=BOOLEAN]" title="Convert into Partner ?"/>
			<field name="selectPartner" widget="MANY_TO_ONE[type=MANY_TO_ONE|target=com.axelor.apps.base.db.Partner]" title="Or Select Partner" domain="self.isContact = 'false'"/>
		</group>
		<group title="Partner" colSpan="4" showIf="hasConvertIntoPartner" showTitle="false">
			<field name="partner" widget="NestedEditor[type=MANY_TO_ONE|target=com.axelor.apps.base.db.Partner]" summary-view="true" 
			form-view="partner-lead-converted-form" edit-window="self" canSelect="false" showTitle="false"/>
		</group>
		<field name="hasConvertIntoOpportunity" widget="BOOLEAN[type=BOOLEAN]" title="Create into Opportunity ?"/>
		<group title="Opportunity" colSpan="4" showIf="hasConvertIntoOpportunity"  showTitle="false">
			<field name="opportunity" widget="NestedEditor[type=MANY_TO_ONE|target=com.axelor.apps.crm.db.Opportunity]" summary-view="true" 
			form-view="opportunity-lead-converted-form" edit-window="self" canSelect="false" showTitle="false"/>
		</group>
		<field name="hasConvertIntoCall" widget="BOOLEAN[type=BOOLEAN]" title="Log a call ?"/>
		<group title="Call" colSpan="4" showIf="hasConvertIntoCall"  showTitle="false">
			<field name="callEvent" widget="NestedEditor[type=MANY_TO_ONE|target=com.axelor.apps.crm.db.Event]" summary-view="true" 
			form-view="call-lead-converted-form" edit-window="self" canSelect="false" showTitle="false"/>
		</group>
		<field name="hasConvertIntoMeeting" widget="BOOLEAN[type=BOOLEAN]" title="Schedule a meeting ?"/>
		<group title="Meeting" colSpan="4" showIf="hasConvertIntoMeeting"  showTitle="false">
			<field name="meetingEvent" widget="NestedEditor[type=MANY_TO_ONE|target=com.axelor.apps.crm.db.Event]" canNew="true" canRemove="false" canView="true" 
			canSelect="false"  summary-view="true" form-view="meeting-lead-converted-form"  edit-window="self" showTitle="false"/>
 		</group>
 		<field name="hasConvertIntoTask" widget="BOOLEAN[type=BOOLEAN]" title="Create a task ?"/>
		<group title="Task" colSpan="4" showIf="hasConvertIntoTask"  showTitle="false">
			<field name="taskEvent" widget="NestedEditor[type=MANY_TO_ONE|target=com.axelor.apps.crm.db.Event]" canNew="true" canRemove="false" canView="true" 
			canSelect="false"  summary-view="true" form-view="crm-task-lead-converted-form"  edit-window="self" showTitle="false" />
 		</group>
 		
	</form>
	
	
	<action-record name="action-convert-lead-wizard-default" model="com.axelor.apps.base.db.Wizard">
    	<field name="partner" expr="action: action-convert-lead-wizard-default-partner"/>
    	<field name="contactPartner" expr="action: action-convert-lead-wizard-default-contact"/>
    	<field name="opportunity" expr="action: action-convert-lead-wizard-default-opportunity"/>
    	<field name="callEvent" expr="action: action-convert-lead-wizard-default-call-event"/>
    	<field name="meetingEvent" expr="action: action-convert-lead-wizard-default-meeting-event"/>
    	<field name="taskEvent" expr="action: action-convert-lead-wizard-default-task-event"/>
    </action-record>
	
	
	<form cols="4" colWidths="25*"   name="contact-lead-converted-form" title="Partner" model="com.axelor.apps.base.db.Partner"
	    onNew="action-partner-record-partner-type-select,action-partner-record-set-default,action-convert-lead-wizard-default-partner">
	    <group colSpan="1">
	        <field name="picture"/>
	    </group>
	    <group colSpan="3" cols="6">
	        <field name="titleSelect" hideIf="partnerTypeSelect != 2" css="highlight"/>
	        <field name="name" css="highlight"/>
	        <field name="firstName" hideIf="partnerTypeSelect != 2" css="highlight"/>
	        <break/>
	        <field name="partnerCategory" widget="SuggestBox"/>
	        <field name="partnerTypeSelect" onChange="action-partner-attrs-change-name,action-partner-attrs-hide-tabs"/>
	        <break/>
	    </group>
	    <notebook colSpan="4">
	        <page name="information" title="Informations">
	            <group title="Partner details" colSpan="3" cols="4">
	                <field name="site"/>
	                <field name="department"/>
	                <field name="source"/>
	            </group>
	            <group title="Postal addresses" colSpan="3" cols="4">
	                <group title="Invoicing address" colSpan="2" cols="2">
			    		<field name="primaryAddress" widget="STRING[type=STRING]" title="Address"/>
			    		<field name="primaryCity" title="City"/>
			    		<field name="primaryState" title="State"/>
			    		<field name="primaryPostalCode" title="Postal code"/>
			    		<field name="primaryCountry" widget="MANY_TO_ONE[target=com.axelor.apps.base.db.Country|targetName=name]" title="Country"/>
			    	</group>
			    	<group title="Delivery address" colSpan="2" cols="2">
			    		<field name="otherAddress" title="Address"/>
			    		<field name="otherCity" title="City"/>
			    		<field name="otherState" title="State"/>
			    		<field name="otherPostalCode" title="Postal code"/>
			    		<field name="otherCountry" widget="MANY_TO_ONE[target=com.axelor.apps.base.db.Country|targetName=name]" title="Country"/>
			    	</group>
	            </group>
	            <group title="Contact" colSpan="3" cols="4">
	                <field name="email" widget="Email"/>
	                <field name="fax"/>
	                <field name="fixedPhone1"/>
	                <field name="fixedPhone2"/>
	                <field name="fixedPhonePro"/>
	                <field name="mobilePhonePerso"/>
	                <field name="mobilePhonePro"/>
	                <field name="webSite"/>
	            </group>
	        </page>
	        <page title="Settings">
	            <field name="companySet" colSpan="4" widget="TagSelect[create=name]"/>
	            <field name="languageSelect"/>
	        </page>
	    </notebook>
	</form>
	
	
	<form cols="4" colWidths="25*"   name="partner-lead-converted-form" title="Partner" model="com.axelor.apps.base.db.Partner"
	    onNew="action-partner-record-partner-type-select,action-partner-record-set-default,action-convert-lead-wizard-default-partner">
	    <group colSpan="1">
	        <field name="picture"/>
	    </group>
	    <group colSpan="3" cols="6">
	        <field name="titleSelect" hideIf="partnerTypeSelect != 2" css="highlight"/>
	        <field name="name" css="highlight"/>
	        <field name="firstName" hideIf="partnerTypeSelect != 2" css="highlight"/>
	        <break/>
	        <field name="partnerCategory" widget="SuggestBox"/>
	        <field name="partnerTypeSelect" onChange="action-partner-attrs-change-name,action-partner-attrs-hide-tabs"/>
	        <field name="isCustomer"/>
	        <field name="customerTypeSelect" hideIf="isContact || !isCustomer"/>        
	        <field name="isSupplier" hideIf="partnerTypeSelect == 2"/>
	        <field name="supplierTypeSelect" hideIf="isContact || !isSupplier"/>
	        <break/>
	    </group>
	    <break/>
	    <notebook colSpan="4">
	        <page name="information" title="Informations">
	            <group title="Partner details" colSpan="3" cols="4">
	                <field name="site"/>
	                <field name="department"/>
	                <field name="source"/>
	            </group>
	            <group title="Postal addresses" colSpan="3" cols="4">
	                <group title="Invoicing address" colSpan="2" cols="2">
			    		<field name="primaryAddress" title="Address"/>
			    		<field name="primaryCity" title="City"/>
			    		<field name="primaryState" title="State"/>
			    		<field name="primaryPostalCode" title="Postal code"/>
			    		<field name="primaryCountry" widget="MANY_TO_ONE[target=com.axelor.apps.base.db.Country|targetName=name]" title="Country"/>
			    	</group>
			    	<group title="Delivery address" colSpan="2" cols="2">
			    		<field name="otherAddress" title="Address"/>
			    		<field name="otherCity" title="City"/>
			    		<field name="otherState" title="State"/>
			    		<field name="otherPostalCode" title="Postal code"/>
			    		<field name="otherCountry" widget="MANY_TO_ONE[target=com.axelor.apps.base.db.Country|targetName=name]" title="Country"/>
			    	</group>
	            </group>
	            <group title="Contact" colSpan="3" cols="4">
	                <field name="email" widget="Email"/>
	                <field name="fax"/>
	                <field name="fixedPhone1"/>
	                <field name="fixedPhone2"/>
	                <field name="fixedPhonePro"/>
	                <field name="mobilePhonePerso"/>
	                <field name="mobilePhonePro"/>
	                <field name="webSite"/>
	            </group>
	        </page>
	        <page name="payment" title="Invoicing/Payment" cols="4">
	            <field name="invoiceSendingFormatSelect"/>
	            <field name="paymentMode"/>
	            <field name="paymentCondition"/>
	            <field name="currency"/>
	            <field name="bankDetails"/>
	        </page>
	        <page title="Settings">
	            <field name="companySet" colSpan="4" widget="TagSelect[create=name]"/>
	            <field name="languageSelect"/>
	        </page>
	    </notebook>
	</form>
	
	

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.0.xsd">
    
    <grid name="product-category-grid" title="Product categories" model="com.axelor.apps.base.db.ProductCategory" orderBy="name">
        <field name="name"/>
        <field name="code"/>
        <field name="productFamily"/>
        <field name="parentProductCategory"/>
    </grid>
    
    <form name="product-category-form" title="Product category" model="com.axelor.apps.base.db.ProductCategory" cols="6">
	    <toolbar>
			<button name="viewProducts" title="View Products" onClick="action-view-product-by-category"/>
		</toolbar>
        <field name="name"/>
        <field name="code"/>
        <field name="productFamily"/>
        <field name="parentProductCategory"/>
	<break />
	<notebook colSpan="4">
		<page title="Sales Turnover" cols="3" colWidths="20%,30%,20%,30%">
			<portlet action="portal.category.sales.turnover.per.month" colSpan="4" height="350" />
		</page>
	</notebook>
    </form>
    
    <action-view title="Category sales turnover (Excl. Tax) per month" model="com.axelor.apps.base.db.Product" name="portal.category.sales.turnover.per.month">
		  <view type="chart" name="chart.category.sales.turnover.per.month"/>
		  <context name="todayDate" expr="call:com.axelor.apps.base.service.administration.GeneralService:getTodayDate()"/>
		  <context name="activeCompany" expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserActiveCompany()"/>
	</action-view>
    
     <action-view name="action-view-product-by-category" title="Products" model="com.axelor.apps.base.db.Product">
		<view type="grid" name="product-grid"/>
		<view type="form" name="product-form"/>
		<domain>self.productCategory.id = :_productCategoryId</domain>
		<context name="_productCategoryId" expr="eval: __this__.id"/>
	</action-view>
</object-views>
		<view type="form" name="manuf-order-planning-form" />
	</action-view>

	<menuitem name="production-root-conf" parent="production-root" title="Configurations"
		icon="img/icons/parameter.png" />

	<menuitem name="production-root-conf-prod-resource" parent="production-root-conf"

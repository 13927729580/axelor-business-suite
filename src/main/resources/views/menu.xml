	<action-view name="hr.root.validationforms.timesheet" title="Timesheets to validate"
		model="com.axelor.apps.organisation.db.Timesheet" icon="img/icons/organisation_small.png">
		<view type="grid" name="timesheet-grid" />
		<view type="form" name="timesheet-form" />
		<context name="_statusSelect" expr="1"/>
	</action-view>
	
	<menuitem name="hr-root-validationforms-travelexpenses" parent="hr-root-validationforms"
		title="Travel expenses to validate" action="hr.root.validationforms.travelexpenses"/>
		
	<action-view name="hr.root.validationforms.travelexpenses" title="Travel expenses to validate"
		model="com.axelor.apps.organisation.db.Expense" icon="img/icons/organisation_small.png">
		<view type="grid" name="expense-grid" />
		<view type="form" name="expense-form" />
		<domain>self.statusSelect = 'submited'</domain>
		<context name="_activeCompany" expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserActiveCompany()"/>
	</action-view>
	
	<menuitem name="hr-root-validationforms-overtimes" parent="hr-root-validationforms"
		title="Overtimes to validate" action="hr.root.validationforms.overtimes"/>
		
	<action-view name="hr.root.validationforms.overtimes" title="Overtimes to validate"
		model="com.axelor.apps.organisation.db.Overtime" icon="img/icons/organisation_small.png">
		<view type="grid" name="overtime-grid" />
		<view type="form" name="overtime-form" />
		<domain>self.statusSelect = 'submited'</domain>
		<context name="_activeCompany" expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserActiveCompany()"/>
	</action-view>	
	
	<menuitem name="hr-root-validationforms-leave-request" parent="hr-root-validationforms"
		title="Leave requests to validate" action="hr.root.validationforms.leave.request" />

	<action-view name="hr.root.validationforms.leave.request" title="Leave requests to validate"
		model="com.axelor.apps.organisation.db.LeaveRequest" icon="img/icons/organisation_small.png">
		<view type="grid" name="leave-request-grid" />
		<view type="form" name="leave-request-form" />
		<view type="calendar" name="leave-request-calendar" />
		<domain>self.statusSelect = 2 and self.managerUserInfo.internalUser.id = :_userId or self.employeeUserInfo.internalUser.id = :_userId and self.statusSelect = 2</domain>
		<context name="_userId" expr="eval: __user__.id"/>
	</action-view>
		
	<menuitem name="hr-root-paymentforms" parent="hr-root"

	<menuitem name="hr-root-inputforms" parent="hr-root"
		title="Input forms" />

	<menuitem name="hr-root-inputforms-timesheet" parent="hr-root-inputforms"
		title="My timesheet" action="hr.root.inputforms.timesheet"/>
		
	<action-view name="hr.root.inputforms.timesheet" title="My timesheet"
		model="com.axelor.apps.organisation.db.Timesheet" icon="img/icons/organisation_small.png">
		<view type="grid" name="timesheet-grid" />
		<view type="form" name="timesheet-form" />
		<domain>self.userInfo.internalUser.id = :_internalUserId</domain>
		<context name="_internalUserId" expr="eval: __user__.id"/>
		<context name="_statusSelect" expr="1"/>
	</action-view>
	
	<menuitem name="hr-root-inputforms-travelexpenses" parent="hr-root-inputforms"
		title="My travel expenses" action="hr.root.inputforms.travelexpenses"/>
		
	<action-view name="hr.root.inputforms.travelexpenses" title="My travel expenses"
		model="com.axelor.apps.organisation.db.Expense" icon="img/icons/organisation_small.png">
		<view type="grid" name="expense-grid" />
		<view type="form" name="expense-form" />
		<domain>self.userInfo.internalUser.id = :_internalUserId</domain>
		<context name="_internalUserId" expr="eval: __user__.id"/>
		<context name="_activeCompany" expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserActiveCompany()"/>
	</action-view>
	
	<menuitem name="hr-root-inputforms-overtimes" parent="hr-root-inputforms"

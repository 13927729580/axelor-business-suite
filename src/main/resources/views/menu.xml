		<view type="grid" name="expense-grid" />
		<view type="form" name="expense-form" />
		<domain>self.statusSelect = 'validated'</domain>
		<context name="_activeCompany" expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserActiveCompany()"/>
	</action-view>
	
	<menuitem name="hr-root-paymentforms-overtimes" parent="hr-root-paymentforms"

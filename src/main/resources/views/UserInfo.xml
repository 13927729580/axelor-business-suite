<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    <grid name="user-info-grid" title="Users list" model="com.axelor.apps.base.db.UserInfo">
        <field name="fullName"/>
        <field name="partner"/>
        <field name="activeCompany"/>
        <field name="internalUser"/>
    </grid>
    <form name="user-info-form" title="User" model="com.axelor.apps.base.db.UserInfo" cols="4"
    onNew="action-user-language-record">
        <field name="partner" grid-view="partner-grid" form-view="partner-form"/>
        <field name="activeCompany" />
        <field name="today"/>
        <field name="agency"/>
        <notebook colSpan="4">
        	<page title="User login settings">
	        	<field widget="NestedEditor" canSelect="false" summary-view="true" name="internalUser">
	                <form cols="4" title="User login settings">
                      <field name="name"/>
                      <field name="group"/>
                      <field name="code"/>
                      <field widget="password" name="password"/>
	                </form>
	             </field>
        	</page>
        	<page title="Internal companies">
        		<field name="companySet" noLabel="true" colSpan="4"/>
        	</page>
        	<page title="Teams">
        		<field name="activeTeam" colSpan="2"/>
        		<field name="teamSet" noLabel="true" colSpan="4"/>
        	</page>
        	<page title="Projects">
        		<field name="projectSet" noLabel="true" colSpan="4"/>
        	</page>
        </notebook>
    </form>
    
    <action-record name="action-user-language-record" model="com.axelor.apps.base.db.UserInfo">
    	<field name="language" expr="fr"/>
    </action-record>
    
</object-views>
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
    
    <grid name="sale-config-grid" title="Sale configurations" model="com.axelor.apps.sale.db.SaleConfig">
        <field name="name"/>
        <field name="code"/>
        <field name="address"/>
    </grid>

	<form name="sale-config-form" title="Sale configuration" model="com.axelor.apps.sale.db.SaleConfig">
	  <panel title="Basic">
	    <field name="name" x-span="4"/>
	    <field name="code" x-span="4"/>
	    <field name="company" form-view="company-lite-form" x-span="4"/>
	  </panel>
	  <panel title="Invoicing informations">
	    <field name="saleOrderInvoicingTypeSelect"/>
	  </panel>
	</form>
	
</object-views>
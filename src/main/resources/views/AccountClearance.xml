<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
    
    <grid name="account-clearance-grid" title="Account clearance operations" model="com.axelor.apps.account.db.AccountClearance">
        <field name="name"/>
        <field name="dateTime"/>
        <field name="user"/>
        <field name="amountThreshold"/>
        <field name="dateThreshold"/>
        <field name="company"/>
        <field name="status"/>
    </grid>
    
<form  onLoad="action-account-clearance-attrs-hidden-buttons" onNew="action-account-clearance-record-default" name="account-clearance-form" title="Account clearance" model="com.axelor.apps.account.db.AccountClearance">
	 <panel title="General">
	   <field name="name"/>
	   <field name="dateTime"/>
	   <field name="user"/>
	   <field name="company" widget="SuggestBox"/>
	   <field name="status"/>
	 </panel>
	<panel title="Clearance settings" >
	    <field name="amountThreshold"/>
	    <field name="dateThreshold"/>
	</panel>
	<panel-tabs>
	  <panel-related field="moveLineSet"/>  
	</panel-tabs>
	<panel-side title="Actions"> 
	    <button name="getExcessPayment" title="Get overdue payments"  onClick="action-group-account-account-clearance-excesspayment-click"/>
	    <button name="validateAccountClearance" title="Validate account clearances" onClick="action-group-account-account-clearance-validate-click"/>
	    <button name="showAccountClearanceMoveLines" title="Move lines generated"  onClick="action-method-account-clearance-show-move-lines"/> 
	</panel-side>
</form>
    
    <action-group name="action-group-account-account-clearance-excesspayment-click">
    	<action name="save"/>
    	<action name="action-method-account-clearance-get-excesspayment"/>
    	<action name="save"/>
    </action-group>
    
    <action-group name="action-group-account-account-clearance-validate-click">
	    <action name="save"/>
	    <action name="action-method-account-clearance-validate"/>
	    <action name="action-account-clearance-attrs-hidden-buttons"/>
	    <action name="save"/>
    </action-group>
    
    <action-method name="action-method-account-clearance-get-excesspayment">
    	<call class="com.axelor.apps.account.web.AccountClearanceController" method="getExcessPayment"/>
    </action-method>
    
    <action-method name="action-method-account-clearance-validate">
    	<call class="com.axelor.apps.account.web.AccountClearanceController" method="validateAccountClearance"/>
    </action-method>
    
    <action-method name="action-method-account-clearance-show-move-lines">
    	<call class="com.axelor.apps.account.web.AccountClearanceControllerSimple" method="showAccountClearanceMoveLines"/>
    </action-method>
    
	<action-attrs name="action-account-clearance-attrs-hidden-buttons">
	    <attribute name="hidden" expr="eval: status.code == 'val'" for="getExcessPayment"/>
   	    <attribute name="hidden" expr="eval: status.code == 'val'" for="validateAccountClearance"/>
	</action-attrs>
    
    <action-record name="action-account-clearance-record-default" model="com.axelor.apps.account.db.AccountClearance">
        <field name="status" expr="action:action-status-record-dra"/>
        <field name="user" expr="eval:__user__"/>
   		<field name="company"   expr="eval:__user__.activeCompany"/>
    </action-record>
    
</object-views>
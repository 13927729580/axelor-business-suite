<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
    
    <grid name="period-grid" title="Period" model="com.axelor.apps.account.db.Period">
        <field name="name"/>
        <field name="code"/>
        <field name="year"/>
        <field name="fromDate"/>
        <field name="toDate"/>
        <field name="company"/>
        <field name="status"/>
    </grid>
    
    <form name="period-form" title="Period" model="com.axelor.apps.account.db.Period" cols="4"
	    onNew="action-period-record-open,action-period-attrs-button"
	    onLoad="action-period-attrs-button">
        <field name="name"/>
        <field name="code"/>
        <field name="year"/>
        <break/>
        <field name="fromDate"/>
        <field name="toDate"/>
        <field name="company"/>
        <field name="status"/>
        <break/>
        <group colSpan="4" cols="4">
        	<button name="close" title="Close period" colSpan="2" onClick="action-period-record-close,action-period-attrs-button,save"/>
        	<button name="reopen" title="Reopen period" colSpan="2" onClick="action-period-record-open,action-period-attrs-button,save"/>
        </group>
    </form>
    
    <action-record name="action-period-record-close" model="com.axelor.apps.account.db.Period">
    	<field name="status" expr="action:action-status-record-clo"/>
    </action-record>
    
    <action-record name="action-period-record-open" model="com.axelor.apps.account.db.Period">
    	<field name="status" expr="action:action-status-record-ope"/>
    	<field name="company"  expr="call:com.axelor.apps.base.service.user.UserInfoService:getUserActiveCompany()"/>
     </action-record>
    
	 <action-attrs name="action-period-attrs-button">
	    <attribute name="hidden" expr="eval : status?.code == 'clo'" for="close"/>
	    <attribute name="hidden" expr="eval: status?.code == 'ope'" for="reopen"/>
	</action-attrs>
    
</object-views>
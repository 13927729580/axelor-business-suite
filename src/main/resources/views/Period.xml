<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
    
    <grid name="period-grid" title="Period" model="com.axelor.apps.base.db.Period">
        <field name="name"/>
        <field name="code" />
        <field name="year" title="Fiscal year"/>
        <field name="fromDate"/>
        <field name="toDate"/>
        <field name="company"/>
        <field name="status"/>
    </grid>
    
    <form name="period-form" title="Period" model="com.axelor.apps.base.db.Period"  
	    onNew="action-period-record-default">
	    <panel>
	        <field name="name"/>
	    	<field name="code" x-bind="{{code|uppercase}}"/>
	    	<field name="fromDate"/>
	    	<field name="toDate"/>
	    	<field name="year" title="Fiscal year"/>   
	    	<field name="company" widget="SuggestBox"/>
    	</panel>
    	<panel>
        	<panel colSpan="6">
            	<button name="close" title="Close period" colSpan="2" onClick="action-period-record-close,save" showIf="statusSelect == 1"/>
            	<button name="reopen" title="Reopen period" colSpan="2" onClick="action-period-record-open,save" showIf="statusSelect == 2"/>
        	</panel>
            <field name="statusSelect"/>
    	</panel>
    </form>
    
    <action-record name="action-period-record-close" model="com.axelor.apps.base.db.Period">
    	<field name="status" expr="action:action-status-record-clo"/>
    </action-record>
    
    <action-record name="action-period-record-default" model="com.axelor.apps.base.db.Period">
    	<field name="company"  expr="eval:__user__.activeCompany"/>
     </action-record>
    
     <action-record name="action-period-record-open" model="com.axelor.apps.base.db.Period">
    	<field name="status" expr="action:action-status-record-ope"/>
     </action-record>
    
</object-views>
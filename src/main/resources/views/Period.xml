<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_2.1.xsd">
    
    <grid name="period-grid" title="Period" model="com.axelor.apps.base.db.Period">
        <field name="name"/>
        <field name="code"/>
        <field name="year" title="Fiscal year"/>
        <field name="fromDate"/>
        <field name="toDate"/>
        <field name="company"/>
        <field name="status"/>
    </grid>
    
    <form name="period-form" title="Period" model="com.axelor.apps.base.db.Period" cols="4"
	    onNew="action-grouop-base-period-onnew"
	    onLoad="action-period-attrs-button">
	    <panel>
	        <field name="name"/>
	    	<field name="code"/>
	    	<field name="fromDate"/>
	    	<field name="toDate"/>
	    	<field name="year" title="Fiscal year"/>   
	    	<field name="company" widget="SuggestBox"/>
    	</panel>
    	<panel>
        	<panel x-span="6">
            	<button name="close" title="Close period" colSpan="2" onClick="action-grouop-base-period-close-click"/>
            	<button name="reopen" title="Reopen period" colSpan="2" onClick="action-grouop-base-period-reopen-click"/>
        	</panel>
            <field name="status"/>
    	</panel>
    </form>
    
    <action-group name="action-grouop-base-period-onnew">
    	<action name="action-period-record-open"/>
    	<action name="action-period-attrs-button"/>
    </action-group>
    
    <action-group name="action-grouop-base-period-close-click">
    	<action name="action-period-record-close"/>
    	<action name="action-period-attrs-button,save"/>
    </action-group>
    
    <action-group name="action-grouop-base-period-reopen-click">
    	<action name="action-period-record-open"/>
    	<action name="action-period-attrs-button,save"/>
    </action-group>
    
    <action-record name="action-period-record-close" model="com.axelor.apps.base.db.Period">
    	<field name="status" expr="action:action-status-record-clo"/>
    </action-record>
    
    <action-record name="action-period-record-open" model="com.axelor.apps.base.db.Period">
    	<field name="status" expr="action:action-status-record-ope"/>
    	<field name="company"  expr="eval:__user__.activeCompany"/>
     </action-record>
    
	 <action-attrs name="action-period-attrs-button">
	    <attribute name="hidden" expr="eval : status?.code == 'clo'" for="close"/>
	    <attribute name="hidden" expr="eval: status?.code == 'ope'" for="reopen"/>
	</action-attrs>
    
</object-views>
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_3.0.xsd">

	<form name="stock-move-supplychain-multi-sale-invoicing-form" model="com.axelor.apps.stock.db.StockMove" title="Multi. sale invoicing" >
		<panel-related field="$customerStockMoveToInvoice" title="Customer Stock Move to invoice" colSpan="12" type="many-to-many" target="com.axelor.apps.stock.db.StockMove" domain="self.statusSelect = 3 AND self.typeSelect = 2" canNew="false" canEdit="false"/>
		<panel sidebar="true" title="Actions">
			<button name="generateInvoiceConcatStockMove" title="Generate single invoice" onClick="action-validate-supplychain-customer-stock-move-check-selection,action-supplychain-stock-move-method-generate-concat-invoice"/>
			<button name="generateMultiInvoice" title="Generate one invoice per stockMove" onClick="action-validate-supplychain-customer-stock-move-check-selection,action-supplychain-stock-move-method-generate-multi-invoice"/>
	  	</panel>
    </form>
    
    <form name="stock-move-supplychain-multi-purchase-invoicing-form" model="com.axelor.apps.stock.db.StockMove" title="Multi. purchase invoicing" >
		<panel-related field="$supplierStockMoveToInvoice" title="Supplier Stock Move to invoice" colSpan="12" type="many-to-many" target="com.axelor.apps.stock.db.StockMove" domain="self.statusSelect = 3 AND self.typeSelect = 3" canNew="false" canEdit="false"/>
		<panel sidebar="true" title="Actions">
			<button name="generateInvoiceConcatStockMove" title="Generate single invoice" onClick="action-validate-supplychain-supplier-stock-move-check-selection,action-supplychain-stock-move-method-generate-concat-invoice"/>
			<button name="generateMultiInvoice" title="Generate one invoice per stockMove" onClick="action-validate-supplychain-supplier-stock-move-check-selection,action-supplychain-stock-move-method-generate-multi-invoice"/>
	  	</panel>
    </form>
    
    <form name="stock-move-supplychain-concat-invoice-confirm-form" model="com.axelor.apps.stock.db.StockMove" title="Confirmation" onNew="action-record-load-dummy-field">
		<panel>
			<field name="$paymentCondition" title="Payment condition" target="com.axelor.apps.account.db.PaymentCondition" colSpan="12" width="200px" widget="SuggestBox" showIf="paymentConditionToCheck"/>
			<field name="$paymentMode" title="Payment mode" target="com.axelor.apps.account.db.PaymentMode" colSpan="12" width="200px" widget="SuggestBox" showIf="paymentModeToCheck"/>
			<field name="$contactPartner" title="Contact partner" target="com.axelor.apps.base.db.Partner" domain="self.isContact IS TRUE AND EXISTS (SELECT 1 FROM Partner part WHERE part.id = :partnerId AND self.id IN (SELECT id FROM part.contactPartnerSet))" colSpan="12" width="200px" widget="SuggestBox" showIf="contactPartnerToCheck"/>
			<button name="confirm" title="Confirmer" onClick="action-supplychain-stock-move-confirm-concat-invoice-check, action-supplychain-stock-move-method-generate-concat-invoice" colSpan="12" width="200px"/>
		</panel>
    </form>

	<action-method name="action-supplychain-stock-move-method-generate-invoice">
		<call class="com.axelor.apps.supplychain.web.StockMoveInvoiceController" method="generateInvoice"/>
	</action-method>
	
	<action-method name="action-supplychain-stock-move-method-generate-multi-invoice">
		<call class="com.axelor.apps.supplychain.web.StockMoveInvoiceController" method="generateMultiInvoice"/>
	</action-method>
	
	<action-method name="action-supplychain-stock-move-method-generate-concat-invoice">
		<call class="com.axelor.apps.supplychain.web.StockMoveInvoiceController" method="generateInvoiceConcatStockMove"/>
	</action-method>
	
	<action-validate name="action-validate-supplychain-customer-stock-move-check-selection">
		<error message="You have to choose at least one stock move" if="customerStockMoveToInvoice == null || customerStockMoveToInvoice.size() == 0"/>
	</action-validate>
	
	<action-validate name="action-validate-supplychain-supplier-stock-move-check-selection">
		<error message="You have to choose at least one stock move" if="supplierStockMoveToInvoice == null || supplierStockMoveToInvoice.size() == 0"/>
	</action-validate>
	
	<action-condition name="action-supplychain-stock-move-confirm-concat-invoice-check">
		<check error="A payment condition must be selected" field="$paymentCondition" if="paymentConditionToCheck &amp;&amp; paymentCondition == null"/>
		<check error="A payment mode must be selected" field="$paymentMode" if="paymentModeToCheck &amp;&amp; paymentMode == null"/>
		<check error="A contact partner must be selected" field="$contactPartner" if="contactPartnerToCheck &amp;&amp; contactPartner == null"/>
	</action-condition>

</object-views>	
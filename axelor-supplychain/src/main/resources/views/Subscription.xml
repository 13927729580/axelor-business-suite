<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_3.0.xsd">
	
	<grid name="subscription-grid" title="Subscriptions" model="com.axelor.apps.supplychain.db.Subscription">
		<field name="invoicingDate"/>
	    <field name="fromPeriodDate"/>
	    <field name="toPeriodDate"/>
	    <field name="quantity"/>
	    <field name="unitPrice"/>
	    <field name="invoiced"/>
	    <button name="invoiceSubscription" onClick="save,com.axelor.apps.supplychain.web.SubscriptionController:generateInvoice" icon="fa-credit-card" title="Invoice" readonlyIf="invoiced == true"/>
	</grid>
	
	<form model="com.axelor.apps.supplychain.db.Subscription" title="Subscription" name="subscription-form">
		<field name="invoicingDate"/>
	    <field name="fromPeriodDate"/>
	    <field name="toPeriodDate"/>
	    <field name="quantity"/>
	    <field name="unitPrice"/>
	    <field name="invoiced" readonly="true"/>
	    <button name="invoiceSubscription" onClick="save,com.axelor.apps.supplychain.web.SubscriptionController:generateInvoice" icon="fa-credit-card" title="Invoice" readonlyIf="invoiced == true"/>
	</form>
	
</object-views>
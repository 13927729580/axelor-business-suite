<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_3.0.xsd">
	
	<form name="convert-opportunity-form" title="Opportunity" model="com.axelor.apps.crm.db.Opportunity">
		<panel colSpan="12">
			<button name="generateSaleOrder" title="Convert into order" onClick="action-supplychain-group-generate-sale-order"/>
			<field name="saleOrder" title="Sale Order" hideIf="saleOrder == null"/>
		</panel>
	</form>
	
	<action-group name="action-supplychain-group-generate-sale-order">
		<action name="action-supplychain-validate-create-client" if="partner == null"/>
		<action name="save"/>
		<action name="action-supplychain-method-create-client" if="partner == null"/>
		<action name="action-supplychain-method-generate-sale-order"/>
	</action-group>
	
	<action-validate name="action-supplychain-validate-create-client">
		<alert message="No client selected, a new one will be created from the lead, do you agree?"/>
	</action-validate>
	
	<action-method name="action-supplychain-method-create-client">
		<call class="com.axelor.apps.supplychain.web.OpportunitySaleOrderController" method="createClient"/>
	</action-method>
	
	<action-method name="action-supplychain-method-generate-sale-order">
		<call class="com.axelor.apps.supplychain.web.OpportunitySaleOrderController" method="generateSaleOrder"/>
	</action-method>
	
</object-views>	
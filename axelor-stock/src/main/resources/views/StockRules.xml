<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
    
    <grid name="stock-rules-grid" title="Stock rules" model="com.axelor.apps.stock.db.StockRules">
        <toolbar>
        <button name="checkDuplicate" title="Check Duplicate" onClick="action-base-method-show-duplicate"/>
        </toolbar>
        <field name="location" form-view="location-form" grid-view="location-grid"/>
        <field name="product.code" form-view="product-form" grid-view="product-grid"/>
        <field name="product.name" form-view="product-form" grid-view="product-grid"/>
        <field name="minQty" aggregate="min"/>
        <field name="maxQty" aggregate="min"/>
        <field name="reOrderQty" aggregate="sum"/>
		<field name="useCaseSelect"/>
        <field name="typeSelect"/>
        <field name="orderAlertSelect"/>
    </grid>
    
    <form name="stock-rules-form" title="Stock rules" model="com.axelor.apps.stock.db.StockRules"
    	onNew="action-stock-rules-record-new" width="large">
    	<panel name="main" >
	        <field name="location" form-view="location-form" grid-view="location-grid"/>
			<field name="useCaseSelect" colSpan="3"/>
			<field name="typeSelect" colSpan="3" showIf="useCaseSelect == 2"/>
	        <field name="product" domain="self.productTypeSelect = 'storable'" form-view="product-form" grid-view="product-grid"/>
			<field name="orderAlertSelect"/>
	        <field name="minQty"/>
	        <field name="maxQty"/>
	        <field name="reOrderQty"/>
        </panel>
		<panel name="reorderingManagedBy" title="Reordering managed by">
			<field name="user" form-view="user-form" grid-view="user-grid"/>
	        <field name="team" form-view="team-form" grid-view="team-grid"/>
		</panel>
    </form>
    
    <action-record name="action-stock-rules-record-new" model="com.axelor.apps.stock.db.StockRules">
	    <field name="minQty" expr="1"/>
	    <field name="orderAlertSelect" expr="1"/>
	    <field name="useCaseSelect" expr="1"/>
	    <field name="user" expr="eval:__user__"/>
	    <field name="team"  expr="call:com.axelor.apps.base.service.user.UserService:getUserActiveTeam()"/>
	</action-record>
    
</object-views>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_4.0.xsd">
	
	
	<menuitem name="sc-root-purchase" title="Purchases" order="-150" 
		icon="fa-shopping-cart" groups="admins,ERP"/>
		
	<menuitem name="sc-root-purchase-order-new" title="New Purchase order" order="-2" 
		groups="admins,ERP" action="sc.root.purchase.order.new" parent="sc-root-purchase"/>
		
	<action-view name="sc.root.purchase.order.new" title="New Purchase order"
		model="com.axelor.apps.purchase.db.PurchaseOrder" >
		<view type="form" name="purchase-order-form" />
		<view type="grid" name="purchase-order-grid" />
	</action-view>	
	
	<menuitem name="sc-root-purchase-orders" title="Purchase orders" order="-1" 
		groups="admins,ERP" action="sc.root.purchase.orders" parent="sc-root-purchase"/>

	<action-view name="sc.root.purchase.orders" title="Purchase orders"
		model="com.axelor.apps.purchase.db.PurchaseOrder" >
		<view type="grid" name="purchase-order-grid" />
		<view type="form" name="purchase-order-form" />
		<view-param name="search-filters" value="purchase-order-filters"/>
		<context name="_internalUser" expr="eval: __user__.id"/>
	</action-view>
	
	<menuitem name="purchase-order-merge" parent="sc-root-purchase"
    	title="Merge purchase orders" action="purchase.order.merge" groups="admins,ERP"/> 

	<action-view name="purchase.order.merge" title="Merge purchase orders" model="com.axelor.apps.base.db.Wizard">
	    <view type="form" name="purchase-order-merge-form"/>
	</action-view>



<!-- ADMINISTRATION -->


	<menuitem name="admin-root-batch-purchase" parent="admin-root-batch"
		title="Purchase batches" action="admin.root.batch.purchase" />

	<action-view name="admin.root.batch.purchase" title="Purchase batches"
		model="com.axelor.apps.purchase.db.PurchaseBatch" >
		<view type="grid" />
		<view type="form" />
	</action-view>
	
	
	<menuitem name="admin-root-conf-purchase-config" parent="admin-root-conf"
		title="Purchase configurations" action="admin.root.conf.purchase.config" />
		
	<action-view name="admin.root.conf.purchase.config" title="Purchase configurations"
		model="com.axelor.apps.purchase.db.PurchaseConfig" >
		<view type="grid" />
		<view type="form" />
	</action-view>



<!-- TOP MENU -->

	<menuitem name="top-purchase" title="Purchases" groups="admins,ERP" top="true" left="false" order="-150"/>
	
	<menuitem name="top-purchase-create-rfq" title="Create RFQ" order="-100" parent="top-purchase" action="sc.root.purchase.order.new"/>
	<menuitem name="top-purchase-orders-all" title="RFQs &amp; Orders" order="-70" action="sc.root.purchase.orders" parent="top-purchase" groups="admins,ERP" top="true" left="false"/>		
	
	<menuitem name="top-purchase-quotes" title="View RFQ" order="-90" action="top.purchase.quotes" parent="top-purchase" groups="admins,ERP" top="true" left="false"/>		
	
	<action-view name="top.purchase.quotes" title="RFQ"
		model="com.axelor.apps.purchase.db.PurchaseOrder" >
		<view type="grid" name="purchase-order-grid" />
		<view type="form" name="purchase-order-form" />
		<view-param name="search-filters" value="purchase-order-filters"/>
		<domain>self.statusSelect in (2,3) </domain>
	</action-view>	
	
	<menuitem name="top-purchase-orders" order="-80" title="View Orders" action="top.purchase.orders" parent="top-purchase" groups="admins,ERP" top="true" left="false"/>		
	
	<action-view name="top.purchase.orders" title="Orders"
		model="com.axelor.apps.purchase.db.PurchaseOrder" >
		<view type="grid" name="purchase-order-grid" />
		<view type="form" name="purchase-order-form" />
		<view-param name="search-filters" value="purchase-order-filters"/>
		<domain>self.statusSelect in (4,5) </domain>
	</action-view>
	
	<menuitem name="menu-purchase-buyer-dashboard-sample" parent="menu-dashboards-sample" order="-190"
		title="Purchase Buyer Db"  action="purchase.buyer.dashboard.view.sample" />	

	<action-view name="purchase.buyer.dashboard.view.sample" title="Purchase Buyer Dashboard"
		>
		<view type="dashboard" name="purchase.buyer.dashboard.sample" />
    	<context name="_user" expr="eval:__user__"/>
    	<context name="_user_id" expr="eval:__user__.id"/>
	</action-view>
	
	<menuitem name="menu-purchase-manager-dashboard-sample" parent="menu-dashboards-sample" order="-180"
		title="Purchase Manager Db"  action="purchase.manager.dashboard.view.sample" />	

	<action-view name="purchase.manager.dashboard.view.sample" title="Purchase Manager Dashboard"
		>
		<view type="dashboard" name="purchase.manager.dashboard.sample" />
	</action-view>
	
	<menuitem name="menu-purchase-order-dashboard-sample" parent="menu-dashboards-sample"  order="-170"
		title="Purchase Order Db"  action="purchase.order.dashboard.view.sample" />	
		
	<action-view name="purchase.order.dashboard.view.sample" title="Purchase Order Dashboard"
		>
		<view type="dashboard" name="purchase.order.dashboard.sample" />	    
	</action-view>
	
	<menuitem name="menu-purchase-dashboard" parent="menu-dashboards"  
		title="Purchases" order="-60" />	
	
	<menuitem name="menu-purchase-dashboard-1" parent="menu-purchase-dashboard"  
		title="Purchases Db 1"  action="purchase.dashboard.1" />	
		
	<action-view name="purchase.dashboard.1" title="Purchases Db 1"
		>
		<view type="dashboard" name="purchase.dashboard.1" />	 
		<context name="_user_id" expr="eval:__user__.id"/>   
	</action-view>
	
	<menuitem name="menu-purchase-dashboard-2" parent="menu-purchase-dashboard"  
		title="Purchases Db 2"  action="purchase.dashboard.2" />	
		
	<action-view name="purchase.dashboard.2" title="Purchases Db 2"
		>
		<view type="dashboard" name="purchase.dashboard.2" />	    
	</action-view>
	
	<menuitem name="menu-purchase-dashboard-3" parent="menu-purchase-dashboard"  
		title="Purchases Db 3"  action="purchase.purchase.dashboard.3" />	
		
	<action-view name="purchase.purchase.dashboard.3" title="Purchases Db 3"
		>
		<view type="dashboard" name="purchase.dashboard.3" />	    
	</action-view>
	
	
</object-views>
